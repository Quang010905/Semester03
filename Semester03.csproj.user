<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="Current" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

	<!-- Giữ PropertyGroup hợp lệ để tránh lỗi schema -->
	<PropertyGroup>
		<Configuration Condition=" '$(Configuration)' == '' ">Debug</Configuration>
		<Platform Condition=" '$(Platform)' == '' ">AnyCPU</Platform>
	</PropertyGroup>

	<!-- Visual Studio sẽ đọc các thiết lập user / extensions từ ProjectExtensions -->
	<ProjectExtensions>
		<VisualStudio>
			<UserProperties>
				<ActiveDebugProfile>https</ActiveDebugProfile>

				<!-- Scaffolder selection (giữ AreaScaffolder theo yêu cầu của bạn) -->
				<_SelectedScaffolderID>AreaScaffolder</_SelectedScaffolderID>
				<_SelectedScaffolderCategoryPath>root/Common</_SelectedScaffolderCategoryPath>

				<!-- Thiết lập View/Controller scaffolder -->
				<View_SelectedScaffolderID>RazorViewEmptyScaffolder</View_SelectedScaffolderID>
				<View_SelectedScaffolderCategoryPath>root/Common/MVC/View</View_SelectedScaffolderCategoryPath>

				<Controller_SelectedScaffolderID>MvcControllerEmptyScaffolder</Controller_SelectedScaffolderID>
				<Controller_SelectedScaffolderCategoryPath>root/Common/MVC/Controller</Controller_SelectedScaffolderCategoryPath>
			</UserProperties>

			<!-- Các thiết lập WebStackScaffolding -->
			<WebStackScaffolding>
				<DependencyDialogWidth>650</DependencyDialogWidth>
				<ViewDialogWidth>650</ViewDialogWidth>
			</WebStackScaffolding>
		</VisualStudio>
	</ProjectExtensions>

</Project>
