            background: #ffffff;
            border-radius: 0.9rem;
            padding: 0.9rem;
            box-shadow: 0 6px 18px rgba(15, 23, 42, 0.08);
            text-align: center;
            cursor: pointer;
            transition: transform 0.25s ease, box-shadow 0.25s ease, background 0.25s ease;
            border: 1px solid transparent;
        }

            .category-item:hover {
                transform: translateY(-3px);
                box-shadow: 0 14px 32px rgba(15, 23, 42, 0.15);
                border-color: rgba(37, 99, 235, 0.2);
            }

            .category-item img {
                width: 56px;
                height: 56px;
                object-fit: cover;
                border-radius: 18px;
                margin-bottom: 0.4rem;
            }

            .category-item span {
                font-weight: 600;
                display: block;
                font-size: 0.9rem;
                color: #0f172a;
            }

            .category-item small {
                display: block;
                font-size: .75rem;
                color: var(--text-muted);
            }

        .category-products {
            background: var(--bg-soft);
            border-radius: 0.9rem;
            padding: 1rem;
            margin-top: 1rem;
            border: 1px dashed #d1d5db;
        }

        .category-products-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: .5rem;
        }

        .category-products-title {
            font-size: 0.95rem;
            font-weight: 700;
        }

        .btn-close-products {
            border-radius: 999px;
        }

        .product-card {
            border-radius: 0.9rem;
            overflow: hidden;
            border: none;
            box-shadow: 0 8px 18px rgba(15, 23, 42, 0.08);
            transition: transform .2s ease, box-shadow .2s ease;
        }

            .product-card:hover {
                transform: translateY(-4px);
                box-shadow: 0 14px 30px rgba(15, 23, 42, 0.16);
            }

            .product-card img {
                height: 160px;
                object-fit: cover;
            }

            .product-card .card-body {
                padding: 0.6rem 0.7rem 0.75rem;
            }

            .product-card .card-title {
                font-size: 0.9rem;
                margin-bottom: 0.1rem;
            }

        .product-price {
            font-size: 0.9rem;
            font-weight: 700;
        }

        .see-more-btn {
            background: #ff7f32;
            border: none;
            font-weight: 700;
            font-size: 0.95rem;
            color: #fff;
            padding: 8px 22px;
            border-radius: 999px;
            cursor: pointer;
            transition: all 0.25s ease;
            box-shadow: 0 4px 14px rgba(255, 127, 50, 0.45);
            display: inline-flex;
            align-items: center;
            gap: .35rem;
        }

            .see-more-btn:hover {
                background: #e96b1d;
                transform: translateY(-1px);
            }

        .comment-box {
            margin-top: 1.75rem;
            border-radius: 1rem;
            background: #ffffff;
            padding: 1.25rem;
            box-shadow: var(--shadow-soft);
        }

        .comment-form-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: .75rem;
            flex-wrap: wrap;
        }

            .comment-form-header small {
                color: var(--text-muted);
                font-size: 0.8rem;
            }

        .comment-item {
            border-bottom: 1px solid #e5e7eb;
            padding: .85rem 0;
        }

            .comment-item:last-child {
                border-bottom: none;
            }

        .comment-user {
            font-weight: 600;
            margin-right: .35rem;
        }

        .comment-time {
            color: #94a3b8;
            font-size: .85rem;
        }

        .comment-text {
            margin-top: .35rem;
            font-size: .9rem;
            white-space: pre-line;
            word-wrap: break-word;
            overflow-wrap: break-word;
        }

        .comment-empty {
            color: var(--text-muted);
            font-size: .9rem;
        }

        .btn-primary-rounded {
            border-radius: 999px;
            padding-inline: 1.2rem;
        }

        .alert-info a {
            text-decoration: none;
        }

            .alert-info a:hover {
                text-decoration: underline;
            }

        /* ===== PROMOTIONS ===== */
        .promotion-box {
            background: #fff;
            border-radius: 1rem;
            padding: 1rem 1.2rem;
            box-shadow: var(--shadow-soft);
            margin-top: 1.5rem;
        }

        .promotion-list {
            display: flex;
            flex-direction: column;
            gap: 1.25rem;
        }

        .promotion-item {
            display: grid;
            grid-template-columns: 240px 1fr;
            gap: 1rem;
            align-items: start;
        }

        .promotion-banner img {
            width: 100%;
            height: 150px;
            object-fit: cover;
            border-radius: .75rem;
            box-shadow: 0 8px 18px rgba(15, 23, 42, 0.15);
        }

        .promotion-body {
            display: flex;
            flex-direction: column;
            font-size: .92rem;
        }

        .promotion-title {
            font-size: 1.05rem;
            font-weight: 700;
        }

        .discount-main {
            background: #ef4444;
            padding: 2px 10px;
            color: #fff;
            border-radius: .5rem;
            font-weight: 700;
            display: inline-block;
            margin-top: .3rem;
        }

        .promotion-cond {
            font-size: .85rem;
        }

        /* ✔ Description của promotion: SmartEditor + auto xuống dòng mạnh */
        .promotion-desc {
            margin-top: .5rem;
            font-size: .9rem;
            line-height: 1.5;
            word-break: break-all;
            overflow-wrap: anywhere;
        }

            .promotion-desc * {
                max-width: 100%;
                box-sizing: border-box;
                white-space: normal !important;
                word-break: break-all !important;
                overflow-wrap: anywhere !important;
            }

            .promotion-desc img,
            .promotion-desc video,
            .promotion-desc iframe {
                max-width: 100% !important;
                height: auto !important;
            }

        .promotion-time {
            font-size: .82rem;
            margin-top: .5rem;
            color: var(--text-muted);
        }

        @@media (max-width: 768px) {
            .promotion-item {
                grid-template-columns: 1fr;
            }
        }

        @@media (max-width: 991px) {
            .store-hero {
                grid-template-columns: 1fr;
            }

            .store-poster {
                max-width: 380px;
                margin-inline: auto;
            }

            .rating-panel {
                text-align: left;
            }
        }

        @@media (max-width: 768px) {
            .category-grid {
                grid-template-columns: repeat(3, minmax(0, 1fr));
            }
        }

        @@media (max-width: 576px) {
            .store-hero-card {
                padding: 1rem;
            }

            .category-grid {
                grid-template-columns: repeat(2, minmax(0, 1fr));
            }
        }

        @@media (max-width: 420px) {
            .category-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
}

<div class="container page-wrapper">
    <a class="back-link mb-3" href="@Url.Action("Index", "Stores", new { area = "Client" })">
        <i class="bi bi-arrow-left"></i> Back to stores
    </a>

    <div class="store-hero-card">
        <div class="store-hero">
            <div class="store-poster">
                <img src="@poster" alt="@Model.TenantName" />
                <div class="store-pill">
                    <i class="bi bi-shop"></i>
                    <span>Featured Store</span>
                </div>
            </div>

            <div class="store-meta">
                <div class="store-meta-top">
                    <div>
                        <div class="store-title">@Model.TenantName</div>
                        <div class="store-sub">
                            @Model.TenantTypeName
                            @if (!string.IsNullOrWhiteSpace(Model.Position))
                            {
                                @: · @Model.Position
                            }
                        </div>
                        <div class="store-location">
                            <i class="bi bi-geo-alt"></i>
                            <span>@(string.IsNullOrWhiteSpace(Model.Position) ? "Location not specified" : Model.Position)</span>
                        </div>

                        <div class="meta-tags">
                            <span class="tag"><i class="bi bi-clock-history me-1"></i>Opens daily</span>
                            <span class="tag"><i class="bi bi-bag-check me-1"></i>Quality products</span>
                        </div>

                        @* DESCRIPTION: SmartEditor (decode HTML rồi render) *@
                        @if (!string.IsNullOrWhiteSpace(Model.TenantDescription))
                        {
                            <div class="store-description">
                                @Html.Raw(System.Net.WebUtility.HtmlDecode(Model.TenantDescription ?? ""))
                            </div>
                        }
                    </div>

                    <div class="rating-panel">
                        <div class="rate-badge">
                            @((Model.AvgRate ?? 0).ToString("0.0"))
                            <small>/ 5</small>
                        </div>
                        <div class="stars" aria-hidden="true">
                            @for (int i = 1; i <= 5; i++)
                            {
                                var filledClass = (Model.AvgRate ?? 0) >= i ? "bi-star-fill filled" : "bi-star";
                                <i class="star @filledClass"></i>
                            }
                        </div>
                        <div class="rating-count">
                            @Model.Comments.Count() review@(Model.Comments.Count() == 1 ? "" : "s")
                        </div>
                    </div>
                </div>

                <hr class="my-3" />

                <!-- PROMOTIONS -->
                @if (Model.Promotions != null && Model.Promotions.Any())
                {
                    <div class="promotion-box">
                        <div class="section-title">
                            <i class="bi bi-megaphone-fill"></i>
                            <span>Promotions</span>
                        </div>

                        <div class="promotion-list">
                            @foreach (var p in Model.Promotions)
                            {
                                var promoImg = ImgPromo(p.Img);

                                <div class="promotion-item">
                                    <div class="promotion-banner">
                                        <img src="@promoImg" alt="@p.Title" />
                                    </div>

                                    <div class="promotion-body">
                                        <div class="promotion-title">@p.Title</div>

                                        <div class="promotion-discount mt-1">
                                            @if (p.DiscountPercent.HasValue)
                                            {
                                                <span class="discount-main">@p.DiscountPercent.Value.ToString("0")% OFF</span>
                                            }
                                            else if (p.DiscountAmount.HasValue)
                                            {
                                                <span class="discount-main">@p.DiscountAmount.Value.ToString("#,0") ₫ OFF</span>
                                            }
                                        </div>

                                        @if (p.MinBillAmount.HasValue && p.MinBillAmount.Value > 0)
                                        {
                                            <div class="promotion-cond text-muted mt-1">
                                                Min bill: @p.MinBillAmount.Value.ToString("#,0") ₫
                                            </div>
                                        }

                                        @if (!string.IsNullOrWhiteSpace(p.Description))
                                        {
                                            <div class="promotion-desc">
                                                @Html.Raw(System.Net.WebUtility.HtmlDecode(p.Description ?? ""))
                                            </div>
                                        }

                                        <div class="promotion-time">
                                            <i class="bi bi-calendar3"></i>
                                            @p.PromotionStart?.ToString("dd/MM/yyyy")
                                            @if (p.PromotionEnd.HasValue)
                                            {
                                                @: – @p.PromotionEnd?.ToString("dd/MM/yyyy")
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }

                <!-- Product Categories -->
                <div class="category-wrapper">
                    <div class="section-title">
                        <i class="bi bi-grid-3x3-gap"></i>
                        <span>Product categories</span>
                    </div>

                    <div class="category-grid">
                        @foreach (var cat in Model.ProductCategories)
                        {
                            <div class="category-item text-center" data-category-id="@cat.Id">
                                <img src="@ImgCategory(cat.Img)" alt="@cat.Name" />
                                <span>@cat.Name</span>
                                <small>Tap to view products</small>
                            </div>
                        }
                    </div>

                    <div id="category-products-container" class="mt-2">
                        @foreach (var cat in Model.ProductCategories)
                        {
                            <div class="category-products mt-3" data-category-id="@cat.Id" style="display:none;">
                                <div class="category-products-header">
                                    <div class="category-products-title">
                                        <i class="bi bi-bag-check me-1"></i><span>Products</span>
                                    </div>
                                    <button class="btn btn-sm btn-outline-secondary btn-close-products">
                                        <i class="bi bi-x-circle"></i>
                                        Hide products
                                    </button>
                                </div>
                                <div class="loading text-center py-3 text-muted">Loading products...</div>
                                <div class="products row g-3"></div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Comments & rating -->
                <div class="comment-box mt-4">
                    <div class="comment-form-header mb-2">
                        <h6 class="mb-0 d-flex align-items-center gap-2">
                            <i class="bi bi-chat-dots"></i>
                            Comments & ratings
                        </h6>
                        <small>Share your experience and help other customers.</small>
                    </div>

                    <div id="commentFormArea" class="mt-2">
                        @if (User?.Identity?.IsAuthenticated == true)
                        {
                            @Html.AntiForgeryToken()
                            <div class="mb-2"><strong>Your rating:</strong></div>
                            <div class="mb-2">
                                <div id="userStars" class="stars">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <i class="star bi bi-star" data-value="@i"></i>
                                    }
                                </div>
                            </div>
                            <textarea id="commentText"
                                      class="form-control mb-2"
                                      rows="3"
                                      placeholder="Write your comment here..."></textarea>
                            <div class="d-flex gap-2 align-items-center flex-wrap">
                                <button id="submitComment" class="btn btn-primary btn-primary-rounded">
                                    <i class="bi bi-send me-1"></i>Submit
                                </button>
                                <small class="text-muted">Your comment will appear after it is approved.</small>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info py-2 mb-2">
                                You need to <a href="@Url.Action("Login", "Account", new { area = "Client" })">log in</a> to rate and comment.
                            </div>
                        }
                    </div>

                    <hr class="my-3" />

                    <div id="commentsList">
                        @if (Model.Comments.Any())
                        {
                            foreach (var c in Model.Comments)
                            {
                                <div class="comment-item">
                                    <div class="d-flex justify-content-between flex-wrap gap-2">
                                        <div>
                                            <span class="comment-user">@c.UserName</span>
                                            <span class="small text-muted">•</span>
                                            <span class="comment-time">@c.CreatedAt?.ToString("dd MMM yyyy HH:mm")</span>
                                        </div>
                                        <div class="stars" aria-hidden="true">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                var filledClass = c.Rate >= i ? "bi-star-fill filled" : "bi-star";
                                                <i class="star @filledClass"></i>
                                            }
                                        </div>
                                    </div>
                                    <div class="comment-text">
                                        @Html.Raw(System.Net.WebUtility.HtmlEncode(c.Text))
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="comment-empty">
                                No comments yet — be the first to write one!
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {

            // 1️⃣ Click on category -> load and show products
            document.querySelectorAll('.category-item').forEach(item => {
                item.addEventListener('click', () => {
                    const categoryId = item.dataset.categoryId;
                    const wrapper = document.querySelector(`.category-products[data-category-id='${categoryId}']`);
                    if (!wrapper) return;

                    // Hide all other product blocks
                    document.querySelectorAll('.category-products').forEach(el => {
                        if (el !== wrapper) el.style.display = 'none';
                    });

                    const productsContainer = wrapper.querySelector('.products');
                    const loading = wrapper.querySelector('.loading');

                    wrapper.style.display = 'block';
                    loading.style.display = 'block';
                    productsContainer.innerHTML = '';

                    // Smooth scroll to products
                    wrapper.scrollIntoView({ behavior: 'smooth', block: 'start' });

                    fetch(`/Client/Stores/GetProductsByCategory?categoryId=${categoryId}`)
                        .then(res => res.json())
                        .then(data => {
                            loading.style.display = 'none';

                            if (!Array.isArray(data) || data.length === 0) {
                                productsContainer.innerHTML =
                                    '<div class="col-12 text-center text-muted py-2">There are no products in this category.</div>';
                                return;
                            }

                            const catName = item.querySelector('span').innerText;
                            const displayCount = 4; // number of products to display initially
                            let showingAll = false;

                            function renderProducts(list) {
                                productsContainer.innerHTML =
                                    `<div class="col-12 mb-1"><h6 class="fw-bold mb-2">Products in <span class="text-primary">${catName}</span></h6></div>`;
                                list.forEach(p => {
                                    const card = `
                                        <div class="col-6 col-md-3">
                                            <div class="card product-card h-100">
                                                <img src="/Content/Uploads/Product/${p.img}" class="card-img-top" alt="${p.name}" />
                                                <div class="card-body text-center">
                                                    <h6 class="card-title fw-semibold text-truncate" title="${p.name}">
                                                        ${p.name}
                                                    </h6>
                                                    <div class="product-price text-danger">
                                                        ${p.price.toLocaleString('en-US')} ₫
                                                    </div>
                                                </div>
                                            </div>
                                        </div>`;
                                    productsContainer.insertAdjacentHTML('beforeend', card);
                                });
                            }

                            // Render initial products
                            renderProducts(data.slice(0, displayCount));

                            // "See more" button if needed
                            if (data.length > displayCount) {
                                const seeMoreCard = document.createElement('div');
                                seeMoreCard.className = 'col-12 d-flex justify-content-center mt-2';
                                seeMoreCard.innerHTML = `
                                    <button class="see-more-btn">
                                        <span class="see-more-text fw-bold">+ See more</span>
                                    </button>
                                `;
                                productsContainer.appendChild(seeMoreCard);

                                seeMoreCard.addEventListener('click', () => {
                                    const btnText = seeMoreCard.querySelector('.see-more-text');
                                    if (!showingAll) {
                                        renderProducts(data);
                                        productsContainer.appendChild(seeMoreCard);
                                        btnText.textContent = '– Hide products';
                                        showingAll = true;
                                    } else {
                                        renderProducts(data.slice(0, displayCount));
                                        productsContainer.appendChild(seeMoreCard);
                                        btnText.textContent = '+ See more';
                                        showingAll = false;
                                    }
                                });
                            }
                        })
                        .catch(() => {
                            loading.style.display = 'none';
                            productsContainer.innerHTML =
                                '<div class="col-12 text-center text-danger py-2">An error occurred while loading products.</div>';
                        });
                });
            });

            // 2️⃣ Hide products when clicking the close button
            document.addEventListener('click', e => {
                const closeBtn = e.target.closest('.btn-close-products');
                if (closeBtn) {
                    const box = closeBtn.closest('.category-products');
                    if (box) box.style.display = 'none';
                }
            });

            // 3️⃣ Star rating logic (user’s rating)
            const starContainer = document.getElementById('userStars');
            let selectedRating = 0;

            if (starContainer) {
                const stars = starContainer.querySelectorAll('.star');

                function setStarState(el, filled) {
                    if (filled) {
                        el.classList.remove('bi-star');
                        el.classList.add('bi-star-fill', 'filled', 'active');
                    } else {
                        el.classList.remove('bi-star-fill', 'filled', 'active');
                        el.classList.add('bi-star');
                    }
                }

                function highlight(value) {
                    stars.forEach(st => setStarState(st, +st.dataset.value <= value));
                }

                stars.forEach(s => {
                    s.addEventListener('mouseenter', () => highlight(+s.dataset.value));
                    s.addEventListener('mouseleave', () => highlight(selectedRating));
                    s.addEventListener('click', () => {
                        selectedRating = +s.dataset.value;
                        highlight(selectedRating);
                    });
                });
            }

            // 4️⃣ Submit comment via AJAX
            const submitBtn = document.getElementById('submitComment');
            if (submitBtn) {
                submitBtn.addEventListener('click', async function () {
                    const textArea = document.getElementById('commentText');
                    const text = textArea.value.trim();

                    if (!selectedRating || selectedRating <= 0) {
                        alert('Please select a star rating.');
                        return;
                    }
                    if (!text) {
                        alert('Please enter your comment.');
                        return;
                    }

                    const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
                    const token = tokenInput ? tokenInput.value : '';

                    submitBtn.disabled = true;
                    const originalText = submitBtn.innerHTML;
                    submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-1"></span>Sending...';

                    try {
                        const resp = await fetch('@Url.Action("AddComment", "Stores", new { area = "Client" })', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/x-www-form-urlencoded',
                                'RequestVerificationToken': token,
                                'X-Requested-With': 'XMLHttpRequest'
                            },
                            body: new URLSearchParams({
                                tenantId: '@Model.TenantId',
                                rate: selectedRating,
                                text: text
                            })
                        });

                        const data = await resp.json();
                        if (data && data.success) {
                            alert(data.message || 'Comment submitted successfully!');
                            // Reload để user thấy comment của chính mình (kể cả đang chờ duyệt)
                            window.location.reload();
                        } else {
                            alert(data?.message || 'Error submitting your comment.');
                        }
                    } catch {
                        alert('An unexpected error occurred. Please try again.');
                    } finally {
                        submitBtn.disabled = false;
                        submitBtn.innerHTML = originalText;
                    }
                });
            }
        });
    </script>
}
