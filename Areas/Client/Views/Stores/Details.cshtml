@section Styles {
    <style>
        :root {
            --primary: #0d6efd;
            --primary-soft: rgba(13, 110, 253, 0.1);
            --bg-soft: #f8fafc;
            --text-muted: #64748b;
            --radius-lg: 1rem;
            --shadow-soft: 0 10px 30px rgba(15, 23, 42, 0.12);
        }

        body {
            background-color: #f1f5f9;
        }

        .page-wrapper {
            padding-block: 1.5rem 2.5rem;
        }

        .back-link {
            display: inline-flex;
            align-items: center;
            gap: .5rem;
            font-size: 0.9rem;
            color: #6b7280;
            text-decoration: none;
            padding: .35rem .75rem;
            border-radius: 999px;
            background: rgba(148, 163, 184, 0.12);
            transition: all .2s ease;
        }

            .back-link:hover {
                color: #111827;
                background: rgba(148, 163, 184, 0.25);
                text-decoration: none;
                transform: translateX(-2px);
            }

        .store-hero-card {
            background: white;
            border-radius: 1.25rem;
            box-shadow: var(--shadow-soft);
            padding: 1.5rem;
        }

        .store-hero {
            display: grid;
            grid-template-columns: 320px 1fr;
            gap: 2rem;
            align-items: flex-start;
        }

        .store-poster {
            border-radius: 1.25rem;
            overflow: hidden;
            box-shadow: 0 16px 40px rgba(15, 23, 42, .2);
            position: relative;
            background: #020617;
        }

            .store-poster img {
                width: 100%;
                height: 100%;
                min-height: 260px;
                object-fit: cover;
                display: block;
                transition: transform .6s ease;
            }

            .store-poster:hover img {
                transform: scale(1.05);
            }

        .store-pill {
            position: absolute;
            left: 1rem;
            top: 1rem;
            background: rgba(15, 23, 42, .7);
            backdrop-filter: blur(8px);
            color: #e5e7eb;
            padding: 0.35rem .75rem;
            border-radius: 999px;
            font-size: 0.75rem;
            display: inline-flex;
            align-items: center;
            gap: .35rem;
        }

        .store-meta {
            padding-top: .25rem;
        }

        .store-title {
            font-size: 1.8rem;
            font-weight: 800;
            margin-bottom: .15rem;
            letter-spacing: -0.03em;
        }

        .store-sub {
            color: var(--text-muted);
            margin-bottom: .5rem;
            font-size: 0.95rem;
        }

        .store-location {
            font-size: .9rem;
            color: var(--text-muted);
        }

        /* DESCRIPTION: SmartEditor HTML + cực lực bẻ chữ để không bể layout */
        .store-description {
            margin-top: .75rem;
            color: #0f172a;
            font-size: 0.95rem;
            line-height: 1.5;
            max-width: 100%;
            word-break: break-all;
            overflow-wrap: anywhere;
        }

            .store-description * {
                max-width: 100%;
                box-sizing: border-box;
                white-space: normal !important;
                word-break: break-all !important;
                overflow-wrap: anywhere !important;
            }

            .store-description p {
                margin-bottom: .5rem;
            }

            .store-description img,
            .store-description video,
            .store-description iframe {
                max-width: 100% !important;
                height: auto !important;
            }

            .store-description table {
                width: 100% !important;
                table-layout: fixed;
            }

            .store-description td,
            .store-description th {
                word-break: break-all;
            }

        .badge-soft {
            display: inline-flex;
            align-items: center;
            gap: .35rem;
            padding: .25rem .6rem;
            border-radius: 999px;
            background: var(--primary-soft);
            color: var(--primary);
            font-size: .8rem;
            font-weight: 500;
        }

        .store-meta-top {
            display: flex;
            justify-content: space-between;
            gap: 1.25rem;
            align-items: flex-start;
        }

        .rating-panel {
            text-align: right;
            min-width: 190px;
        }

        .rate-badge {
            display: inline-flex;
            align-items: baseline;
            gap: .15rem;
            font-weight: 800;
            background: linear-gradient(120deg, #ffb347, #ffcc33);
            color: #111;
            padding: .35rem .75rem;
            border-radius: .75rem;
            font-size: 1rem;
            box-shadow: 0 10px 30px rgba(250, 204, 21, 0.4);
        }

            .rate-badge small {
                font-size: .7rem;
                opacity: .8;
            }

        .stars {
            display: inline-flex;
            gap: .15rem;
            align-items: center;
            margin-top: .25rem;
        }

        .star {
            font-size: 1.3rem;
            cursor: pointer;
            color: #cbd5e1;
            display: inline-flex;
            align-items: center;
            transition: transform .15s ease, color .15s ease;
        }

            .star.active,
            .star.filled,
            .star.bi-star-fill {
                color: #ffc107;
                transform: scale(1.08);
            }

        .rating-count {
            font-size: .8rem;
            color: var(--text-muted);
            margin-top: .15rem;
        }

        .meta-tags {
            margin-top: .75rem;
            display: flex;
            flex-wrap: wrap;
            gap: .4rem;
        }

            .meta-tags .tag {
                font-size: .8rem;
                padding: .2rem .55rem;
                border-radius: 999px;
                background: #eff6ff;
                color: #1d4ed8;
            }

        .section-title {
            font-size: 1rem;
            font-weight: 700;
            margin-bottom: .75rem;
            display: flex;
            align-items: center;
            gap: .5rem;
        }

            .section-title i {
                font-size: 1.1rem;
                color: var(--primary);
            }

