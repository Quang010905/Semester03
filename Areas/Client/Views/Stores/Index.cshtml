@using System
@using System.IO
@using Microsoft.AspNetCore.Hosting
@using Semester03.Areas.Client.Models.ViewModels
@model IEnumerable<FeaturedStoreViewModel>

@{
    Layout = "_LayoutClient";
    ViewData["Title"] = "Stores";
    var types = ViewBag.TenantTypes as List<Semester03.Areas.Admin.Models.TenantType>;

    // ===== IMAGE HELPER FOR STORES / TENANTS =====
    Func<string, string> ImgStore = (raw) =>
    {
        var noImageUrl = Url.Content("~/Content/Uploads/noimage.png");

        try
        {
            if (string.IsNullOrWhiteSpace(raw))
                return noImageUrl;

            if (raw.StartsWith("http", StringComparison.OrdinalIgnoreCase))
                return raw;

            var file = raw.Replace("\\", "/").Trim();

            var keyword = "Content/Uploads/Tenant";
            var idxKeyword = file.IndexOf(keyword, StringComparison.OrdinalIgnoreCase);
            if (idxKeyword >= 0)
            {
                var lastSlash = file.LastIndexOf('/');
                if (lastSlash >= 0) file = file.Substring(lastSlash + 1);
            }

            if (file.StartsWith("wwwroot/", StringComparison.OrdinalIgnoreCase))
                file = file.Substring("wwwroot/".Length);
            if (file.StartsWith("~/"))
                file = file.Substring(2);
            if (file.StartsWith("/"))
                file = file.Substring(1);

            if (string.IsNullOrWhiteSpace(file))
                return noImageUrl;

            var env = Context.RequestServices.GetService(typeof(IWebHostEnvironment)) as IWebHostEnvironment;
            if (env == null)
            {
                return Url.Content("~/Content/Uploads/Tenant/" + Uri.EscapeDataString(file));
            }

            var physical = System.IO.Path.Combine(
                env.WebRootPath ?? "wwwroot",
                "Content", "Uploads", "Tenant", file
            );

            if (System.IO.File.Exists(physical))
            {
                return Url.Content("~/Content/Uploads/Tenant/" + Uri.EscapeDataString(file));
            }
            else
            {
                return noImageUrl;
            }
        }
        catch
        {
            return noImageUrl;
        }
    };
}

@section Styles {
    <style>
        /* ============================================================
                   🔥 GLOW WRAPPER (copy từ trang Events)
                ============================================================ */
        .section-wrapper {
            position: relative;
            padding: 2.2rem 1.8rem 2.5rem;
            border-radius: 1.7rem;
            background: rgba(255,255,255,0.92);
            box-shadow: 0 20px 55px rgba(15,23,42,0.12);
            margin-bottom: 3rem;
            overflow: hidden;
        }

            .section-wrapper::before {
                content: "";
                position: absolute;
                inset: -40%;
                background: radial-gradient(circle at 0 0, rgba(99,102,241,.25), transparent 60%), radial-gradient(circle at 100% 100%, rgba(236,72,153,.25), transparent 60%);
                mix-blend-mode: screen;
                animation: glowMove 22s linear infinite alternate;
                pointer-events: none;
            }

        @@keyframes glowMove {
            from {
                transform: translate3d(0,0,0) scale(1);
            }

            to {
                transform: translate3d(4%, -4%, 0) scale(1.06);
            }
        }

        .section-wrapper::after {
            content: "";
            position: absolute;
            inset: 0;
            border-radius: 1.7rem;
            padding: 2px;
            background: linear-gradient(135deg, #6366f1, #ec4899);
            -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
            mask-composite: exclude;
            pointer-events: none;
        }

        /* ===== PAGE LAYOUT ================================================= */
        .stores-page {
            padding-block: 1.5rem 2.5rem;
            max-width: 1200px;
            margin: 0 auto;
        }

        .stores-header {
            display: flex;
            align-items: flex-end;
            justify-content: space-between;
            gap: 1.25rem;
            flex-wrap: wrap;
        }

        .stores-kicker {
            font-weight: 800;
            letter-spacing: .12em;
            text-transform: uppercase;
            font-size: .8rem;
            color: #9ca3af;
        }

        .stores-title {
            margin: 0;
            font-weight: 800;
            letter-spacing: -0.04em;
            font-size: 1.9rem;
        }

            .stores-title span {
                background: linear-gradient(90deg,#4f46e5,#ec4899);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
            }

        .stores-subtitle {
            font-size: 0.9rem;
            color: #6b7280;
        }

        /* ===== FILTER BAR ================================================== */
        .stores-filter-form {
            display: flex;
            flex-wrap: wrap;
            gap: .5rem;
            align-items: center;
        }

            .stores-filter-form .form-control,
            .stores-filter-form .form-select {
                min-width: 170px;
                border-radius: 999px;
                font-size: .85rem;
            }

            .stores-filter-form .btn {
                white-space: nowrap;
                border-radius: 999px;
                font-size: .85rem;
                padding-inline: 1rem;
            }

        /* ===== STORE CARD ================================================== */
        .store-card {
            position: relative;
            border-radius: 1.15rem;
            overflow: hidden;
            border: 1px solid rgba(148,163,184,0.4);
            background: radial-gradient(circle at 0 0,#eef2ff,#ffffff 55%);
            box-shadow: 0 12px 30px rgba(15,23,42,0.12);
            transition: transform .2s ease, box-shadow .2s ease, border-color .2s ease;
        }

            .store-card:hover {
                transform: translateY(-6px);
                box-shadow: 0 18px 40px rgba(15,23,42,0.22);
                border-color: rgba(59,130,246,0.7);
            }

        .store-image-wrapper {
            position: relative;
            overflow: hidden;
        }

        .store-card img {
            height: 190px;
            width: 100%;
            object-fit: cover;
            display: block;
            transform-origin: center;
            transition: transform .35s ease;
        }

        .store-card:hover img {
            transform: scale(1.05);
        }

        .store-gradient-overlay {
            position: absolute;
            inset: auto 0 0 0;
            height: 40%;
            background: linear-gradient(to top, rgba(15,23,42,0.96), transparent);
            pointer-events: none;
        }

        .store-badge {
            position: absolute;
            left: .6rem;
            top: .6rem;
            background: rgba(15, 23, 42, 0.86);
            color: #e5e7eb;
            font-size: 0.7rem;
            padding: .25rem .6rem;
            border-radius: 999px;
            display: inline-flex;
            align-items: center;
            gap: .3rem;
            z-index: 2;
        }

            .store-badge i {
                font-size: .85rem;
            }

        .store-quick-link {
            position: absolute;
            right: .7rem;
            bottom: .85rem;
            z-index: 3;
            padding-inline: .9rem;
            padding-block: .25rem;
            border-radius: 999px;
            font-size: .78rem;
            backdrop-filter: blur(8px);
            background: rgba(15,23,42,0.8);
            border: 1px solid rgba(148,163,184,0.7);
            color: #f9fafb;
        }

            .store-quick-link i {
                font-size: .85rem;
            }

        .store-card .card-body {
            padding: 0.7rem 0.9rem 0.85rem;
            text-align: left;
        }

        .store-name {
            font-size: 0.95rem;
            margin-bottom: 0.15rem;
            font-weight: 700;
        }

        .store-position {
            font-size: 0.8rem;
            color: #6b7280;
        }

        .store-meta {
            font-size: .78rem;
            color: #9ca3af;
        }

        .store-rating {
            color: #facc15;
            font-size: .9rem;
        }

        .store-footer {
            padding: 0.4rem 0.9rem 0.9rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: .78rem;
        }

        .store-view-btn {
            border-radius: 999px;
            padding-inline: .9rem;
            font-size: .8rem;
        }

        /* ===== EMPTY STATE & PAGINATION =================================== */
        .empty-state {
            padding: 2.5rem 1rem;
            text-align: center;
            background: #f8fafc;
            border-radius: 1rem;
            border: 1px dashed #cbd5e1;
        }

            .empty-state i {
                font-size: 2.3rem;
                color: #9ca3af;
                margin-bottom: .25rem;
            }

        .pagination .page-link {
            border-radius: 999px;
            margin: 0 .15rem;
            font-size: .85rem;
        }

        .pagination .page-item.active .page-link {
            background: linear-gradient(90deg,#4f46e5,#0ea5e9);
            border-color: transparent;
        }

        @@media (max-width: 768px) {
            .stores-header {
                align-items: flex-start;
            }

            .store-card img {
                height: 170px;
            }
        }
    </style>
}

<div class="container stores-page">
    <!-- BỌC TOÀN BỘ BẰNG SECTION-WRAPPER -->
    <div class="section-wrapper">
        <!-- HEADER -->
        <div class="stores-header mb-3">
            <div>
                <div class="stores-kicker">Store directory</div>
                <h3 class="stores-title">
                    <span>@(ViewBag.CurrentTypeName ?? "All stores")</span>
                </h3>
                <div class="stores-subtitle">
                    Discover your favorite brands, cafés and experiences at our mall.
                </div>
            </div>

            <!-- FILTER BAR -->
            <form method="get" class="stores-filter-form">
                <input type="text"
                       name="search"
                       value="@ViewBag.SearchQuery"
                       class="form-control form-control-sm"
                       placeholder="Search stores by name..." />

                <select name="typeId" class="form-select form-select-sm">
                    <option value="">All categories</option>
                    @if (types != null)
                    {
                        foreach (var t in types)
                        {
                            var selected = t.Id == (int?)ViewBag.CurrentTypeId ? "selected" : "";
                            <option value="@t.Id" @selected>@t.Name</option>
                        }
                    }
                </select>

                <button class="btn btn-sm btn-outline-primary">
                    <i class="bi bi-funnel me-1"></i> Filter
                </button>
            </form>
        </div>

        <!-- GRID -->
        <div class="row g-3">
            @if (Model != null && Model.Any())
            {
                foreach (var s in Model)
                {
                    var img = ImgStore(s.TenantImg);

                    <div class="col-6 col-md-4 col-lg-3 col-xl-3">
                        <div class="store-card h-100">
                            <div class="store-image-wrapper">
                                <span class="store-badge">
                                    <i class="bi bi-shop"></i> Store
                                </span>

                                <a href="@Url.Action("Details", "Stores", new { id = s.TenantId })">
                                    <img src="@img" class="card-img-top" alt="@s.TenantName" />
                                </a>

                                <div class="store-gradient-overlay"></div>

                                <a href="@Url.Action("Details", "Stores", new { id = s.TenantId })"
                                   class="store-quick-link">
                                    <i class="bi bi-arrow-right-circle me-1"></i> Explore
                                </a>
                            </div>

                            <div class="card-body">
                                <h6 class="store-name text-truncate" title="@s.TenantName">
                                    @s.TenantName
                                </h6>
                                <div class="store-position text-truncate mb-1">
                                    <i class="bi bi-geo-alt me-1"></i>@s.Position
                                </div>
                                <div class="d-flex justify-content-between align-items-center store-meta">
                                    <span class="text-muted">Open daily</span>
                                    <span class="store-rating">★★★★☆</span>
                                </div>
                            </div>

                            <div class="store-footer">
                                <span class="text-muted">
                                    <i class="bi bi-bag me-1"></i>Visit store page
                                </span>
                                <a href="@Url.Action("Details", "Stores", new { id = s.TenantId })"
                                   class="btn btn-outline-primary btn-sm store-view-btn">
                                    View
                                </a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12">
                    <div class="empty-state">
                        <i class="bi bi-emoji-neutral"></i>
                        <p class="mb-1 fw-semibold">No stores found</p>
                        <p class="mb-0 text-muted" style="font-size: .9rem;">
                            Try changing the filters or search keywords.
                        </p>
                    </div>
                </div>
            }
        </div>

        <!-- PAGINATION -->
        @if (ViewBag.TotalPages > 1)
        {
            <nav class="d-flex justify-content-center mt-4">
                <ul class="pagination">
                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                            <a class="page-link"
                               href="@Url.Action("Index", "Stores", new { typeId = ViewBag.CurrentTypeId, search = ViewBag.SearchQuery, page = i })">
                                @i
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        }
    </div>
</div>
