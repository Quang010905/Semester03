@model List<Semester03.Models.ViewModels.FeaturedStoreViewModel>
@{
    Layout = "_LayoutClient";  // <-- kế thừa layout client
    ViewData["Title"] = "Stores";
}

<div class="container my-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h3>@ViewBag.CurrentTypeName</h3>
        <form method="get" class="d-flex gap-2">
            <input type="text" name="search" value="@ViewBag.SearchQuery" class="form-control form-control-sm" placeholder="Search stores..." />
            <select name="typeId" class="form-select form-select-sm">
                <option value="">All Types</option>
                @foreach (var t in ViewBag.TenantTypes as List<Semester03.Models.Repositories.TenantType>)
                {
                    <option value="@t.Id" @(t.Name == (string)ViewBag.CurrentTypeName ? "selected" : "")>@t.Name</option>
                }
            </select>
            <button class="btn btn-sm btn-primary">Filter</button>
        </form>
    </div>

    <div class="row g-3">
        @if (Model != null && Model.Count > 0)
        {
            foreach (var s in Model)
            {
                var img = string.IsNullOrEmpty(s.TenantImg) ? "/images/store-placeholder.png" : $"/images/tenants/{s.TenantImg}";
                <div class="col-6 col-md-4 col-lg-2">
                    <div class="card store-card h-100 shadow-sm border-0 rounded-4 overflow-hidden hover-scale">
                        <img src="@img" class="card-img-top" alt="@s.TenantName" />
                        <div class="card-body p-2 text-center">
                            <h6 class="card-title fw-bold mb-1">@s.TenantName</h6>
                            <small class="text-muted d-block mb-1">@s.Position</small>
                            <a href="@Url.Action("Details", "Stores", new { id = s.TenantId })" class="btn btn-outline-primary btn-sm mt-1">View</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="p-3 bg-light rounded text-center text-muted">No stores found</div>
            </div>
        }
    </div>
</div>
