@model List<Semester03.Models.ViewModels.FeaturedStoreViewModel>

@{
    Layout = "_LayoutClient";
    ViewData["Title"] = "Stores";
    var types = ViewBag.TenantTypes as List<Semester03.Areas.Admin.Models.TenantType>;
}

@section Styles {
    <style>
        .stores-page {
            padding-block: 1.5rem 2.5rem;
        }

        .stores-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 1rem;
            flex-wrap: wrap;
        }

        .stores-title {
            margin: 0;
            font-weight: 800;
            letter-spacing: -0.03em;
        }

        .stores-subtitle {
            font-size: 0.9rem;
            color: #6b7280;
        }

        .stores-filter-form {
            display: flex;
            flex-wrap: wrap;
            gap: .5rem;
            align-items: center;
        }

            .stores-filter-form .form-control,
            .stores-filter-form .form-select {
                min-width: 150px;
            }

            .stores-filter-form .btn {
                white-space: nowrap;
            }

        .store-card {
            border-radius: 1rem;
            overflow: hidden;
            border: none;
            box-shadow: 0 10px 24px rgba(15, 23, 42, 0.12);
            transition: transform 0.22s ease, box-shadow 0.22s ease;
            background: white;
        }

            .store-card:hover {
                transform: translateY(-6px);
                box-shadow: 0 18px 36px rgba(15, 23, 42, 0.2);
            }

            .store-card img {
                height: 160px;
                object-fit: cover;
                transition: transform 0.45s ease;
            }

            .store-card:hover img {
                transform: scale(1.04);
            }

            .store-card .card-body {
                padding: 0.75rem 0.75rem 0.85rem;
            }

            .store-card .card-title {
                font-size: 0.95rem;
                margin-bottom: 0.15rem;
            }

        .store-position {
            font-size: 0.8rem;
        }

        .store-view-btn {
            border-radius: 999px;
            padding-inline: .9rem;
            font-size: .8rem;
        }

        .store-badge {
            position: absolute;
            left: .6rem;
            top: .6rem;
            background: rgba(15, 23, 42, 0.75);
            color: #e5e7eb;
            font-size: 0.7rem;
            padding: .25rem .5rem;
            border-radius: 999px;
            display: inline-flex;
            align-items: center;
            gap: .25rem;
        }

        .empty-state {
            padding: 2.5rem 1rem;
            text-align: center;
            background: #f8fafc;
            border-radius: 1rem;
            border: 1px dashed #cbd5e1;
        }

            .empty-state i {
                font-size: 2.3rem;
                color: #9ca3af;
                margin-bottom: .25rem;
            }

        @@media (max-width: 768px) {
            .stores-header {
                align-items: flex-start;
            }
        }
    </style>
}

<div class="container stores-page">
    <div class="stores-header mb-3">
        <div>
            <h3 class="stores-title">@ViewBag.CurrentTypeName</h3>
            <div class="stores-subtitle">
                Discover stores and explore their products.
            </div>
        </div>

        <form method="get" class="stores-filter-form">
            <input type="text"
                   name="search"
                   value="@ViewBag.SearchQuery"
                   class="form-control form-control-sm"
                   placeholder="Search stores..." />

            <select name="typeId" class="form-select form-select-sm">
                <option value="">All types</option>
                @if (types != null)
                {
                    foreach (var t in types)
                    {
                        var selected = t.Name == (string)ViewBag.CurrentTypeName ? "selected" : "";
                        <option value="@t.Id" @selected>@t.Name</option>
                    }
                }
            </select>

            <button class="btn btn-sm btn-primary">
                <i class="bi bi-funnel me-1"></i>Filter
            </button>
        </form>
    </div>

    <div class="row g-3">
        @if (Model != null && Model.Count > 0)
        {
            foreach (var s in Model)
            {
                var img = string.IsNullOrEmpty(s.TenantImg)
                ? "/Admin/img/store-placeholder.png"
                : $"/Admin/img/{s.TenantImg}";
                <div class="col-6 col-md-4 col-lg-3 col-xl-2">
                    <div class="card store-card h-100 position-relative">
                        <div class="position-relative">
                            <img src="@img" class="card-img-top" alt="@s.TenantName" />
                            <div class="store-badge">
                                <i class="bi bi-shop"></i>Store
                            </div>
                        </div>
                        <div class="card-body text-center">
                            <h6 class="card-title fw-bold text-truncate" title="@s.TenantName">
                                @s.TenantName
                            </h6>
                            <small class="text-muted d-block mb-1 store-position text-truncate">
                                @s.Position
                            </small>
                            <a href="@Url.Action("Details", "Stores", new { id = s.TenantId })"
                               class="btn btn-outline-primary btn-sm store-view-btn">
                                View
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="empty-state">
                    <i class="bi bi-emoji-neutral"></i>
                    <p class="mb-1 fw-semibold">No stores found</p>
                    <p class="mb-0 text-muted" style="font-size: .9rem;">
                        Try changing the filters or search keywords.
                    </p>
                </div>
            </div>
        }
    </div>
</div>
