@model Semester03.Areas.Client.Models.ViewModels.ProfileViewModel

@{
    Layout = "~/Areas/Client/Views/Shared/_LayoutClient.cshtml";
    ViewData["Title"] = "User Profile";

    var user = Model.User;

    var displayName = string.IsNullOrWhiteSpace(user.UsersFullName)
        ? user.UsersUsername
        : user.UsersFullName;

    var initial = !string.IsNullOrWhiteSpace(displayName)
        ? displayName.Trim()[0].ToString().ToUpper()
        : "?";

    var isActive = user.UsersStatus.GetValueOrDefault(1) == 1;
    var points = user.UsersPoints.GetValueOrDefault(0);
}

<section class="my-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h2 class="h4 mb-1"><i class="bi bi-person-circle me-2"></i>Account Profile</h2>
            <p class="text-muted mb-0">Your account information at ABCD Mall</p>
        </div>

        <span class="badge rounded-pill @(isActive ? "bg-success-subtle text-success" : "bg-secondary-subtle text-secondary") px-3 py-2">
            <i class="bi @(isActive ? "bi-check-circle" : "bi-pause-circle") me-1"></i>
            @(isActive ? "Active" : "Deactivated")
        </span>
    </div>

    <div class="card border-0 shadow-lg mb-4">
        <div class="card-body p-4">
            <div class="row g-4 align-items-center">

                <!-- avatar -->
                <div class="col-md-4 border-end">
                    <div class="d-flex flex-column align-items-center text-center">
                        <div class="rounded-circle d-flex align-items-center justify-content-center mb-3"
                             style="width: 96px; height: 96px; background: radial-gradient(circle, #bfdbfe, #2563eb); color: white;">
                            <span class="fs-1 fw-semibold">@initial</span>
                        </div>

                        <h5 class="mb-1">@displayName</h5>
                        <p class="text-muted small mb-2">@user.UsersEmail</p>

                        <span class="badge rounded-pill bg-light text-secondary d-inline-flex align-items-center">
                            <i class="bi bi-telephone me-1"></i>@user.UsersPhone
                        </span>
                    </div>
                </div>

                <!-- Info -->
                <div class="col-md-8">
                    <div class="row g-3 mb-3">

                        <div class="col-sm-6">
                            <div class="p-3 rounded-3 bg-light d-flex justify-content-between">
                                <div>
                                    <div class="text-muted small mb-1">Reward Points</div>
                                    <div class="fs-4 fw-semibold">@points</div>
                                </div>
                                <i class="bi bi-stars fs-2 text-warning"></i>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="p-3 rounded-3 bg-light d-flex justify-content-between">
                                <div>
                                    <div class="text-muted small mb-1">Account Created</div>
                                    <div class="fw-semibold">@(user.UsersCreatedAt?.ToString("dd/MM/yyyy") ?? "-")</div>
                                </div>
                                <i class="bi bi-calendar-event fs-2 text-primary"></i>
                            </div>
                        </div>

                    </div>

                    <hr />

                    <dl class="row small">
                        <dt class="col-sm-4 text-muted">Username</dt>
                        <dd class="col-sm-8">@user.UsersUsername</dd>

                        <dt class="col-sm-4 text-muted">Email</dt>
                        <dd class="col-sm-8">@user.UsersEmail</dd>

                        <dt class="col-sm-4 text-muted">Phone Number</dt>
                        <dd class="col-sm-8">@user.UsersPhone</dd>

                        <dt class="col-sm-4 text-muted">Status</dt>
                        <dd class="col-sm-8">@((isActive ? "Active" : "Deactivated"))</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</section>