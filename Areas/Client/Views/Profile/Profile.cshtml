@model Semester03.Areas.Client.Models.ViewModels.ProfileViewModel

@{
    Layout = "~/Areas/Client/Views/Shared/_LayoutClient.cshtml";
    ViewData["Title"] = "Hồ sơ người dùng";

    var user = Model.User;

    var displayName = string.IsNullOrWhiteSpace(user.UsersFullName)
        ? user.UsersUsername
        : user.UsersFullName;

    var initial = !string.IsNullOrWhiteSpace(displayName)
        ? displayName.Trim()[0].ToString().ToUpper()
        : "?";

    var isActive = user.UsersStatus.GetValueOrDefault(1) == 1;
    var points = user.UsersPoints.GetValueOrDefault(0);
}

<section class="my-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h2 class="h4 mb-1">
                <i class="bi bi-person-circle me-2"></i>Account profile
            </h2>
            <p class="text-muted mb-0">Your account information at ABCD Mall</p>
        </div>

        <div class="d-flex align-items-center gap-2">
            <span class="badge rounded-pill @(isActive ? "bg-success-subtle text-success" : "bg-secondary-subtle text-secondary") px-3 py-2">
                <i class="bi @(isActive ? "bi-check-circle" : "bi-pause-circle") me-1"></i>
                @(isActive ? "Active" : "Disabled")
            </span>

            <button type="button"
                    class="btn btn-sm btn-primary"
                    data-bs-toggle="modal"
                    data-bs-target="#editProfileModal">
                <i class="bi bi-pencil-square me-1"></i> Edit
            </button>
        </div>
    </div>

    <div class="card border-0 shadow-lg mb-4">
        <div class="card-body p-4">
            <div class="row g-4 align-items-center">

                <!-- Avatar -->
                <div class="col-md-4 border-end">
                    <div class="d-flex flex-column align-items-center text-center">
                        <div class="rounded-circle d-flex align-items-center justify-content-center mb-3"
                             style="width: 96px; height: 96px; background: radial-gradient(circle, #bfdbfe, #2563eb); color: white;">
                            <span class="fs-1 fw-semibold">@initial</span>
                        </div>

                        <h5 class="mb-1">@displayName</h5>
                        <p class="text-muted small mb-2">@user.UsersEmail</p>

                        <span class="badge rounded-pill bg-light text-secondary d-inline-flex align-items-center">
                            <i class="bi bi-telephone me-1"></i>@user.UsersPhone
                        </span>
                    </div>
                </div>

                <!-- Thông tin -->
                <div class="col-md-8">
                    <div class="row g-3 mb-3">

                        <div class="col-sm-6">
                            <div class="p-3 rounded-3 bg-light d-flex justify-content-between">
                                <div>
                                    <div class="text-muted small mb-1">Accumulated points</div>
                                    <div class="fs-4 fw-semibold">@points</div>
                                </div>
                                <i class="bi bi-stars fs-2 text-warning"></i>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="p-3 rounded-3 bg-light d-flex justify-content-between">
                                <div>
                                    <div class="text-muted small mb-1">Account creation date</div>
                                    <div class="fw-semibold">@(user.UsersCreatedAt?.ToString("dd/MM/yyyy") ?? "-")</div>
                                </div>
                                <i class="bi bi-calendar-event fs-2 text-primary"></i>
                            </div>
                        </div>

                    </div>

                    <hr />

                    <dl class="row small">
                        <dt class="col-sm-4 text-muted">Username</dt>
                        <dd class="col-sm-8">@user.UsersUsername</dd>

                        <dt class="col-sm-4 text-muted">Email</dt>
                        <dd class="col-sm-8">@user.UsersEmail</dd>

                        <dt class="col-sm-4 text-muted">Phone number </dt>
                        <dd class="col-sm-8">@user.UsersPhone</dd>

                        <dt class="col-sm-4 text-muted">Status</dt>
                        <dd class="col-sm-8">@((isActive ? "Active" : "Disabled"))</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Modal chỉnh sửa hồ sơ (KHÔNG dùng form) -->
<div class="modal fade" id="editProfileModal" tabindex="-1" aria-labelledby="editProfileModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editProfileModalLabel">
                    <i class="bi bi-pencil-square me-1"></i> Edit Profile
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <div id="editProfileError" class="alert alert-danger d-none mb-3"></div>
                <div id="editProfileSuccess" class="alert alert-success d-none mb-3"></div>

                <div class="mb-3">
                    <label class="form-label">Full name</label>
                    <input type="text"
                           id="editFullName"
                           class="form-control"
                           value="@user.UsersFullName" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email"
                           id="editEmail"
                           class="form-control"
                           value="@user.UsersEmail" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Phone number</label>
                    <input type="text"
                           id="editPhone"
                           class="form-control"
                           value="@user.UsersPhone" />
                </div>

                <div class="mb-3">
                    <label class="form-label">
                        New password
                        <span class="text-muted small">(optional)</span>
                    </label>
                    <input type="password"
                           id="editPassword"
                           class="form-control"
                           autocomplete="new-password" />
                </div>
            </div>

            <div class="modal-footer">
                <button type="button"
                        class="btn btn-secondary"
                        data-bs-dismiss="modal">
                    Close
                </button>
                <button type="button"
                        class="btn btn-primary"
                        id="btnSaveProfile">
                    Save
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var btnSave = document.getElementById('btnSaveProfile');
            var errorBox = document.getElementById('editProfileError');
            var successBox = document.getElementById('editProfileSuccess');
            var passwordInput = document.getElementById('editPassword');
            var modalElement = document.getElementById('editProfileModal');

            function hideMessages() {
                if (errorBox) {
                    errorBox.classList.add('d-none');
                    errorBox.textContent = '';
                }
                if (successBox) {
                    successBox.classList.add('d-none');
                    successBox.textContent = '';
                }
            }

            // Khi mở modal: clear password + message
            if (modalElement) {
                modalElement.addEventListener('show.bs.modal', function () {
                    if (passwordInput) {
                        passwordInput.value = '';
                    }
                    hideMessages();
                });
            }

            if (btnSave) {
                btnSave.addEventListener('click', function (e) {
                    e.preventDefault();

                    hideMessages();

                    var model = {
                        fullName: document.getElementById('editFullName')?.value || '',
                        email: document.getElementById('editEmail')?.value || '',
                        phone: document.getElementById('editPhone')?.value || '',
                        newPassword: document.getElementById('editPassword')?.value || ''
                    };

                    fetch('@Url.Action("UpdateProfile", "Profile", new { area = "Client" })', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json; charset=utf-8'
                            // Nếu sau này bạn bật AntiForgery:
                            // 'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                        },
                        body: JSON.stringify(model)
                    })
                        .then(function (response) {
                            if (!response.ok) {
                                throw new Error('Network response was not ok');
                            }
                            return response.json();
                        })
                        .then(function (res) {
                            if (res && res.success) {
                                if (successBox) {
                                    successBox.classList.remove('d-none');
                                    successBox.textContent = res.message || 'Cập nhật thành công.';
                                }

                                // Reload lại trang để cập nhật UI
                                setTimeout(function () {
                                    window.location.reload();
                                }, 1000);
                            } else {
                                if (errorBox) {
                                    errorBox.classList.remove('d-none');
                                    errorBox.textContent = (res && res.message)
                                        ? res.message
                                        : 'Có lỗi xảy ra, vui lòng thử lại.';
                                }
                            }
                        })
                        .catch(function (error) {
                            if (errorBox) {
                                errorBox.classList.remove('d-none');
                                errorBox.textContent = 'Có lỗi xảy ra, vui lòng thử lại.';
                            }
                            console.error('Error in UpdateProfile fetch:', error);
                        });
                });
            }
        });
    </script>
}
