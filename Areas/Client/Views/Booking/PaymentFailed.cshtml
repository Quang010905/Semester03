@{
    Layout = "~/Areas/Client/Views/Shared/_LayoutClient.cshtml";
    ViewData["Title"] = "Payment failed";
}

@section Styles {
    <style>
        .payment-result-wrapper {
            max-width: 640px;
            margin: 3rem auto;
        }

        .payment-result-card {
            background: radial-gradient(circle at top,#fee2e2 0,#ffffff 45%);
            border-radius: 18px;
            box-shadow: 0 18px 46px rgba(127,29,29,0.35);
            padding: 2.2rem 2rem;
            text-align: center;
            border: 1px solid #fecaca;
        }

        .failure-icon {
            width: 82px;
            height: 82px;
            border-radius: 50%;
            background: #fee2e2;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1rem auto;
            color: #dc2626;
            font-size: 2.4rem;
            box-shadow: 0 12px 26px rgba(248,113,113,0.75);
        }

        .payment-result-card h2 {
            font-weight: 750;
            color: #b91c1c;
        }

        .payment-result-card p {
            color: #4b5563;
            font-size: .95rem;
        }
    </style>
}

<div class="payment-result-wrapper">
    <div class="payment-result-card">
        <div class="failure-icon">
            <i class="bi bi-x-circle"></i>
        </div>
        <h2 class="mb-3">Payment failed</h2>
        <p>
            @(ViewData["ErrorMessage"] ?? "Your payment could not be completed. Please try again or choose another method.")
        </p>

        <a asp-area="Client"
           asp-controller="Cinema"
           asp-action="Index"
           class="btn btn-primary mt-3">
            <i class="bi bi-film me-1"></i> Back to movies
        </a>
    </div>
</div>
