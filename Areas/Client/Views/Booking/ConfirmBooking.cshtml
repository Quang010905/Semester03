@model Semester03.Areas.Client.Models.ViewModels.BookingConfirmVm
@using System.Globalization
@{
    Layout = "~/Areas/Client/Views/Shared/_LayoutClient.cshtml";
    ViewData["Title"] = "Xác nhận đặt vé";
    decimal seatPrice = Model?.SeatPrice ?? 0m;
    int seatCount = Model?.SelectedSeats?.Count ?? 0;
    decimal computedTotal = seatPrice * seatCount;
    decimal totalAmount = (Model != null && Model.TotalAmount > 0) ? Model.TotalAmount : computedTotal;

    string seatIdsFromQuery = "";
    try
    {
        var q = ViewContext?.HttpContext?.Request?.Query;
        if (q != null)
        {
            if (q.TryGetValue("seatIds", out var v) && !string.IsNullOrWhiteSpace(v)) seatIdsFromQuery = v.ToString();
            else if (q.TryGetValue("seatids", out var v2) && !string.IsNullOrWhiteSpace(v2)) seatIdsFromQuery = v2.ToString();
        }
    }
    catch { seatIdsFromQuery = ""; }
}

@section Styles {
    <style>
        .confirm-hero {
            background: linear-gradient(180deg, #eef7ff 0%, #ffffff 100%);
            border-radius: 12px;
            padding: 1.25rem;
            box-shadow: 0 8px 24px rgba(20,40,80,0.06);
        }

        .movie-title {
            font-size: 1.25rem;
            font-weight: 700;
            letter-spacing: 0.2px;
        }

        .badge-seat {
            display: inline-flex;
            align-items: center;
            gap: .45rem;
            padding: .35rem .6rem;
            border-radius: .6rem;
            font-weight: 600;
            box-shadow: 0 2px 6px rgba(32,40,60,0.04);
            margin: .125rem;
        }

        .price-line {
            font-weight: 600;
        }
    </style>
}

<div class="container py-4">
    <div class="mb-3 d-flex justify-content-between align-items-center">
        <div>
            <h3 class="mb-0">Xác nhận đặt vé</h3>
            <div class="muted-sm">Kiểm tra lại thông tin trước khi thanh toán</div>
        </div>
        <div><a class="btn btn-outline-secondary" href="javascript:history.back()">← Quay lại</a></div>
    </div>

    <div class="row g-3">
        <div class="col-lg-8">
            <div class="confirm-hero mb-3">
                <div class="d-flex justify-content-between align-items-start gap-3">
                    <div>
                        <div class="movie-title">@Model.MovieTitle</div>
                        <div class="muted-sm mt-1">@Model.CinemaName &nbsp;•&nbsp; @Model.ScreenName</div>
                        <div class="muted-sm mt-1">Suất: <strong>@Model.ShowtimeStart.ToString("dd/MM/yyyy HH:mm")</strong></div>
                    </div>
                    <div class="text-end">
                        <div class="muted-sm">Số ghế</div>
                        <div style="font-size:1.1rem;font-weight:700;color:#e83e8c;">@seatCount</div>
                    </div>
                </div>

                <hr />

                <div>
                    <div class="mb-2 muted-sm">Ghế đã chọn</div>
                    <div class="mb-3">
                        @if (Model.SelectedSeats != null && Model.SelectedSeats.Any())
                        {
                            foreach (var s in Model.SelectedSeats)
                            {
                                <span class="badge badge-seat bg-light border">@s</span>
                            }
                        }
                        else
                        {
                            <div class="text-muted">Không có ghế nào.</div>
                        }
                    </div>

                    <div class="row align-items-center">
                        <div class="col-sm-6">
                            <div class="muted-sm">Giá mỗi ghế</div>
                            <div class="price-line">@seatPrice.ToString("N0") VND</div>
                        </div>
                        <div class="col-sm-6 text-sm-end">
                            <div class="muted-sm">Tổng tạm</div>
                            <div class="h5 text-danger">@totalAmount.ToString("N0") VND</div>
                            <div class="muted-sm">(@seatCount x @seatPrice.ToString("N0"))</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card summary-card p-3 mb-3">
                <div class="table-responsive">
                    <table class="table table-borderless mb-0">
                        <thead>
                            <tr class="muted-sm">
                                <th>Sản phẩm</th>
                                <th class="text-end">Số lượng</th>
                                <th class="text-end">Đơn giá</th>
                                <th class="text-end">Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Vé xem phim — <small class="muted-sm">@Model.MovieTitle</small></td>
                                <td class="text-end">@seatCount</td>
                                <td class="text-end">@seatPrice.ToString("N0") VND</td>
                                <td class="text-end">@totalAmount.ToString("N0") VND</td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <th colspan="3" class="text-end">Tổng cộng</th>
                                <th class="text-end h5 text-danger">@totalAmount.ToString("N0") VND</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>

        </div>

        <div class="col-lg-4">
            <div class="card p-3 mb-3">
                <h6 class="mb-2">Thanh toán</h6>

                <form id="payForm" asp-controller="Booking" asp-action="CreatePaymentUrlVnpay" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="showtimeId" value='@Model.ShowtimeId' />
                    <input type="hidden" id="seatIdsInput" name="seatIds" value='@($"{seatIdsFromQuery}".Replace(" ", ""))' />
                    <input type="hidden" name="amount" value='@totalAmount.ToString("F0", CultureInfo.InvariantCulture)' />

                    <div class="d-grid gap-2 actions mt-2">
                        <button id="btnPay" type="button" class="btn btn-primary btn-lg" data-bs-toggle="modal" data-bs-target="#confirmPayModal">Thanh toán qua VNPAY</button>
                        <button id="btnPrint" type="button" class="btn btn-outline-secondary">In tóm tắt</button>
                        <a href="javascript:history.back()" class="btn btn-light">Chỉnh sửa ghế</a>
                    </div>
                </form>
            </div>

            <div class="card p-3">
                <h6 class="mb-2">Thông tin thêm</h6>
                <dl class="row small mb-0">
                    <dt class="col-6 text-muted">Phim</dt>
                    <dd class="col-6">@Model.MovieTitle</dd>
                    <dt class="col-6 text-muted">Rạp</dt>
                    <dd class="col-6">@Model.CinemaName</dd>
                    <dt class="col-6 text-muted">Phòng</dt>
                    <dd class="col-6">@Model.ScreenName</dd>
                    <dt class="col-6 text-muted">Suất</dt>
                    <dd class="col-6">@Model.ShowtimeStart.ToString("dd/MM/yyyy HH:mm")</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<!-- Confirm modal -->
<div class="modal fade" id="confirmPayModal" tabindex="-1" aria-labelledby="confirmPayModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xác nhận thanh toán</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Bạn sắp chuyển đến trang VNPAY để hoàn tất thanh toán.</p>
                <ul>
                    <li>Số ghế: <strong>@seatCount</strong></li>
                    <li>Tổng tiền: <strong>@totalAmount.ToString("N0") VND</strong></li>
                </ul>
                <p class="muted-sm">Sau khi thanh toán, bạn sẽ được chuyển về trang thông báo và vé sẽ được ghi nhận.</p>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnCancelModal" class="btn btn-light" data-bs-dismiss="modal">Hủy</button>
                <button type="button" id="btnConfirmPay" class="btn btn-primary">Xác nhận & chuyển đến VNPAY</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Nếu VNPay/custom.min.js tham chiếu `timer` mà bạn không thể sửa, khai báo trước
        window.timer = window.timer || null;
    </script>

    <script>
        (function () {
            const payForm = document.getElementById('payForm');
            const btnConfirmPay = document.getElementById('btnConfirmPay');
            const btnPrint = document.getElementById('btnPrint');
            const btnPay = document.getElementById('btnPay');
            const seatIdsInput = document.getElementById('seatIdsInput');

            // sanitize seatIds from query string if not present in hidden input
            if (!seatIdsInput.value) {
                const qs = new URLSearchParams(window.location.search);
                const qSeatIds = qs.get('seatIds') || qs.get('seatids');
                if (qSeatIds) {
                    seatIdsInput.value = String(qSeatIds).replace(/[^\d,]/g, '').replace(/,+/g, ',').replace(/(^,|,$)/g, '');
                }
            } else {
                seatIdsInput.value = seatIdsInput.value.replace(/[^\d,]/g, '').replace(/,+/g, ',').replace(/(^,|,$)/g, '');
            }

            function getAntiForgeryToken() {
                const t = document.querySelector('input[name="__RequestVerificationToken"]');
                return t ? t.value : null;
            }

            function hideBootstrapModalById(id) {
                try {
                    const mEl = document.getElementById(id);
                    if (!mEl) return;
                    const inst = bootstrap.Modal.getInstance(mEl) || bootstrap.Modal.getOrCreateInstance(mEl);
                    if (inst) inst.hide();
                } catch (e) {
                    // ignore - bootstrap may not be available in edge cases
                    console.warn('Could not hide modal', e);
                }
            }

            btnConfirmPay.addEventListener('click', function () {
                // disable button UI
                btnConfirmPay.disabled = true;
                const originalBtnText = btnConfirmPay.innerText;
                btnConfirmPay.innerText = 'Đang chuyển...';

                (async () => {
                    try {
                        // validate seatIds
                        if (!seatIdsInput.value) {
                            alert('Không có ghế để thanh toán. Vui lòng kiểm tra lại.');
                            return;
                        }

                        // validate amount from hidden input
                        const rawAmount = payForm.querySelector('input[name="amount"]').value;
                        const numericAmount = Number(String(rawAmount).replace(/[^\d.\-]/g, ''));
                        if (!rawAmount || Number.isNaN(numericAmount) || !isFinite(numericAmount) || numericAmount <= 0) {
                            alert('Số tiền không hợp lệ.');
                            return;
                        }

                        // prepare form data - ensure seatIds only contain digits and commas
                        const cleanedSeatIds = seatIdsInput.value.replace(/[^\d,]/g, '').replace(/,+/g, ',').replace(/(^,|,$)/g, '');
                        if (!cleanedSeatIds) {
                            alert('Không có ghế hợp lệ để thanh toán.');
                            return;
                        }

                        const formData = new FormData();
                        formData.append('showtimeId', payForm.querySelector('input[name="showtimeId"]').value);
                        formData.append('seatIds', cleanedSeatIds);
                        formData.append('amount', numericAmount.toString()); // send plain numeric string

                        const headers = { 'X-Requested-With': 'XMLHttpRequest' };
                        const token = getAntiForgeryToken();
                        if (token) headers['RequestVerificationToken'] = token;

                        // use fetch to call server action that returns { success, url } JSON
                        const res = await fetch('@Url.Action("CreatePaymentUrlVnpay", "Booking", new { area = "Client" })', {
                            method: 'POST',
                            headers: headers,
                            body: formData,
                            credentials: 'same-origin'
                        });

                        // try to parse response as JSON safely
                        const txt = await res.text();
                        let data;
                        try {
                            data = txt ? JSON.parse(txt) : null;
                        } catch (e) {
                            // server returned non-json; show error
                            throw new Error('Server trả về dữ liệu không hợp lệ: ' + txt);
                        }

                        if (!res.ok || !data) {
                            const msg = (data && data.message) ? data.message : ('Lỗi server: ' + res.status);
                            throw new Error(msg);
                        }

                        if (data.success && data.url) {
                            // Use top.location to exit iframe if page was embedded anywhere
                            try {
                                // prefer top to avoid iframe problems
                                if (window.top && window.top !== window) {
                                    window.top.location.href = data.url;
                                } else {
                                    window.location.href = data.url;
                                }
                            } catch (e) {
                                // some browsers restrict cross-origin top access; fallback to window.open
                                try {
                                    window.open(data.url, '_blank');
                                } catch (exOpen) {
                                    // final fallback
                                    window.location.href = data.url;
                                }
                            }
                        } else {
                            const msg = (data && data.message) ? data.message : 'Không thể tạo URL thanh toán.';
                            throw new Error(msg);
                        }
                    } catch (err) {
                        console.error("Error when creating VNPAY request:", err);
                        alert('Lỗi khi tạo yêu cầu thanh toán: ' + (err && err.message ? err.message : err));
                    } finally {
                        // restore UI and close modal
                        btnConfirmPay.disabled = false;
                        btnConfirmPay.innerText = originalBtnText || 'Xác nhận & chuyển đến VNPAY';
                        hideBootstrapModalById('confirmPayModal');
                    }
                })();
            });

            btnPrint.addEventListener('click', function () {
                window.print();
            });

            btnPay.addEventListener('click', function () {
                // Button only triggers modal via bootstrap attributes. No extra logic needed here.
            });
        })();
    </script>
}
