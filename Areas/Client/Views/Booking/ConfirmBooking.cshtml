@model Semester03.Areas.Client.Models.ViewModels.BookingConfirmVm
@using System.Globalization

@{
    Layout = "~/Areas/Client/Views/Shared/_LayoutClient.cshtml";
    ViewData["Title"] = "Confirm booking";

    decimal seatPrice = Model?.SeatPrice ?? 0m;
    int seatCount = Model?.SelectedSeats?.Count ?? 0;
    decimal computedTotal = seatPrice * seatCount;
    decimal totalAmount = (Model != null && Model.TotalAmount > 0) ? Model.TotalAmount : computedTotal;

    string seatIdsFromQuery = "";
    try
    {
        var q = ViewContext?.HttpContext?.Request?.Query;
        if (q != null)
        {
            if (q.TryGetValue("seatIds", out var v) && !string.IsNullOrWhiteSpace(v)) seatIdsFromQuery = v.ToString();
            else if (q.TryGetValue("seatids", out var v2) && !string.IsNullOrWhiteSpace(v2)) seatIdsFromQuery = v2.ToString();
        }
    }
    catch { seatIdsFromQuery = ""; }
}

@section Styles {
    <style>
        .confirm-hero {
            background: linear-gradient(180deg, #eff6ff 0%, #ffffff 100%);
            border-radius: 16px;
            padding: 1.4rem 1.3rem;
            box-shadow: 0 14px 34px rgba(15,23,42,0.12);
            border: 1px solid rgba(191,219,254,0.9);
        }

        .movie-title {
            font-size: 1.25rem;
            font-weight: 730;
            letter-spacing: 0.2px;
        }

        .muted-sm {
            font-size: .85rem;
            color: #6b7280;
        }

        /* Selected seats chip */
        .badge-seat {
            display: inline-flex;
            align-items: center;
            padding: .35rem .75rem;
            border-radius: 999px;
            font-weight: 650;
            margin: .12rem;
            font-size: .85rem;
            background: #e0f2fe; /* light blue */
            color: #0f172a; /* dark text */
            border: 1px solid #0ea5e9; /* accent border */
            box-shadow: 0 2px 8px rgba(37,99,235,0.28);
        }

        .price-line {
            font-weight: 600;
        }

        .summary-card {
            border-radius: 16px;
            box-shadow: 0 14px 34px rgba(15,23,42,0.12);
            border: 1px solid #e5e7eb;
        }
    </style>
}

<div class="container py-4">
    <div class="mb-3 d-flex justify-content-between align-items-center flex-wrap gap-2">
        <div>
            <h3 class="mb-0">Confirm your booking</h3>
            <div class="muted-sm">Review your information before making the payment.</div>
        </div>
        <div>
            <a class="btn btn-outline-secondary btn-sm" href="javascript:history.back()">← Back</a>
        </div>
    </div>

    <div class="row g-3">
        <div class="col-lg-8">
            <div class="confirm-hero mb-3">
                <div class="d-flex justify-content-between align-items-start gap-3">
                    <div>
                        <div class="movie-title">@Model.MovieTitle</div>
                        <div class="muted-sm mt-1">@Model.CinemaName &nbsp;•&nbsp; @Model.ScreenName</div>
                        <div class="muted-sm mt-1">
                            Showtime:
                            <strong>@Model.ShowtimeStart.ToString("dd/MM/yyyy HH:mm")</strong>
                        </div>
                    </div>
                    <div class="text-end">
                        <div class="muted-sm">Seat count</div>
                        <div style="font-size:1.1rem;font-weight:700;color:#e83e8c;">@seatCount</div>
                    </div>
                </div>

                <hr />

                <div>
                    <div class="mb-2 muted-sm">Selected seats</div>
                    <div class="mb-3">
                        @if (Model.SelectedSeats != null && Model.SelectedSeats.Any())
                        {
                            foreach (var s in Model.SelectedSeats)
                            {
                                <span class="badge-seat">@s</span>
                            }
                        }
                        else
                        {
                            <div class="text-muted">No seats selected.</div>
                        }
                    </div>

                    <div class="row align-items-center">
                        <div class="col-sm-6">
                            <div class="muted-sm">Price per seat</div>
                            <div class="price-line">@seatPrice.ToString("N0") VND</div>
                        </div>
                        <div class="col-sm-6 text-sm-end">
                            <div class="muted-sm">Subtotal</div>
                            <div class="h5 text-danger">@totalAmount.ToString("N0") VND</div>
                            <div class="muted-sm">(@seatCount x @seatPrice.ToString("N0"))</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Coupon select -->
            <div class="card p-3 mb-3">
                <h6 class="mb-2">Discount code</h6>
                <div class="mb-2 small text-muted">
                    Choose a coupon to apply. If this coupon requires points, you need to sign in with your account.
                </div>

                <div class="row g-2 align-items-center">
                    <div class="col">
                        <select id="couponSelect" class="form-select" aria-label="Select discount code">
                            <option value="">-- No discount code --</option>
                            @foreach (var c in Model.AvailableCoupons)
                            {
                                <option value="@c.Id"
                                        data-discount="@c.DiscountPercent"
                                        data-minpoints="@((c.MinimumPointsRequired ?? 0))">
                                    @c.Name — @c.DiscountPercent.ToString("N2")% @(
                                c.MinimumPointsRequired.HasValue && c.MinimumPointsRequired.Value > 0
                                ? $" (Requires {c.MinimumPointsRequired} points)"
                                : ""
                                )
                                </option>
                            }
                        </select>
                    </div>
                    <div class="col-auto">
                        <button id="btnApplyCoupon" class="btn btn-outline-primary">Apply</button>
                    </div>
                </div>

                <div id="couponNote" class="mt-2 small text-danger" style="display:none;"></div>
            </div>

            <div class="card summary-card p-3 mb-3">
                <div class="table-responsive">
                    <table class="table table-borderless mb-0">
                        <thead>
                            <tr class="muted-sm">
                                <th>Item</th>
                                <th class="text-end">Quantity</th>
                                <th class="text-end">Unit price</th>
                                <th class="text-end">Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Movie ticket — <small class="muted-sm">@Model.MovieTitle</small></td>
                                <td class="text-end">@seatCount</td>
                                <td class="text-end">@seatPrice.ToString("N0") VND</td>
                                <td class="text-end">@totalAmount.ToString("N0") VND</td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr id="discountRow" style="display:none;">
                                <th colspan="3" class="text-end">Discount</th>
                                <th id="discountAmount" class="text-end text-success">0 VND</th>
                            </tr>
                            <tr>
                                <th colspan="3" class="text-end">Total</th>
                                <th class="text-end h5 text-danger" id="totalAmountDisplay">
                                    @totalAmount.ToString("N0") VND
                                </th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>

        </div>

        <div class="col-lg-4">
            <div class="card p-3 mb-3">
                <h6 class="mb-2">Payment</h6>

                <form id="payForm"
                      asp-controller="Booking"
                      asp-action="CreatePaymentUrlVnpay"
                      method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="showtimeId" value='@Model.ShowtimeId' />
                    <input type="hidden" id="seatIdsInput" name="seatIds"
                           value='@($"{seatIdsFromQuery}".Replace(" ", ""))' />
                    <input type="hidden" id="couponIdInput" name="couponId" value="" />
                    <input type="hidden" id="amountHidden" name="amount"
                           value='@totalAmount.ToString("F0", CultureInfo.InvariantCulture)' />

                    <div class="d-grid gap-2 actions mt-2">
                        <button id="btnPay" type="button"
                                class="btn btn-primary btn-lg"
                                data-bs-toggle="modal"
                                data-bs-target="#confirmPayModal">
                            Pay with VNPAY
                        </button>
                        <button id="btnPrint" type="button" class="btn btn-outline-secondary">
                            Print summary
                        </button>
                        <a href="javascript:history.back()" class="btn btn-light">
                            Edit seats
                        </a>
                    </div>
                </form>
            </div>

            <div class="card p-3">
                <h6 class="mb-2">Additional information</h6>
                <dl class="row small mb-0">
                    <dt class="col-6 text-muted">Movie</dt>
                    <dd class="col-6">@Model.MovieTitle</dd>

                    <dt class="col-6 text-muted">Cinema</dt>
                    <dd class="col-6">@Model.CinemaName</dd>

                    <dt class="col-6 text-muted">Screen</dt>
                    <dd class="col-6">@Model.ScreenName</dd>

                    <dt class="col-6 text-muted">Showtime</dt>
                    <dd class="col-6">@Model.ShowtimeStart.ToString("dd/MM/yyyy HH:mm")</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<!-- Confirm VNPAY modal -->
<div class="modal fade" id="confirmPayModal" tabindex="-1" aria-labelledby="confirmPayModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm payment</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>You are about to be redirected to VNPAY to complete the payment.</p>
                <ul>
                    <li>Number of seats: <strong>@seatCount</strong></li>
                    <li>Total amount: <strong>@totalAmount.ToString("N0") VND</strong></li>
                </ul>
                <p class="muted-sm mb-0">
                    After the payment is completed, you will be redirected back to this site and your tickets
                    will be recorded.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnCancelModal"
                        class="btn btn-light"
                        data-bs-dismiss="modal">
                    Cancel
                </button>
                <button type="button" id="btnConfirmPay" class="btn btn-primary">
                    Confirm & go to VNPAY
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        window.timer = window.timer || null;
    </script>

    <script>
        (function () {
            const payForm = document.getElementById('payForm');
            const btnConfirmPay = document.getElementById('btnConfirmPay');
            const btnPrint = document.getElementById('btnPrint');
            const btnPay = document.getElementById('btnPay');
            const seatIdsInput = document.getElementById('seatIdsInput');
            const couponSelect = document.getElementById('couponSelect');
            const btnApplyCoupon = document.getElementById('btnApplyCoupon');
            const couponNote = document.getElementById('couponNote');
            const couponIdInput = document.getElementById('couponIdInput');
            const discountRow = document.getElementById('discountRow');
            const discountAmountEl = document.getElementById('discountAmount');
            const totalAmountDisplay = document.getElementById('totalAmountDisplay');
            const amountHidden = document.getElementById('amountHidden');

            if (!seatIdsInput.value) {
                const qs = new URLSearchParams(window.location.search);
                const qSeatIds = qs.get('seatIds') || qs.get('seatids');
                if (qSeatIds) {
                    seatIdsInput.value = String(qSeatIds)
                        .replace(/[^\d,]/g, '')
                        .replace(/,+/g, ',')
                        .replace(/(^,|,$)/g, '');
                }
            } else {
                seatIdsInput.value = seatIdsInput.value
                    .replace(/[^\d,]/g, '')
                    .replace(/,+/g, ',')
                    .replace(/(^,|,$)/g, '');
            }

            function getAntiForgeryToken() {
                const t = document.querySelector('input[name="__RequestVerificationToken"]');
                return t ? t.value : null;
            }

            function hideBootstrapModalById(id) {
                try {
                    const mEl = document.getElementById(id);
                    if (!mEl) return;
                    const inst = bootstrap.Modal.getInstance(mEl) || bootstrap.Modal.getOrCreateInstance(mEl);
                    if (inst) inst.hide();
                } catch (e) {
                    console.warn('Could not hide modal', e);
                }
            }

            const originalTotal = Number('@totalAmount.ToString("F0", CultureInfo.InvariantCulture)');

            function formatVnd(n) {
                return Math.round(n).toLocaleString('en-US') + ' VND';
            }

            btnApplyCoupon.addEventListener('click', async function (ev) {
                ev.preventDefault();
                couponNote.style.display = 'none';

                const couponId = couponSelect.value;
                if (!couponId) {
                    couponIdInput.value = "";
                    discountRow.style.display = 'none';
                    discountAmountEl.innerText = '0 VND';
                    amountHidden.value = originalTotal;
                    totalAmountDisplay.innerText = formatVnd(originalTotal);
                    couponSelect.disabled = false;
                    btnApplyCoupon.disabled = false;
                    return;
                }

                const token = getAntiForgeryToken();
                const form = new FormData();
                form.append('couponId', couponId);
                form.append('showtimeId', payForm.querySelector('input[name="showtimeId"]').value);
                form.append('seatIds', seatIdsInput.value);
                form.append('amount', amountHidden.value);

                const headers = {};
                if (token) headers['RequestVerificationToken'] = token;

                try {
                    const res = await fetch('@Url.Action("ValidateCouponAjax", "Booking", new { area = "Client" })', {
                        method: 'POST',
                        headers: headers,
                        body: form,
                        credentials: 'same-origin'
                    });

                    const data = await res.json();
                    if (!res.ok || !data) {
                        throw new Error((data && data.message) ? data.message : ('Server error: ' + res.status));
                    }

                    if (data.success) {
                        const discount = Number(data.discountAmount || 0);
                        const newTotal = Number(data.newTotal || 0);

                        couponIdInput.value = couponId;
                        discountRow.style.display = '';
                        discountAmountEl.innerText = formatVnd(discount);
                        totalAmountDisplay.innerText = formatVnd(newTotal);
                        amountHidden.value = newTotal.toString();

                        couponNote.style.display = 'none';
                        btnApplyCoupon.disabled = true;
                        couponSelect.disabled = true;
                    } else {
                        couponNote.innerText = data.message || 'This discount code cannot be applied.';
                        couponNote.style.display = '';
                        couponIdInput.value = "";
                        discountRow.style.display = 'none';
                        discountAmountEl.innerText = '0 VND';
                        amountHidden.value = originalTotal;
                        totalAmountDisplay.innerText = formatVnd(originalTotal);
                    }
                } catch (err) {
                    console.error('Validate coupon error', err);
                    couponNote.innerText = 'Error while validating discount code.';
                    couponNote.style.display = '';
                }
            });

            btnConfirmPay.addEventListener('click', function () {
                btnConfirmPay.disabled = true;
                const originalBtnText = btnConfirmPay.innerText;
                btnConfirmPay.innerText = 'Redirecting...';

                (async () => {
                    try {
                        if (!seatIdsInput.value) {
                            alert('No seats to pay for. Please check again.');
                            return;
                        }

                        const rawAmount = amountHidden.value;
                        const numericAmount = Number(String(rawAmount).replace(/[^\d.\-]/g, ''));
                        if (!rawAmount || Number.isNaN(numericAmount) || !isFinite(numericAmount) || numericAmount <= 0) {
                            alert('Invalid amount.');
                            return;
                        }

                        const cleanedSeatIds = seatIdsInput.value
                            .replace(/[^\d,]/g, '')
                            .replace(/,+/g, ',')
                            .replace(/(^,|,$)/g, '');

                        if (!cleanedSeatIds) {
                            alert('No valid seats to pay for.');
                            return;
                        }

                        const formData = new FormData();
                        formData.append('showtimeId', payForm.querySelector('input[name="showtimeId"]').value);
                        formData.append('seatIds', cleanedSeatIds);
                        formData.append('amount', numericAmount.toString());
                        formData.append('couponId', document.getElementById('couponIdInput').value || "");

                        const headers = { 'X-Requested-With': 'XMLHttpRequest' };
                        const token = getAntiForgeryToken();
                        if (token) headers['RequestVerificationToken'] = token;

                        const res = await fetch('@Url.Action("CreatePaymentUrlVnpay", "Booking", new { area = "Client" })', {
                            method: 'POST',
                            headers: headers,
                            body: formData,
                            credentials: 'same-origin'
                        });

                        const txt = await res.text();
                        let data;
                        try {
                            data = txt ? JSON.parse(txt) : null;
                        } catch (e) {
                            throw new Error('Server returned invalid data: ' + txt);
                        }

                        if (!res.ok || !data) {
                            const msg = (data && data.message) ? data.message : ('Server error: ' + res.status);
                            throw new Error(msg);
                        }

                        if (data.success && data.url) {
                            try {
                                if (window.top && window.top !== window) {
                                    window.top.location.href = data.url;
                                } else {
                                    window.location.href = data.url;
                                }
                            } catch (e) {
                                try {
                                    window.open(data.url, '_blank');
                                } catch (exOpen) {
                                    window.location.href = data.url;
                                }
                            }
                        } else {
                            const msg = (data && data.message)
                                ? data.message
                                : 'Could not create payment URL.';
                            throw new Error(msg);
                        }
                    } catch (err) {
                        console.error("Error when creating VNPAY request:", err);
                        alert('Error while creating payment request: ' + (err && err.message ? err.message : err));
                    } finally {
                        btnConfirmPay.disabled = false;
                        btnConfirmPay.innerText = originalBtnText || 'Confirm & go to VNPAY';
                        hideBootstrapModalById('confirmPayModal');
                    }
                })();
            });

            btnPrint.addEventListener('click', function () {
                window.print();
            });

            btnPay.addEventListener('click', function () {
                // only triggers modal
            });
        })();
    </script>
}
