@{
    Layout = "~/Areas/Client/Views/Shared/_LayoutClient.cshtml";
    ViewData["Title"] = "Thanh toán thành công";

    var seatLabels = ViewData["SeatLabels"] as List<string> ?? new List<string>();
    var showtimeId = ViewData["ShowtimeId"]?.ToString();
    var totalAmount = (decimal)(ViewData["TotalAmount"] ?? 0m);         // sau giảm
    var pricePerSeat = (decimal)(ViewData["PricePerSeat"] ?? 0m);

    var originalAmount = (decimal)(ViewData["OriginalAmount"] ?? totalAmount);
    var discountAmount = (decimal)(ViewData["DiscountAmount"] ?? 0m);
    var pointsAwarded = (int)(ViewData["PointsAwarded"] ?? 0);

    var processingError = ViewData["PaymentProcessingError"] as string;
    var showtimeSeatIds = ViewData["ShowtimeSeatIds"] as string ?? "";
    }
@Html.AntiForgeryToken()

@section Styles {
    <style>
        .success-container {
            max-width: 700px;
            margin: 3rem auto;
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 8px 24px rgba(20,40,80,0.08);
            padding: 2rem;
            text-align: center;
        }

        .success-icon {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: #e8f9f0;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1rem auto;
            color: #28a745;
            font-size: 2.5rem;
        }

        .success-title {
            font-size: 1.6rem;
            font-weight: 700;
            color: #222;
            margin-bottom: .5rem;
        }

        .badge-seat {
            display: inline-block;
            background: #f8f9fa;
            border: 1px solid #dee2e6;
            border-radius: .6rem;
            padding: .35rem .65rem;
            margin: .125rem;
            font-weight: 600;
            color: #333;
        }

        .total-amount {
            font-size: 1.25rem;
            font-weight: 700;
            color: #d63384;
        }

        .error-box {
            background: #fff3f2;
            border: 1px solid #ffd6d0;
            color: #b02a37;
            padding: .75rem 1rem;
            border-radius: .5rem;
            margin-bottom: 1rem;
        }

        #emailStatus {
            margin-top: 1rem;
        }
    </style>
}

<div class="success-container">
    <div class="success-icon"><i class="bi bi-check-lg"></i></div>
    <div class="success-title">Thanh toán thành công!</div>
    <div class="success-desc">Cảm ơn bạn đã đặt vé. Vé điện tử của bạn sẽ được gửi đến email của bạn.</div>

    @if (!string.IsNullOrEmpty(processingError))
    {
        <div class="error-box">
            <strong>Lưu ý:</strong> @processingError
        </div>
    }

    <div class="ticket-summary text-start mt-3">
        <h6 class="fw-bold mb-3">Thông tin vé</h6>
        <div class="mb-2"><strong>Mã suất chiếu:</strong> @showtimeId</div>
        <div class="mb-2">
            <strong>Ghế:</strong>
            @if (seatLabels.Any())
            {
                foreach (var s in seatLabels)
                {
                    <span class="badge-seat">@s</span>
                }
            }
            else
            {
                <span class="text-muted">Không xác định</span>
            }
        </div>
        <div class="mb-2"><strong>Giá mỗi ghế:</strong> @pricePerSeat.ToString("N0") VND</div>

        @if (discountAmount > 0)
        {
            <div class="mb-2"><strong>Tổng trước khuyến mãi:</strong> @originalAmount.ToString("N0") VND</div>
            <div class="mb-2"><strong>Giảm giá:</strong> -@discountAmount.ToString("N0") VND</div>
        }

        <div class="mb-2">
            <strong>Tổng thanh toán:</strong>
            <span class="total-amount">@totalAmount.ToString("N0") VND</span>
        </div>

        @if (pointsAwarded > 0)
        {
            <div class="mb-2">
                <strong>Điểm nhận được:</strong> @pointsAwarded điểm
            </div>
        }

        <div id="emailStatus" class="alert alert-info p-2 mt-3">
            Đang gửi vé tới email của bạn...
        </div>
    </div>

    <div class="actions d-flex justify-content-center gap-3 mt-4">
        <a href="@Url.Action("Index","Cinema", new { area = "Client" })" class="btn btn-primary"><i class="bi bi-house-door me-2"></i>Về trang chủ</a>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const icon = document.querySelector(".success-icon i");
            if (icon) {
                icon.style.transform = "scale(0)";
                icon.style.transition = "transform 0.3s ease";
                setTimeout(() => icon.style.transform = "scale(1)", 100);
            }

            const showtimeSeatIds = "@(showtimeSeatIds)";
            const emailStatus = document.getElementById("emailStatus");
            const btnResend = document.getElementById("btnResend");
            const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

            async function sendEmail() {
                if (!showtimeSeatIds) {
                    emailStatus.className = "alert alert-warning p-2";
                    emailStatus.innerText = "Không có thông tin ghế để gửi email.";
                    return;
                }

                emailStatus.className = "alert alert-info p-2";
                emailStatus.innerText = "Đang gửi vé tới email của bạn...";

                const form = new FormData();
                form.append("__RequestVerificationToken", token);
                form.append("showtimeSeatIds", showtimeSeatIds);

                try {
                    const res = await fetch("/Client/Booking/SendTicketEmailAjax", {
                        method: "POST",
                        body: form,
                        headers: { "X-Requested-With": "XMLHttpRequest" }
                    });

                    const data = await res.json();
                    if (data.success) {
                        emailStatus.className = "alert alert-success p-2";
                        emailStatus.innerText = "Email đã được gửi. Vui lòng kiểm tra hộp thư (hoặc mục Spam).";
                    } else {
                        emailStatus.className = "alert alert-danger p-2";
                        emailStatus.innerText = data.message || "Gửi email thất bại.";
                    }
                } catch (err) {
                    console.error(err);
                    emailStatus.className = "alert alert-danger p-2";
                    emailStatus.innerText = "Lỗi khi gửi email: " + err.message;
                }
            }

            // Gửi tự động khi load trang
            setTimeout(sendEmail, 800);

            // Nút gửi lại
            btnResend.addEventListener("click", e => {
                e.preventDefault();
                sendEmail();
            });
        });
    </script>
}
