@using System
@using System.IO
@using Microsoft.AspNetCore.Hosting
@model Semester03.Areas.Client.Models.ViewModels.MovieDetailsVm

@{
    Layout = "~/Areas/Client/Views/Shared/_LayoutClient.cshtml";

    Func<string, string> Img = (raw) =>
    {
        var noImageUrl = Url.Content("~/Content/Uploads/noimage.png");

        try
        {
            if (string.IsNullOrWhiteSpace(raw))
                return noImageUrl;

            if (raw.StartsWith("http", StringComparison.OrdinalIgnoreCase))
                return raw;

            var file = raw.Replace("\\", "/").Trim();

            var keyword = "Content/Uploads/Movies";
            var idxKeyword = file.IndexOf(keyword, StringComparison.OrdinalIgnoreCase);
            if (idxKeyword >= 0)
            {
                var lastSlash = file.LastIndexOf('/');
                if (lastSlash >= 0) file = file.Substring(lastSlash + 1);
            }

            if (file.StartsWith("wwwroot/", StringComparison.OrdinalIgnoreCase))
                file = file.Substring("wwwroot/".Length);
            if (file.StartsWith("~/"))
                file = file.Substring(2);
            if (file.StartsWith("/"))
                file = file.Substring(1);

            if (string.IsNullOrWhiteSpace(file))
                return noImageUrl;

            var env = Context.RequestServices.GetService(typeof(IWebHostEnvironment)) as IWebHostEnvironment;
            if (env == null)
            {
                return Url.Content("~/Content/Uploads/Movies/" + Uri.EscapeDataString(file));
            }

            // DÙNG System.IO.Path.Combine để tránh xung đột với bất kỳ tên biến Path nào
            var physical = System.IO.Path.Combine(env.WebRootPath ?? "wwwroot", "Content", "Uploads", "Movies", file);

            if (System.IO.File.Exists(physical))
            {
                return Url.Content("~/Content/Uploads/Movies/" + Uri.EscapeDataString(file));
            }
            else
            {
                return noImageUrl;
            }
        }
        catch
        {
            return Url.Content("~/Content/Uploads/noimage.png");
        }
    };

    var poster = Img(Model.PosterUrl);

    Func<int, string> BookHref = (movieId) =>
    {
        if (User?.Identity?.IsAuthenticated == true)
            return Url.Action("BookTicket", "Booking", new { area = "Client", movieId });

        var target = Url.Action("BookTicket", "Booking", new { area = "Client", movieId });
        return Url.Action("Login", "Account", new { area = "Client", returnUrl = target });
    };
}

@section Styles {
    <style>
        .movie-detail-page {
            max-width: 1200px;
            margin: 0 auto;
        }

        .movie-hero {
            display: grid;
            grid-template-columns: 320px minmax(0, 1fr);
            gap: 2rem;
            align-items: flex-start;
        }

        .movie-poster {
            border-radius: 1rem;
            overflow: hidden;
            box-shadow: 0 12px 30px rgba(0,0,0,0.15);
            background: #fff;
        }

            .movie-poster img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .movie-title {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: .25rem;
        }

        .movie-sub {
            color: #6b7280;
            margin-bottom: .35rem;
            font-size: .95rem;
        }

        .movie-info-small {
            color: #6b7280;
            font-size: .85rem;
            margin-bottom: .75rem;
        }

        .rate-badge {
            font-weight: 700;
            background: linear-gradient(90deg,#ffb347,#ffcc33);
            color: #111;
            padding: .25rem .6rem;
            border-radius: .5rem;
            font-size: .85rem;
            box-shadow: 0 4px 14px rgba(250,204,21,0.4);
        }

        .stars {
            display: flex;
            gap: .2rem;
        }

        .star {
            font-size: 1.35rem;
            cursor: pointer;
            color: #d1d5db;
            transition: .12s ease;
        }

            .star.filled, .star.bi-star-fill {
                color: #fbbf24;
                transform: scale(1.06);
            }

        .btn-primary-ghost {
            background: linear-gradient(90deg,#0d6efd,#4f46e5);
            border: none;
            color: #fff !important;
            padding: .55rem 1.2rem;
            border-radius: .6rem;
            font-weight: 600;
            box-shadow: 0 6px 20px rgba(37,99,235,0.22);
        }

        .synopsis-card {
            background: #fff;
            padding: 1rem 1.25rem;
            border-radius: 1rem;
            border: 1px solid #e5e7eb;
            box-shadow: 0 8px 22px rgba(0,0,0,0.05);
        }

        .comment-box {
            margin-top: 1.5rem;
            background: #fff;
            border-radius: 1rem;
            padding: 1.3rem;
            border: 1px solid #e5e7eb;
            box-shadow: 0 8px 22px rgba(0,0,0,0.05);
        }

        .comment-item {
            border-bottom: 1px solid #e5e7eb;
            padding: .8rem 0;
        }

            .comment-item:last-child {
                border-bottom: none;
            }

        .comment-user {
            font-weight: 600;
            margin-right: .35rem;
        }

        .comment-time {
            font-size: .82rem;
            color: #9ca3af;
        }

        @@media (max-width: 992px) {
            .movie-hero {
                grid-template-columns: 1fr;
            }
        }
    </style>
}

<div class="container py-4 movie-detail-page">
    <a class="btn btn-outline-secondary btn-sm mb-3" href="@Url.Action("Index","Cinema", new { area = "Client" })">&larr; Back to cinema</a>

    <div class="movie-hero">
        <!-- Poster -->
        <div class="movie-poster">
            <img src="@poster" alt="@Model.Title" />
        </div>

        <!-- Info -->
        <div>
            <div class="movie-title">@Model.Title</div>

            <div class="movie-sub">
                @Model.Genre
                @if (!string.IsNullOrWhiteSpace(Model.Director))
                {
                    <span> • Directed by @Model.Director</span>
                }
            </div>

            <div class="movie-info-small mb-2">
                @(Model.DurationMin ?? 0) min • @(Model.StartDate?.ToString("dd MMM yyyy") ?? "--")
            </div>

            <div class="d-flex align-items-center gap-2 mb-3">
                <div class="rate-badge">@((Model.Rate ?? 0).ToString("0.0")) <small>/5</small></div>
                <div class="stars">
                    @for (int i = 1; i <= 5; i++)
                    {
                        var filled = Model.Rate.HasValue && Model.Rate.Value >= i;
                        <i class="star @(filled ? "bi-star-fill filled" : "bi-star")"></i>
                    }
                </div>
            </div>

            <a href="@BookHref(Model.Id)" class="btn btn-primary-ghost mb-4"><i class="bi bi-ticket-perforated me-1"></i> Book tickets</a>

            <div class="synopsis-card">
                <h5 class="mb-2">Synopsis</h5>
                <p class="text-muted mb-0">@Model.Description</p>
            </div>

            <div class="comment-box">
                <h6>Comments & Rating</h6>

                @if (User?.Identity?.IsAuthenticated == true)
                {
                    @Html.AntiForgeryToken()
                    <div class="mb-2 mt-2"><strong>Your rating:</strong></div>
                    <div id="userStars" class="stars mb-3">
                        @for (int i = 1; i <= 5; i++)
                        {
                            <i class="star bi bi-star" data-value="@i"></i>
                        }
                    </div>

                    <textarea id="commentText" class="form-control mb-2" rows="3" placeholder="Write your comment..."></textarea>
                    <button id="submitComment" class="btn btn-primary btn-sm">Submit</button>
                }
                else
                {
                    <div class="alert alert-info mt-2">
                        Please
                        <a href="@Url.Action("Login", "Account", new { area = "Client", returnUrl = Url.Action("Details","Cinema", new { area = "Client", id = Model.Id }) })">sign in</a>
                        to leave a comment.
                    </div>
                }

                <hr />

                <div id="commentsList">
                    @if (Model.Comments != null && Model.Comments.Any())
                    {
                        foreach (var c in Model.Comments)
                        {
                            <div class="comment-item">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <span class="comment-user">@c.UserName</span>
                                        <span class="comment-time">@c.CreatedAt?.ToString("dd MMM yyyy HH:mm")</span>
                                    </div>
                                    <div class="stars">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            var filled = c.Rate >= i;
                                            <i class="star @(filled ? "bi-star-fill filled" : "bi-star")"></i>
                                        }
                                    </div>
                                </div>
                                <div class="mt-1">@Html.Raw(c.Text)</div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-muted">No comments yet.</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (() => {
            const starEls = document.querySelectorAll('#userStars .star');
            let selected = 0;

            function apply(v) {
                starEls.forEach(el => {
                    const val = Number(el.dataset.value);
                    el.classList.remove('bi-star', 'bi-star-fill', 'filled');
                    if (val <= v) el.classList.add('bi-star-fill', 'filled');
                    else el.classList.add('bi-star');
                });
            }

            starEls.forEach(el => {
                el.addEventListener('mouseenter', () => apply(Number(el.dataset.value)));
                el.addEventListener('mouseleave', () => apply(selected));
                el.addEventListener('click', () => {
                    selected = Number(el.dataset.value);
                    apply(selected);
                });
            });

            const btn = document.getElementById('submitComment');
            if (!btn) return;

            btn.addEventListener('click', async () => {
                const text = document.getElementById('commentText').value.trim();
                if (!selected) return alert('Please choose a rating.');
                if (!text) return alert('Please write a comment.');

                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

                const resp = await fetch('@Url.Action("AddComment", "Cinema", new { area = "Client" })', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                        'RequestVerificationToken': token
                    },
                    body: new URLSearchParams({
                        movieId: '@Model.Id',
                        rate: selected,
                        text: text
                    })
                });

                const data = await resp.json();
                alert(data?.message ?? 'Comment submitted.');
            });
        })();
    </script>
}
