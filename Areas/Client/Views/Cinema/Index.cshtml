@using System
@using System.IO
@using Microsoft.AspNetCore.Hosting
@model Semester03.Areas.Client.Models.ViewModels.CinemaHomeVm

@{
    Layout = "~/Areas/Client/Views/Shared/_LayoutClient.cshtml";
    ViewData["HideCenterMain"] = false;

    // Xử lý ảnh poster
    Func<string, string> Img = (raw) =>
    {
        var noImageUrl = Url.Content("~/Content/Uploads/noimage.png");

        try
        {
            if (string.IsNullOrWhiteSpace(raw))
                return noImageUrl;

            if (raw.StartsWith("http", StringComparison.OrdinalIgnoreCase))
                return raw;

            var file = raw.Replace("\\", "/").Trim();

            var keyword = "Content/Uploads/Movies";
            var idxKeyword = file.IndexOf(keyword, StringComparison.OrdinalIgnoreCase);
            if (idxKeyword >= 0)
            {
                var lastSlash = file.LastIndexOf('/');
                if (lastSlash >= 0) file = file.Substring(lastSlash + 1);
            }

            if (file.StartsWith("wwwroot/", StringComparison.OrdinalIgnoreCase))
                file = file.Substring("wwwroot/".Length);
            if (file.StartsWith("~/"))
                file = file.Substring(2);
            if (file.StartsWith("/"))
                file = file.Substring(1);

            if (string.IsNullOrWhiteSpace(file))
                return noImageUrl;

            var env = Context.RequestServices.GetService(typeof(IWebHostEnvironment)) as IWebHostEnvironment;
            if (env == null)
            {
                return Url.Content("~/Content/Uploads/Movies/" + Uri.EscapeDataString(file));
            }

            var physical = System.IO.Path.Combine(env.WebRootPath ?? "wwwroot", "Content", "Uploads", "Movies", file);

            if (System.IO.File.Exists(physical))
            {
                return Url.Content("~/Content/Uploads/Movies/" + Uri.EscapeDataString(file));
            }
            else
            {
                return noImageUrl;
            }
        }
        catch
        {
            return Url.Content("~/Content/Uploads/noimage.png");
        }
    };

    // Link book ticket (nếu chưa login sẽ redirect qua Login kèm returnUrl)
    Func<int, string> BookHref = (id) =>
    {
        if (User?.Identity?.IsAuthenticated == true)
            return Url.Action("BookTicket", "Booking", new { area = "Client", movieId = id });

        var target = Url.Action("BookTicket", "Booking", new { area = "Client", movieId = id });
        return Url.Action("Login", "Account", new { area = "Client", returnUrl = target });
    };
}

@section Styles {
    <style>
        /* ==== PAGE WRAPPER ================================================== */
        .cinema-home-page {
            max-width: 1200px;
            margin: auto;
        }

        h4.page-title {
            font-weight: 800;
            letter-spacing: .08em;
            text-transform: uppercase;
            font-size: .9rem;
            color: #6b7280;
        }

        .cinema-subtitle {
            font-size: 1.8rem;
            font-weight: 800;
            letter-spacing: -.03em;
            margin-bottom: .5rem;
        }

            .cinema-subtitle span {
                background: linear-gradient(90deg,#4f46e5,#ec4899);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
            }

        /* ==== FEATURED CAROUSEL =========================================== */
        .carousel-poster {
            height: 420px;
            width: 100%;
            object-fit: cover;
            border-radius: 1.4rem;
            box-shadow: 0 18px 40px rgba(15,23,42,0.35);
        }

        .featured-meta {
            font-size: .9rem;
            color: #6b7280;
        }

        .featured-chip {
            display: inline-flex;
            align-items: center;
            padding: 0.25rem .7rem;
            border-radius: 999px;
            background: #eef2ff;
            font-size: .8rem;
            font-weight: 600;
            color: #4f46e5;
        }

        /* ==== MOVIE GRID ==================================================== */
        .movie-card {
            position: relative;
            background: radial-gradient(circle at 0 0,#eef2ff,#ffffff 55%);
            border-radius: 1.1rem;
            overflow: hidden;
            border: 1px solid rgba(148,163,184,0.35);
            transition: transform .2s ease, box-shadow .2s ease, border-color .2s ease;
        }

            .movie-card:hover {
                transform: translateY(-6px) translateZ(0);
                box-shadow: 0 18px 40px rgba(15,23,42,0.25);
                border-color: rgba(59,130,246,0.7);
            }

        .movie-poster-wrapper {
            position: relative;
            overflow: hidden;
        }

        .movie-poster {
            height: 260px;
            width: 100%;
            object-fit: cover;
            display: block;
            transform-origin: center;
            transition: transform .35s ease;
        }

        .movie-card:hover .movie-poster {
            transform: scale(1.05);
        }

        .movie-gradient-overlay {
            position: absolute;
            inset: auto 0 0 0;
            height: 40%;
            background: linear-gradient(to top, rgba(15,23,42,0.95), transparent);
            pointer-events: none;
        }

        .movie-badge {
            position: absolute;
            top: .6rem;
            left: .6rem;
            z-index: 2;
        }

            .movie-badge .badge {
                border-radius: 999px;
                font-size: .7rem;
                padding: .18rem .55rem;
            }

            .movie-badge .badge-primary {
                background: linear-gradient(135deg,#4f46e5,#0ea5e9);
            }

            .movie-badge .badge-danger {
                background: linear-gradient(135deg,#ef4444,#f97316);
            }

        .movie-quick-book {
            position: absolute;
            right: .7rem;
            bottom: .9rem;
            z-index: 3;
            padding-inline: .9rem;
            font-size: .78rem;
            border-radius: 999px;
            backdrop-filter: blur(8px);
            background: rgba(15,23,42,0.75);
            color: #f9fafb;
            border: 1px solid rgba(148,163,184,0.6);
        }

            .movie-quick-book i {
                font-size: .85rem;
            }

        .movie-title {
            font-weight: 700;
            font-size: .95rem;
        }

        .movie-meta-line {
            font-size: .8rem;
            color: #6b7280;
        }

        .movie-footer {
            font-size: .8rem;
        }

        .movie-rating-stars {
            color: #facc15;
            font-size: .9rem;
        }

        .movie-tagline {
            font-size: .78rem;
            color: #9ca3af;
        }

        /* ==== SEARCH + FILTER ============================================= */
        .movie-search-box input {
            border-radius: 999px;
        }

        .movie-search-box button {
            border-radius: 999px;
        }

        /* ==== RESPONSIVE =================================================== */
        @@media (max-width: 992px) {
            .carousel-poster {
                height: 320px;
            }
        }

        @@media (max-width: 768px) {
            .carousel-poster {
                height: 240px;
            }

            .movie-poster {
                height: 210px;
            }
        }
    </style>
}

<div class="cinema-home-page py-3">
    <h4 class="page-title">Cinema</h4>
    <div class="d-flex justify-content-between align-items-end mb-3">
        <div>
            <div class="cinema-subtitle"><span>Big screen. Big stories.</span></div>
            <div class="text-muted small">Pick a movie, grab your popcorn, and enjoy the show.</div>
        </div>
    </div>

    <!-- FEATURED -->
    @if (Model?.Featured?.Any() == true)
    {
        <div id="featuredCarousel" class="carousel slide mb-4" data-bs-ride="carousel">
            <div class="carousel-inner">
                @for (int i = 0; i < Model.Featured.Count; i++)
                {
                    var f = Model.Featured[i];
                    var active = i == 0 ? "active" : "";
                    <div class="carousel-item @active">
                        <div class="row g-4 align-items-center">
                            <div class="col-lg-7">
                                <a href="@Url.Action("Details", "Cinema", new { area = "Client", id = f.Id })">
                                    <div class="position-relative">
                                        <img src="@Img(f.PosterUrl)" class="carousel-poster" />
                                        <span class="featured-chip position-absolute top-3 start-3 m-3">
                                            <i class="bi bi-stars me-1"></i> Featured pick
                                        </span>
                                    </div>
                                </a>
                            </div>
                            <div class="col-lg-5">
                                <h2 class="mb-2">@f.Title</h2>
                                <p class="featured-meta mb-2">
                                    @if (f.DurationMin.HasValue)
                                    {
                                        <span class="me-2">
                                            <i class="bi bi-clock me-1"></i>@f.DurationMin min
                                        </span>
                                    }
                                </p>
                                <p class="text-muted">@f.Description</p>
                                <p class="small mb-3">
                                    <strong>Next showtime:</strong>
                                    @if (f.NextShowtime.HasValue)
                                    {
                                        <span class="ms-1">@f.NextShowtime.Value.ToString("dd MMM yyyy HH:mm")</span>
                                    }
                                    else
                                    {
                                        <span class="ms-1 text-muted">Not scheduled</span>
                                    }
                                </p>
                                <a href="@BookHref(f.Id)" class="btn btn-primary rounded-pill px-4">
                                    <i class="bi bi-ticket-perforated me-1"></i> Book ticket
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <button class="carousel-control-prev" type="button" data-bs-target="#featuredCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </button>

            <button class="carousel-control-next" type="button" data-bs-target="#featuredCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon"></span>
            </button>
        </div>
    }

    <!-- SEARCH -->
    <div class="mb-4 movie-search-box">
        <form class="d-flex" onsubmit="event.preventDefault(); filterMovies();">
            <input id="movieSearch" class="form-control me-2" placeholder="Search movies by title..." />
            <button type="submit" class="btn btn-outline-secondary">
                <i class="bi bi-search me-1"></i> Search
            </button>
        </form>
    </div>

    <!-- NOW SHOWING GRID -->
    <div class="d-flex justify-content-between align-items-center mb-2">
        <h5 class="mb-0 fw-bold">Now showing</h5>
        <span class="text-muted small">@((Model.NowShowing?.Count ?? 0)) movies in theaters</span>
    </div>

    <div class="row g-3" id="nowShowingGrid">
        @{
            var index = 0;
        }
        @foreach (var m in Model.NowShowing)
        {
            var isToday = m.NextShowtime?.Date == DateTime.Today;
            <div class="col-6 col-md-4 col-lg-3 movie-grid-item" data-index="@index">
                <div class="movie-card h-100">
                    <div class="movie-poster-wrapper">
                        <div class="movie-badge">
                            <span class="badge badge-primary text-white me-1">Now showing</span>
                            @if (isToday)
                            {
                                <span class="badge badge-danger text-white">Today</span>
                            }
                        </div>

                        <a href="@Url.Action("Details", "Cinema", new { area = "Client", id = m.Id })">
                            <img src="@Img(m.PosterUrl)" class="movie-poster" />
                        </a>

                        <div class="movie-gradient-overlay"></div>

                        @if (m.NextShowtimeId.HasValue)
                        {
                            <a href="@BookHref(m.Id)" class="movie-quick-book btn btn-sm">
                                <i class="bi bi-ticket-perforated me-1"></i> Quick book
                            </a>
                        }
                    </div>

                    <div class="card-body px-3 pt-2 pb-1">
                        <h6 class="movie-title mb-1 text-truncate">@m.Title</h6>
                        <div class="movie-meta-line mb-1 d-flex justify-content-between">
                            <span>
                                <i class="bi bi-clock me-1"></i>@((m.DurationMin ?? 0) + " min")
                            </span>
                        </div>
                        <div class="movie-tagline text-truncate">
                            @m.Description
                        </div>
                    </div>

                    <div class="card-footer bg-transparent border-0 px-3 pb-3 pt-1 movie-footer d-flex justify-content-between align-items-center">
                        <div>
                            @if (m.NextShowtime.HasValue)
                            {
                                <span class="text-muted">
                                    <i class="bi bi-calendar-event me-1"></i>@m.NextShowtime.Value.ToString("dd MMM HH:mm")
                                </span>
                            }
                            else
                            {
                                <span class="text-muted">
                                    <i class="bi bi-calendar-x me-1"></i>No showtime
                                </span>
                            }
                        </div>

                        <div class="movie-rating-stars">
                            @* nếu sau này có Rating thì thay thế *@
                            ★★★★☆
                        </div>
                    </div>
                </div>
            </div>
            index++;
        }
    </div>

    @if (Model.NowShowing != null && Model.NowShowing.Count > 8)
    {
        <div class="text-center mt-3">
            <button type="button" id="btnViewMore" class="btn btn-outline-primary btn-sm rounded-pill px-4">
                View more movies
            </button>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const STEP = 8;
            const gridItems = Array.from(document.querySelectorAll(".movie-grid-item"));
            const btnMore = document.getElementById("btnViewMore");
            let shown = 8;

            function updateGrid() {
                gridItems.forEach((item, idx) => {
                    item.style.display = (idx < shown) ? "" : "none";
                });

                if (btnMore) {
                    btnMore.style.display = (shown >= gridItems.length) ? "none" : "";
                }
            }

            if (gridItems.length > 0) {
                updateGrid();
            }

            if (btnMore) {
                btnMore.addEventListener("click", () => {
                    shown += STEP;
                    updateGrid();
                    if (shown - STEP < gridItems.length) {
                        const firstNew = gridItems[shown - STEP];
                        if (firstNew) firstNew.scrollIntoView({ behavior: "smooth", block: "start" });
                    }
                });
            }
        });

        function filterMovies() {
            const q = document.getElementById("movieSearch").value.toLowerCase();
            document.querySelectorAll(".movie-card").forEach(card => {
                const title = (card.querySelector(".movie-title")?.innerText || "").toLowerCase();
                const wrapper = card.closest(".movie-grid-item");
                if (!wrapper) return;
                wrapper.style.display = title.includes(q) ? "" : "none";
            });
        }
    </script>
}
