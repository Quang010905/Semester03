@using System
@using Microsoft.AspNetCore.Hosting
@model Semester03.Areas.Client.Models.ViewModels.CinemaHomeVm

@{
    Layout = "~/Areas/Client/Views/Shared/_LayoutClient.cshtml";
    ViewData["HideCenterMain"] = false;

    // HÀM ẢNH MOVIE: luôn lấy từ /Content/Uploads/Movies
    Func<string, string> Img = (raw) =>
    {
        var noImageUrl = Url.Content("~/Content/Uploads/noimage.png");

        try
        {
            if (string.IsNullOrWhiteSpace(raw))
                return noImageUrl;

            raw = raw.Trim();

            // Link tuyệt đối (http/https) thì trả về luôn
            if (raw.StartsWith("http", StringComparison.OrdinalIgnoreCase))
                return raw;

            // Bỏ query string nếu có
            var qIndex = raw.IndexOfAny(new[] { '?', '#' });
            if (qIndex >= 0)
                raw = raw.Substring(0, qIndex);

            // Chuẩn hóa slash
            raw = raw.Replace("\\", "/");

            // Chỉ lấy tên file sau dấu /
            var lastSlash = raw.LastIndexOf('/');
            string fileName;
            if (lastSlash >= 0 && lastSlash < raw.Length - 1)
                fileName = raw.Substring(lastSlash + 1);
            else
                fileName = raw;

            if (string.IsNullOrWhiteSpace(fileName))
                return noImageUrl;

            // Build URL: /Content/Uploads/Movies/<fileName>
            return Url.Content("~/Content/Uploads/Movies/" + fileName);
        }
        catch
        {
            return noImageUrl;
        }
    };

    // Link book ticket (nếu chưa login sẽ redirect qua Login kèm returnUrl)
    Func<int, string> BookHref = (id) =>
    {
        if (User?.Identity?.IsAuthenticated == true)
            return Url.Action("BookTicket", "Booking", new { area = "Client", movieId = id });

        var target = Url.Action("BookTicket", "Booking", new { area = "Client", movieId = id });
        return Url.Action("Login", "Account", new { area = "Client", returnUrl = target });
    };
}

@section Styles {
    <style>
        .section-wrapper {
            position: relative;
            padding: 2.2rem 1.8rem 2.5rem;
            border-radius: 1.7rem;
            background: rgba(255,255,255,0.95);
            box-shadow: 0 20px 55px rgba(15,23,42,0.12);
            margin-bottom: 3rem;
            overflow: hidden;
        }

            .section-wrapper::before {
                content: "";
                position: absolute;
                inset: -40%;
                background: radial-gradient(circle at 0 0, rgba(99,102,241,.25), transparent 60%), radial-gradient(circle at 100% 100%, rgba(236,72,153,.25), transparent 60%);
                mix-blend-mode: screen;
                animation: glowMove 22s linear infinite alternate;
                pointer-events: none;
            }

        @@keyframes glowMove {
            from {
                transform: translate3d(0,0,0) scale(1);
            }

            to {
                transform: translate3d(4%, -4%, 0) scale(1.06);
            }
        }

        .section-wrapper::after {
            content: "";
            position: absolute;
            inset: 0;
            border-radius: 1.7rem;
            padding: 2px;
            background: linear-gradient(135deg, #6366f1, #ec4899);
            -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
            mask-composite: exclude;
            pointer-events: none;
        }

        .cinema-home-page {
            max-width: 1200px;
            margin: auto;
        }

        h4.page-title {
            font-weight: 800;
            letter-spacing: .08em;
            text-transform: uppercase;
            font-size: .9rem;
            color: #6b7280;
        }

        .cinema-subtitle {
            font-size: 1.8rem;
            font-weight: 800;
            letter-spacing: -.03em;
            margin-bottom: .5rem;
        }

            .cinema-subtitle span {
                background: linear-gradient(90deg,#4f46e5,#ec4899);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
            }

        .carousel-poster {
            height: 420px;
            width: 100%;
            object-fit: cover;
            border-radius: 1.4rem;
            box-shadow: 0 18px 40px rgba(15,23,42,0.35);
        }

        .featured-meta {
            font-size: .9rem;
            color: #6b7280;
        }

        .featured-chip {
            display: inline-flex;
            align-items: center;
            padding: 0.25rem .7rem;
            border-radius: 999px;
            background: #eef2ff;
            font-size: .8rem;
            font-weight: 600;
            color: #4f46e5;
        }

        .movie-card {
            position: relative;
            background: radial-gradient(circle at 0 0,#eef2ff,#ffffff 55%);
            border-radius: 1.1rem;
            overflow: hidden;
            border: 1px solid rgba(148,163,184,0.35);
            transition: transform .2s ease, box-shadow .2s ease, border-color .2s ease;
        }

            .movie-card:hover {
                transform: translateY(-6px) translateZ(0);
                box-shadow: 0 18px 40px rgba(15,23,42,0.25);
                border-color: rgba(59,130,246,0.7);
            }

        .movie-poster-wrapper {
            position: relative;
            overflow: hidden;
        }

        .movie-poster {
            height: 260px;
            width: 100%;
            object-fit: cover;
            display: block;
            transform-origin: center;
            transition: transform .35s ease;
        }

        .movie-card:hover .movie-poster {
            transform: scale(1.05);
        }

        .movie-gradient-overlay {
            position: absolute;
            inset: auto 0 0 0;
            height: 40%;
            background: linear-gradient(to top, rgba(15,23,42,0.95), transparent);
            pointer-events: none;
        }

        .movie-badge {
            position: absolute;
            top: .6rem;
            left: .6rem;
            z-index: 2;
        }

            .movie-badge .badge {
                border-radius: 999px;
                font-size: .7rem;
                padding: .18rem .55rem;
            }

            .movie-badge .badge-primary {
                background: linear-gradient(135deg,#4f46e5,#0ea5e9);
            }

            .movie-badge .badge-danger {
                background: linear-gradient(135deg,#ef4444,#f97316);
            }

        .movie-quick-book {
            position: absolute;
            right: .7rem;
            bottom: .9rem;
            z-index: 3;
            padding-inline: .9rem;
            font-size: .78rem;
            border-radius: 999px;
            backdrop-filter: blur(8px);
            background: rgba(15,23,42,0.75);
            color: #f9fafb;
            border: 1px solid rgba(148,163,184,0.6);
        }

            .movie-quick-book i {
                font-size: .85rem;
            }

        .movie-title {
            font-weight: 700;
            font-size: .95rem;
        }

        .movie-meta-line {
            font-size: .8rem;
            color: #6b7280;
        }

        .movie-footer {
            font-size: .8rem;
        }

        .movie-rating-stars {
            color: #facc15;
            font-size: .9rem;
        }

        .movie-tagline {
            font-size: .78rem;
            color: #9ca3af;
        }

        .movie-search-box input {
            border-radius: 999px;
        }

        .movie-search-box button {
            border-radius: 999px;
        }

        .week-days {
            display: flex;
            gap: .6rem;
            overflow-x: auto;
            padding-bottom: .5rem;
        }

        .day-card {
            min-width: 110px;
            text-align: center;
            padding: .55rem .6rem;
            border-radius: .9rem;
            cursor: pointer;
            border: 1px solid transparent;
            background: #f3f4f6;
            font-size: .85rem;
            transition: transform 0.12s ease, box-shadow 0.12s ease, background 0.12s ease, border-color 0.12s ease;
        }

            .day-card .fw-semibold {
                font-size: .9rem;
            }

            .day-card.selected {
                background: linear-gradient(135deg, #0d6efd, #6366f1);
                color: #fff;
                border-color: transparent;
                box-shadow: 0 10px 28px rgba(37,99,235,0.4);
            }

        @@media (max-width: 992px) {
            .carousel-poster {
                height: 320px;
            }
        }

        @@media (max-width: 768px) {
            .carousel-poster {
                height: 240px;
            }

            .movie-poster {
                height: 210px;
            }
        }
    </style>
}

<div class="cinema-home-page py-3">
    <div class="section-wrapper">
        <h4 class="page-title">Cinema</h4>
        <div class="d-flex justify-content-between align-items-end mb-3">
            <div>
                <div class="cinema-subtitle"><span>Big screen. Big stories.</span></div>
                <div class="text-muted small">Pick a movie, grab your popcorn, and enjoy the show.</div>
            </div>
        </div>

        <!-- FEATURED -->
        @if (Model?.Featured?.Any() == true)
        {
            <div id="featuredCarousel" class="carousel slide mb-4" data-bs-ride="carousel">
                <div class="carousel-inner">
                    @for (int i = 0; i < Model.Featured.Count; i++)
                    {
                        var f = Model.Featured[i];
                        var active = i == 0 ? "active" : "";
                        <div class="carousel-item @active">
                            <div class="row g-4 align-items-center">
                                <div class="col-lg-7">
                                    <a href="@Url.Action("Details", "Cinema", new { area = "Client", id = f.Id })">
                                        <div class="position-relative">
                                            <img src="@Img(f.PosterUrl)" class="carousel-poster" />
                                            <span class="featured-chip position-absolute top-3 start-3 m-3">
                                                <i class="bi bi-stars me-1"></i> Featured pick
                                            </span>
                                        </div>
                                    </a>
                                </div>
                                <div class="col-lg-5">
                                    <h2 class="mb-2">@f.Title</h2>
                                    <p class="featured-meta mb-2">
                                        @if (f.DurationMin.HasValue)
                                        {
                                            <span class="me-2">
                                                <i class="bi bi-clock me-1"></i>@f.DurationMin min
                                            </span>
                                        }
                                    </p>
                                    <p class="text-muted">@f.Description</p>
                                    <p class="small mb-3">
                                        <strong>Next showtime:</strong>
                                        @if (f.NextShowtime.HasValue)
                                        {
                                            <span class="ms-1">@f.NextShowtime.Value.ToString("dd MMM yyyy HH:mm")</span>
                                        }
                                        else
                                        {
                                            <span class="ms-1 text-muted">Not scheduled</span>
                                        }
                                    </p>
                                    <a href="@BookHref(f.Id)" class="btn btn-primary rounded-pill px-4">
                                        <i class="bi bi-ticket-perforated me-1"></i> Book ticket
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <button class="carousel-control-prev" type="button" data-bs-target="#featuredCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                </button>

                <button class="carousel-control-next" type="button" data-bs-target="#featuredCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon"></span>
                </button>
            </div>
        }

        <!-- SEARCH -->
        <div class="mb-4 movie-search-box">
            <form class="d-flex" onsubmit="event.preventDefault(); filterMovies();">
                <input id="movieSearch" class="form-control me-2" placeholder="Search movies by title..." />
                <button type="submit" class="btn btn-outline-secondary">
                    <i class="bi bi-search me-1"></i> Search
                </button>
            </form>
        </div>

        <!-- DAY SELECTOR -->
        <div class="card p-3 mb-3">
            <div class="week-days" id="weekDays">
                @foreach (var d in Model.WeekDays)
                {
                    var sel = d.Date == Model.SelectedDate.Date ? "selected" : "";
                    <div class="day-card @sel" data-date="@d.ToString("yyyy-MM-dd")">
                        <div class="fw-semibold">@d.ToString("ddd")</div>
                        <div>@d.ToString("dd MMM")</div>
                    </div>
                }
            </div>
        </div>

        <!-- NOW SHOWING GRID -->
        <div class="d-flex justify-content-between align-items-center mb-2">
            <h5 class="mb-0 fw-bold">Now showing</h5>
            <span class="text-muted small">
                @Model.NowShowing.Count movies on @Model.SelectedDate.ToString("dd MMM")
            </span>
        </div>

        <div id="nowShowingGrid">
            @Html.Partial("_CinemaNowShowingGrid", Model.NowShowing)
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function filterMovies() {
            const q = document.getElementById("movieSearch").value.toLowerCase();
            document.querySelectorAll(".movie-grid-item").forEach(item => {
                const title = (item.querySelector(".movie-title")?.innerText || "").toLowerCase();
                item.style.display = title.includes(q) ? "" : "none";
            });
        }

        document.addEventListener("DOMContentLoaded", () => {
            const week = document.getElementById("weekDays");
            if (!week) return;

            week.addEventListener("click", function (e) {
                const card = e.target.closest(".day-card");
                if (!card) return;

                document.querySelectorAll(".day-card").forEach(c => c.classList.remove("selected"));
                card.classList.add("selected");

                const date = card.getAttribute("data-date");
                const grid = document.getElementById("nowShowingGrid");
                grid.innerHTML = "<div class='text-center py-3'>Loading...</div>";

                fetch("@Url.Action("GetMoviesByDate", "Cinema", new { area = "Client" })?date=" + encodeURIComponent(date))
                    .then(r => {
                        if (!r.ok) throw new Error("Failed to load");
                        return r.text();
                    })
                    .then(html => grid.innerHTML = html)
                    .catch(err => {
                        console.error(err);
                        grid.innerHTML = "<div class='text-danger p-3'>Unable to load showtimes.</div>";
                    });
            });
        });
    </script>
}
