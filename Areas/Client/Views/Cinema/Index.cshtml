@using System
@using System.IO
@using Microsoft.AspNetCore.Hosting
@model Semester03.Areas.Client.Models.ViewModels.CinemaHomeVm

@{
    Layout = "~/Areas/Client/Views/Shared/_LayoutClient.cshtml";
    ViewData["HideCenterMain"] = false;

    Func<string, string> Img = (raw) =>
    {
        // fallback image trong wwwroot/Content/Uploads/noimage.png
        var noImageUrl = Url.Content("~/Content/Uploads/noimage.png");

        try
        {
            if (string.IsNullOrWhiteSpace(raw))
                return noImageUrl;

            if (raw.StartsWith("http", StringComparison.OrdinalIgnoreCase))
                return raw;

            // normalize và lấy filename
            var file = raw.Replace("\\", "/").Trim();

            // nếu raw chứa "Content/Uploads/Movies", lấy filename cuối cùng
            var keyword = "Content/Uploads/Movies";
            var idxKeyword = file.IndexOf(keyword, StringComparison.OrdinalIgnoreCase);
            if (idxKeyword >= 0)
            {
                var lastSlash = file.LastIndexOf('/');
                if (lastSlash >= 0) file = file.Substring(lastSlash + 1);
            }

            // nếu raw chứa "wwwroot/" hoặc "~/" hoặc bắt đầu bằng '/', loại bỏ
            if (file.StartsWith("wwwroot/", StringComparison.OrdinalIgnoreCase))
                file = file.Substring("wwwroot/".Length);
            if (file.StartsWith("~/"))
                file = file.Substring(2);
            if (file.StartsWith("/"))
                file = file.Substring(1);

            if (string.IsNullOrWhiteSpace(file))
                return noImageUrl;


            // lấy IWebHostEnvironment để kiểm tra file thực tế trên đĩa
            var env = Context.RequestServices.GetService(typeof(IWebHostEnvironment)) as IWebHostEnvironment;
            if (env == null)
            {
                // nếu không lấy được env thì trả đường dẫn URL theo mặc định
                return Url.Content("~/Content/Uploads/Movies/" + Uri.EscapeDataString(file));
            }

            // DÙNG System.IO.Path.Combine để tránh xung đột tên Path
            var physical = System.IO.Path.Combine(env.WebRootPath ?? "wwwroot", "Content", "Uploads", "Movies", file);

            if (System.IO.File.Exists(physical))
            {
                return Url.Content("~/Content/Uploads/Movies/" + Uri.EscapeDataString(file));
            }
            else
            {
                return noImageUrl;
            }
        }
        catch
        {
            return Url.Content("~/Content/Uploads/noimage.png");
        }
    };

    Func<int, string> BookHref = (id) =>
    {
        if (User?.Identity?.IsAuthenticated == true)
            return Url.Action("BookTicket", "Booking", new { area = "Client", movieId = id });

        var target = Url.Action("BookTicket", "Booking", new { area = "Client", movieId = id });
        return Url.Action("Login", "Account", new { area = "Client", returnUrl = target });
    };
}

@section Styles {
    <style>
        .cinema-home-page {
            max-width: 1200px;
            margin: auto;
        }

        h4.page-title {
            font-weight: 700;
        }

        .carousel-poster {
            height: 420px;
            width: 100%;
            object-fit: cover;
            border-radius: 1rem;
            box-shadow: 0 10px 28px rgba(0,0,0,0.15);
        }

        .movie-card {
            background: #fff;
            border: 1px solid #e5e7eb;
            border-radius: .9rem;
            overflow: hidden;
            transition: .2s ease;
        }

            .movie-card:hover {
                transform: translateY(-4px);
                box-shadow: 0 12px 30px rgba(0,0,0,0.16);
            }

        .movie-poster {
            height: 260px;
            width: 100%;
            object-fit: cover;
            border-bottom: 1px solid #e5e7eb;
        }

        .movie-title {
            font-weight: 600;
            font-size: .95rem;
        }

        .slider-wrapper {
            overflow: hidden;
        }

        .slider-track {
            display: flex;
            gap: 1rem;
            transition: transform .5s ease;
        }

        .slider-item {
            min-width: 220px;
            flex: 0 0 220px;
        }

        @@media (max-width: 768px) {
            .carousel-poster {
                height: 240px;
            }

            .movie-poster {
                height: 200px;
            }

            .slider-item {
                min-width: 160px;
            }
        }
    </style>
}

<div class="cinema-home-page py-3">
    <h4 class="page-title mb-3">Cinema</h4>

    <!-- FEATURED -->
    @if (Model?.Featured?.Any() == true)
    {
        <div id="featuredCarousel" class="carousel slide mb-4" data-bs-ride="carousel">
            <div class="carousel-inner">
                @for (int i = 0; i < Model.Featured.Count; i++)
                {
                    var f = Model.Featured[i];
                    var active = i == 0 ? "active" : "";
                    <div class="carousel-item @active">
                        <div class="row g-4 align-items-center">
                            <div class="col-lg-7">
                                <a href="@Url.Action("Details", "Cinema", new { area="Client", id=f.Id })">
                                    <img src="@Img(f.PosterUrl)" class="carousel-poster" />
                                </a>
                            </div>
                            <div class="col-lg-5">
                                <h2>@f.Title</h2>
                                <p class="text-muted">@f.Description</p>
                                <p class="small">
                                    <strong>Next showtime:</strong>
                                    @if (f.NextShowtime.HasValue)
                                    {
                                        <span>@f.NextShowtime.Value.ToString("dd MMM yyyy HH:mm")</span>
                                        <span class="ms-2 text-muted">(@String.Format("{0:N0}", f.NextPrice) VND)</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not scheduled</span>
                                    }
                                </p>
                                <a href="@BookHref(f.Id)" class="btn btn-primary">
                                    <i class="bi bi-ticket-perforated me-1"></i> Book ticket
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <button class="carousel-control-prev" type="button" data-bs-target="#featuredCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </button>

            <button class="carousel-control-next" type="button" data-bs-target="#featuredCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon"></span>
            </button>
        </div>
    }

    <!-- SEARCH -->
    <div class="mb-4">
        <form class="d-flex" onsubmit="event.preventDefault(); filterMovies();">
            <input id="movieSearch" class="form-control me-2" placeholder="Search movies..." />
            <button type="submit" class="btn btn-outline-secondary">
                <i class="bi bi-search me-1"></i> Search
            </button>
        </form>
    </div>

    <!-- NOW SHOWING GRID -->
    <h5 class="mb-3">Now showing</h5>

    <div class="row g-3" id="nowShowingGrid">
        @{
            var index = 0;
        }
        @foreach (var m in Model.NowShowing)
        {
            <div class="col-6 col-md-4 col-lg-3 movie-grid-item" data-index="@index">
                <div class="card movie-card h-100">
                    <a href="@Url.Action("Details", "Cinema", new { area="Client", id = m.Id })">
                        <img src="@Img(m.PosterUrl)" class="movie-poster" />
                    </a>

                    <div class="card-body p-2">
                        <h6 class="movie-title mb-1">@m.Title</h6>
                        <small class="text-muted">@((m.DurationMin ?? 0) + " min")</small>
                        <p class="small text-truncate">@m.Description</p>
                    </div>

                    <div class="card-footer bg-white border-0 d-flex justify-content-between">
                        <small class="text-muted">@m.NextShowtime?.ToString("dd MMM HH:mm")</small>

                        @if (m.NextShowtimeId.HasValue)
                        {
                            <a href="@BookHref(m.Id)" class="btn btn-sm btn-primary">Book</a>
                        }
                        else
                        {
                            <button class="btn btn-sm btn-secondary" disabled>No showtime</button>
                        }
                    </div>
                </div>
            </div>
            index++;
        }
    </div>

    @if (Model.NowShowing != null && Model.NowShowing.Count > 8)
    {
        <div class="text-center mt-3">
            <button type="button" id="btnViewMore" class="btn btn-outline-primary btn-sm">View more</button>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            // ====== VIEW MORE cho GRID "Now showing" ======
            const STEP = 8; // mỗi lần bấm hiện thêm 8 phim
            const gridItems = Array.from(document.querySelectorAll(".movie-grid-item"));
            const btnMore = document.getElementById("btnViewMore");
            let shown = 8; // hiển thị 8 phim ban đầu

            function updateGrid() {
                gridItems.forEach((item, idx) => {
                    item.style.display = (idx < shown) ? "" : "none";
                });

                if (btnMore) {
                    btnMore.style.display = (shown >= gridItems.length) ? "none" : "";
                }
            }

            if (gridItems.length > 0) {
                updateGrid();
            }

            if (btnMore) {
                btnMore.addEventListener("click", () => {
                    shown += STEP;
                    updateGrid();
                    // tùy chọn: cuộn nhẹ xuống phần vừa hiện thêm để người dùng thấy
                    if (shown - STEP < gridItems.length) {
                        const firstNew = gridItems[shown - STEP];
                        if (firstNew) firstNew.scrollIntoView({ behavior: "smooth", block: "start" });
                    }
                });
            }
        });

        function filterMovies() {
            const q = document.getElementById("movieSearch").value.toLowerCase();
            document.querySelectorAll(".movie-card").forEach(card => {
                const title = (card.querySelector(".movie-title")?.innerText || "").toLowerCase();
                const wrapper = card.closest(".col-6, .slider-item");
                if (!wrapper) return;
                wrapper.style.display = title.includes(q) ? "" : "none";
            });
        }
    </script>
}
