@model IEnumerable<Semester03.Models.ViewModels.FeaturedStoreViewModel>

<div class="row g-3">
    @if (Model != null && Model.Any())
    {
        foreach (var s in Model)
        {
            var img = string.IsNullOrEmpty(s.TenantImg) ? "/images/store-placeholder.png" : $"/images/tenants/{s.TenantImg}";
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card store-card h-100 shadow-sm border-0 rounded-4 overflow-hidden">
                    <img src="@img" class="card-img-top" alt="@s.TenantName" style="height:200px; object-fit:cover;" />
                    <div class="card-body p-2 text-center">
                        <h6 class="card-title fw-bold mb-1">@s.TenantName</h6>
                        <small class="text-muted d-block mb-1">@s.TenantTypeName</small>
                        <p class="text-secondary small mb-2">@s.TenantDescription</p>
                        <a href="@Url.Action("Details", "Stores", new { id = s.TenantId })" class="btn btn-outline-primary btn-sm mt-1">View</a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="p-3 bg-light rounded text-muted text-center">No stores to display</div>
        </div>
    }
</div>
