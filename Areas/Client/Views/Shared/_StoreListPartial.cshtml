@using Semester03.Areas.Client.Models.ViewModels
@model IEnumerable<FeaturedStoreViewModel>

<div class="row g-3">
    @if (Model != null && Model.Any())
    {
        foreach (var s in Model)
        {
            var img = string.IsNullOrEmpty(s.TenantImg)
            ? "/images/store-placeholder.png"
            : $"/images/tenants/{s.TenantImg}";

            <div class="col-12 col-md-6 col-lg-4">
                <div class="card store-card h-100 shadow-sm border-0 rounded-4 overflow-hidden position-relative">
                    <div class="store-card-ribbon bg-gradient text-white small px-3 py-1">
                        Featured
                    </div>
                    <div class="store-card-img-wrapper">
                        <img src="@img"
                             class="card-img-top"
                             alt="@s.TenantName"
                             style="height:220px; object-fit:cover;" />
                        <div class="store-card-overlay-gradient"></div>
                    </div>

                    <div class="card-body p-3 text-center">
                        <h6 class="card-title fw-bold mb-1 text-truncate" title="@s.TenantName">
                            @s.TenantName
                        </h6>
                        <small class="text-muted d-block mb-1">@s.TenantTypeName</small>

                        @if (!string.IsNullOrWhiteSpace(s.TenantDescription))
                        {
                            <p class="text-secondary small mb-2 store-desc-line-clamp">
                                @s.TenantDescription
                            </p>
                        }
                        else
                        {
                            <p class="text-secondary small mb-2 fst-italic">
                                Discover great shopping experiences here.
                            </p>
                        }

                        <a href="@Url.Action("Details", "Stores", new { id = s.TenantId })"
                           class="btn btn-sm btn-gradient-primary mt-1 px-3">
                            View details
                        </a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="p-3 bg-light rounded text-muted text-center">
                No stores available at the moment.
            </div>
        </div>
    }
</div>

<style>
    .store-card {
        border-radius: 1rem;
        transition: all 0.25s ease-in-out;
        background: radial-gradient(circle at top left, #ffeaf4 0, #ffffff 40%, #e9f4ff 100%);
    }

        .store-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 18px 40px rgba(15, 23, 42, 0.16);
        }

    .store-card-img-wrapper {
        position: relative;
        overflow: hidden;
    }

        .store-card-img-wrapper img {
            transition: transform 0.5s ease;
        }

    .store-card:hover .store-card-img-wrapper img {
        transform: scale(1.07);
    }

    .store-card-overlay-gradient {
        position: absolute;
        inset: 0;
        background: linear-gradient(180deg, rgba(0, 0, 0, 0.18), rgba(0, 0, 0, 0.05), transparent);
        pointer-events: none;
    }

    .store-card-ribbon {
        position: absolute;
        top: 12px;
        left: 12px;
        border-radius: 999px;
        z-index: 2;
        font-weight: 600;
        font-size: .7rem;
        background: linear-gradient(135deg, #ff7a18, #ff4b6e, #af002d);
        box-shadow: 0 8px 16px rgba(175, 0, 45, 0.25);
    }

    .store-desc-line-clamp {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .btn-gradient-primary {
        border: none;
        background-image: linear-gradient(135deg, #ff7a18, #ff4b6e, #ff8a00);
        color: #fff;
        border-radius: 999px;
        box-shadow: 0 8px 24px rgba(255, 75, 110, 0.35);
    }

        .btn-gradient-primary:hover {
            color: #fff;
            filter: brightness(1.05);
            transform: translateY(-1px);
        }
</style>
