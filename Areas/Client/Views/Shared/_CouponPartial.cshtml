@using Semester03.Areas.Client.Models.ViewModels
@model CinemaHomeVm

@if (User?.Identity?.IsAuthenticated == true
   && Model?.AvailableCoupons != null
   && Model.AvailableCoupons.Any())
{
    <style>
        .cinema-coupon-pill {
            display: inline-flex;
            align-items: center;
            gap: .55rem;
            padding: .45rem 1rem;
            border-radius: 999px;
            background: radial-gradient(circle at 0 0, #fef9c3, #fffbeb);
            border: 1px solid rgba(250, 204, 21, 0.7);
            font-size: .85rem;
            color: #92400e;
            cursor: pointer;
            box-shadow: 0 12px 30px rgba(234, 179, 8, 0.20);
            transition: transform .12s ease, box-shadow .15s ease, background .15s ease;
        }

            .cinema-coupon-pill i {
                font-size: 1.05rem;
            }

            .cinema-coupon-pill strong {
                font-weight: 700;
            }

            .cinema-coupon-pill:hover {
                transform: translateY(-1px);
                box-shadow: 0 16px 40px rgba(234, 179, 8, 0.25);
                background: radial-gradient(circle at 0 0, #fef3c7, #fef9c3);
            }

            .cinema-coupon-pill span:last-child {
                text-decoration: underline;
                font-weight: 500;
            }

        .coupon-card-title {
            font-size: .95rem;
            font-weight: 600;
        }

        .coupon-list-item {
            padding: .2rem 0;
        }

        .coupon-meta-label {
            font-size: .78rem;
            color: #6b7280;
        }

        .coupon-card {
            border-radius: 1rem;
            border: 1px solid #e5e7eb;
            box-shadow: 0 16px 40px rgba(15, 23, 42, 0.08);
            background: radial-gradient(circle at 0 0, #fef9c3, #ffffff);
        }

            .coupon-card .card-footer {
                border-top-style: dashed;
            }
    </style>

    <!-- PILL nhỏ hiển thị tóm tắt coupon -->
    <button type="button"
            class="cinema-coupon-pill mb-3"
            data-bs-toggle="modal"
            data-bs-target="#couponModal">
        <i class="bi bi-gift-fill"></i>
        <span>
            You have <strong>@Model.UserPoints</strong> points –
            <strong>@Model.AvailableCoupons.Count</strong> coupon(s) available
        </span>
        <span>View details</span>
    </button>

    <!-- MODAL chi tiết coupon -->
    <div class="modal fade" id="couponModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content border-0 rounded-4 shadow-lg">
                <div class="modal-header border-0 border-bottom">
                    <h5 class="modal-title">
                        <i class="bi bi-gift-fill me-2 text-warning"></i> Your available coupons
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <p class="small text-muted mb-3">
                        You currently have <strong>@Model.UserPoints</strong> points.
                        The coupons below will be
                        <strong>automatically applied at checkout</strong>
                        if your movie order meets the conditions.
                    </p>

                    <div class="row g-3">
                        @foreach (var c in Model.AvailableCoupons)
                        {
                            <div class="col-12 col-md-6">
                                <div class="card coupon-card h-100">
                                    <div class="card-body">
                                        <div class="coupon-card-title mb-1">@c.Name</div>

                                        <div class="small text-muted mb-1">
                                            Discount
                                            <strong>@c.DiscountPercent%</strong>
                                            @if (c.MinimumPointsRequired.HasValue)
                                            {
                                                <span class="coupon-meta-label">
                                                    – requires @c.MinimumPointsRequired points
                                                </span>
                                            }
                                        </div>

                                        @if (!string.IsNullOrWhiteSpace(c.Description))
                                        {
                                            <p class="small mb-1">@c.Description</p>
                                        }

                                        <div class="small text-muted">
                                            Valid until: @c.ValidTo.ToString("dd/MM/yyyy")
                                        </div>
                                    </div>

                                    <div class="card-footer bg-white border-0 border-top d-flex justify-content-between align-items-center">
                                        <span class="badge bg-success-subtle text-success">
                                            Eligible for movie ticket purchases
                                        </span>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>
}
else
{
    @* Không bắt buộc hiển thị gì khi không có coupon *@
}
