@using System.Linq
@model object

@{
    var cats = Model as IEnumerable<string>
               ?? ViewBag.Categories as IEnumerable<string>
               ?? Enumerable.Empty<string>();
}

<ul class="list-unstyled mb-0 mall-category-list">
    @if (cats.Any())
    {
        foreach (var c in cats)
        {
            var first = string.IsNullOrWhiteSpace(c)
            ? "?"
            : c.Trim()[0].ToString().ToUpper();

            <li class="mb-2">
                <a href="@Url.Action("Category", "Mall", new { name = c })"
                   class="d-flex align-items-center text-decoration-none mall-category-item">
                    <div class="mall-category-icon me-2 d-flex align-items-center justify-content-center">
                        @first
                    </div>
                    <div class="mall-category-name text-truncate" title="@c">@c</div>
                </a>
            </li>
        }
    }
    else
    {
        <li class="text-muted small">No categories available.</li>
    }
</ul>

<style>
    .mall-category-list {
        padding-left: 0;
    }

    .mall-category-item {
        padding: .25rem .45rem;
        border-radius: .9rem;
        transition: background 0.2s ease, transform 0.12s ease, box-shadow 0.2s ease;
        color: #0f172a;
        background: transparent;
    }

        .mall-category-item:hover {
            background: radial-gradient(circle at 0 0, #eff6ff, #ffffff);
            transform: translateY(-1px);
            box-shadow: 0 10px 26px rgba(15, 23, 42, 0.12);
            text-decoration: none;
        }

    .mall-category-icon {
        width: 40px;
        height: 40px;
        border-radius: 1.1rem;
        font-weight: 700;
        color: #1f2937;
        background: radial-gradient(circle at 20% 0, #fef3c7, #fee2e2 45%, #e0f2fe 100%);
        box-shadow: 0 8px 18px rgba(148, 163, 184, 0.55);
        text-transform: uppercase;
        font-size: .9rem;
        flex-shrink: 0;
    }

    .mall-category-name {
        font-size: .9rem;
        font-weight: 500;
        color: #111827;
    }
</style>
