@* _LayoutClient.cshtml – Mall Layout Premium *@
@inject Semester03.Models.Repositories.TenantRepository _tenantRepo
@inject Semester03.Models.Repositories.EventRepository _event_repo
@using Semester03.Areas.Client.Models.ViewModels

@{
    var hideCenterMainFlag = (ViewData["HideCenterMain"] as bool?) ?? false;
    var routeController = (ViewContext.RouteData.Values["controller"]?.ToString() ?? string.Empty);
    var routeAction = (ViewContext.RouteData.Values["action"]?.ToString() ?? string.Empty);

    var isCinemaIndexRoute =
        string.Equals(routeController, "Cinema", System.StringComparison.OrdinalIgnoreCase)
        && string.Equals(routeAction, "Index", System.StringComparison.OrdinalIgnoreCase);

    // Chỉ ẩn center main khi có flag + đang ở Cinema/Index
    var hideCenterMain = hideCenterMainFlag && isCinemaIndexRoute;

    var isHomeIndexRoute =
        string.Equals(routeController, "Home", System.StringComparison.OrdinalIgnoreCase) &&
        string.Equals(routeAction, "Index", System.StringComparison.OrdinalIgnoreCase);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - @(ViewData["MallName"])</title>

    <!-- CSP -->
    <meta http-equiv="Content-Security-Policy"
          content="
            default-src 'self' https: data:;
            script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.jsdelivr.net https://sandbox.vnpayment.vn;
            style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net https://fonts.googleapis.com https://sandbox.vnpayment.vn;
            img-src 'self' data: https://sandbox.vnpayment.vn https://cdn.jsdelivr.net;
            connect-src 'self' https://sandbox.vnpayment.vn https:;
            frame-src https://sandbox.vnpayment.vn;
            font-src 'self' https://fonts.gstatic.com https://cdn.jsdelivr.net;
            object-src 'none';
          " />

    <script>
        window.timer = window.timer || null;
    </script>

    <!-- Bootstrap 5 + Icons + Font -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet" />

    <style>
        :root {
            --main-max-width: 1500px;
            --primary-color: #2563eb;
            --secondary-color: #6b7280;
            --accent-gradient: linear-gradient(135deg, #f97316, #ec4899);
            --accent-soft: linear-gradient(120deg, #fee2e2, #fef9c3);
            --card-radius: 1.25rem;
            --shadow-lg: 0 26px 70px rgba(15, 23, 42, 0.25);
            --shadow-md: 0 18px 45px rgba(15, 23, 42, 0.16);
            --transition: all 0.22s ease;
        }

        body {
            font-family: 'Inter', system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            /* nền sáng, giống hero ấm áp */
            background: radial-gradient(circle at 0% 0%, #fee2e2 0, transparent 55%), radial-gradient(circle at 100% 0%, #dbeafe 0, transparent 55%), radial-gradient(circle at 50% 100%, #fef3c7 0, transparent 60%), linear-gradient(135deg, #f97316 0%, #ec4899 35%, #4f46e5 100%);
            background-attachment: fixed;
            color: #0f172a;
            min-height: 100vh;
        }

        a,
        a:hover,
        a:focus {
            text-decoration: none;
        }

        .content-maxwide {
            max-width: var(--main-max-width);
            margin: 0 auto;
        }

        /* ================= HEADER / TOP BAR ================= */

        .top-shell {
            position: sticky;
            top: 0;
            z-index: 1030;
            padding: .5rem 0 1rem;
            background: linear-gradient( 180deg, rgba(15, 23, 42, 0.32) 0, rgba(15, 23, 42, 0.12) 40%, transparent 100% );
            backdrop-filter: blur(18px);
        }

        .sticky-top-shadow {
            box-shadow: none;
        }

        /* thanh glass lớn chứa cả top-strip + nav */
        .top-glass-bar {
            margin: 0 auto;
            padding: .4rem 1.6rem .7rem;
            border-radius: 999px;
            background: radial-gradient(circle at 0% 0%, rgba(255, 255, 255, 0.95), rgba(255, 255, 255, 0.75)), radial-gradient(circle at 100% 100%, rgba(255, 255, 255, 0.9), rgba(248, 250, 252, 0.65));
            border: 1px solid rgba(255, 255, 255, 0.9);
            box-shadow: var(--shadow-lg);
            backdrop-filter: blur(26px) saturate(1.3);
        }

        /* mini topline */
        .top-strip {
            font-size: .75rem;
            color: #6b7280;
            padding: .15rem 0 .2rem;
            border-bottom: 1px solid rgba(226, 232, 240, 0.9);
        }

            .top-strip span {
                display: inline-flex;
                align-items: center;
                gap: .35rem;
            }

            .top-strip i {
                font-size: .9rem;
                color: #9ca3af;
            }

        .top-main-row {
            padding: .45rem 0 .4rem;
        }

        /* BRANDING */

        .mall-brand {
            display: flex;
            align-items: center;
            gap: .8rem;
        }

        .mall-brand-logo {
            height: 52px;
            width: 52px;
            border-radius: 999px;
            background: radial-gradient(circle at 20% 0, #fee2e2, transparent 52%), radial-gradient(circle at 80% 100%, #dbeafe, #a5b4fc);
            display: inline-flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            box-shadow: 0 14px 30px rgba(15, 23, 42, 0.45);
        }

            .mall-brand-logo img {
                height: 46px;
                width: auto;
                border-radius: 999px;
            }

        .mall-brand-text-title {
            font-weight: 800;
            font-size: 1.2rem;
            letter-spacing: -0.03em;
            color: #0f172a;
        }

        .mall-brand-text-sub {
            font-size: .75rem;
            color: #6b7280;
        }

        /* NAV DESKTOP – glassy pills */

        .mall-nav {
            background: rgba(255, 255, 255, 0.18);
            padding: .25rem .35rem;
            border-radius: 999px;
            box-shadow: 0 14px 35px rgba(15, 23, 42, 0.18);
            display: inline-flex;
            align-items: center;
            gap: .2rem;
            backdrop-filter: blur(18px);
        }

            .mall-nav .nav-link {
                position: relative;
                padding: .48rem 1.4rem;
                border-radius: 999px;
                font-size: .9rem;
                font-weight: 500;
                color: #0f172a;
                border: 1px solid transparent;
                background: radial-gradient(circle at 0 0, rgba(255, 255, 255, 0.9), rgba(248, 250, 252, 0.72));
                box-shadow: 0 10px 22px rgba(15, 23, 42, 0.16);
                margin: 0 .05rem;
                opacity: .88;
                transition: var(--transition);
                white-space: nowrap;
            }

                .mall-nav .nav-link:hover {
                    opacity: 1;
                    color: #1d4ed8;
                    transform: translateY(-1px);
                    box-shadow: 0 16px 32px rgba(15, 23, 42, 0.28);
                }

                .mall-nav .nav-link.active {
                    opacity: 1;
                    color: #ffffff;
                    border-color: rgba(59, 130, 246, 0.0);
                    background-image: linear-gradient(135deg, #f97316, #ec4899 40%, #4f46e5);
                    box-shadow: 0 18px 38px rgba(79, 70, 229, 0.55);
                }

            /* Mũi tên chevron nhỏ cho tab Stores */
            .mall-nav .dropdown > .nav-link {
                padding-right: 1.7rem;
                display: inline-flex;
                align-items: center;
            }

                .mall-nav .dropdown > .nav-link::after {
                    content: "";
                    display: inline-block;
                    margin-left: 0.35rem;
                    width: 0.55rem;
                    height: 0.55rem;
                    border-left: 2px solid currentColor;
                    border-bottom: 2px solid currentColor;
                    transform: translateY(-1px) rotate(-45deg);
                    transition: transform .18s ease;
                }

                .mall-nav .dropdown:hover > .nav-link::after,
                .mall-nav .dropdown > .nav-link.active::after {
                    transform: translateY(-1px) rotate(-45deg);
                }

            .mall-nav .dropdown-menu {
                border-radius: 1rem;
                border: 1px solid #e5e7eb;
                box-shadow: 0 18px 45px rgba(15, 23, 42, 0.15);
                padding: .35rem 0;
                font-size: .9rem;
                margin-top: .55rem;
            }

                .mall-nav .dropdown-menu .dropdown-item {
                    padding: .4rem 1rem;
                }

                    .mall-nav .dropdown-menu .dropdown-item:hover {
                        background: #eff6ff;
                        color: #1d4ed8;
                    }

        /* RIGHT CONTROL: USER + BELL + LOGIN */

        .btn-icon-circle {
            border-radius: 999px;
            width: 36px;
            height: 36px;
            padding: 0;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border: none;
            background: radial-gradient(circle at 30% 0, #ffffff, #e5e7eb);
            box-shadow: 0 10px 24px rgba(15, 23, 42, 0.26);
        }

        .notif-badge {
            transform: translate(40%, -40%);
        }

        .user-menu-trigger {
            padding: 0 !important;
        }

        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 999px;
            background: radial-gradient(circle at 0% 0%, #fecaca, #f97373, #ef4444);
            display: flex;
            align-items: center;
            justify-content: center;
            color: #ffffff;
            box-shadow: 0 14px 30px rgba(248, 113, 113, 0.55);
            transition: transform .15s ease, box-shadow .15s ease, filter .15s ease;
        }

        .user-avatar-initial {
            font-weight: 700;
            font-size: 1rem;
        }

        .user-menu-trigger:hover .user-avatar {
            transform: translateY(-1px);
            box-shadow: 0 18px 40px rgba(248, 113, 113, 0.7);
            filter: brightness(1.05);
        }

        .user-menu-dropdown {
            min-width: 230px;
            border-radius: 18px;
            padding: 4px 0 8px;
            overflow: hidden;
            margin-top: 8px;
        }

        .user-menu-header {
            padding: 10px 14px 8px;
            border-bottom: 1px solid #f3f4f6;
            background: linear-gradient(135deg, #fee2e2, #fef3c7);
        }

        .user-menu-name {
            font-weight: 700;
            font-size: 0.95rem;
            color: #111827;
        }

        .user-menu-sub {
            font-size: 0.8rem;
            color: #6b7280;
        }

        .user-menu-dropdown .dropdown-item {
            font-size: 0.9rem;
            padding: 8px 14px;
            display: flex;
            align-items: center;
            gap: 6px;
            color: #111827;
        }

            .user-menu-dropdown .dropdown-item i {
                font-size: 1rem;
            }

            .user-menu-dropdown .dropdown-item:hover {
                background: #eff6ff;
                color: #1d4ed8;
            }

        .user-menu-logout {
            color: #dc2626 !important;
            font-weight: 600;
        }

            .user-menu-logout:hover {
                background: #fee2e2;
                color: #b91c1c !important;
            }

        /* ===== NOTIFICATION BELL – glass style giống avatar ===== */

        #notifDropdown {
            width: 40px;
            height: 40px;
            border-radius: 999px;
            padding: 0;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border: none;
            background: radial-gradient(circle at 0% 0%, #fef9c3, #fde047, #facc15);
            box-shadow: 0 14px 30px rgba(250, 204, 21, 0.6);
            transition: transform .15s ease, box-shadow .15s ease, filter .15s ease;
        }

            #notifDropdown i {
                color: #ffffff !important;
                font-size: 1.25rem;
                transition: transform .2s ease, color .2s ease;
            }

            #notifDropdown:hover {
                transform: translateY(-1px);
                box-shadow: 0 18px 40px rgba(250, 204, 21, 0.8);
                filter: brightness(1.05);
            }

                #notifDropdown:hover i {
                    color: #ffffff !important;
                    animation: bell-shake .45s ease-in-out;
                }

        /* hiệu ứng rung chuông khi hover */
        @@keyframes bell-shake {
            0% {
                transform: rotate(0);
            }

            15% {
                transform: rotate(-15deg);
            }

            30% {
                transform: rotate(15deg);
            }

            45% {
                transform: rotate(-10deg);
            }

            60% {
                transform: rotate(10deg);
            }

            75% {
                transform: rotate(-5deg);
            }

            100% {
                transform: rotate(0);
            }
        }

        #notifDropdown:hover i {
            animation: bell-shake .45s ease-in-out;
        }

        /* MOBILE NAV (OFFCANVAS) */

        .mobile-nav-toggle {
            border-radius: 999px;
            border: 1px solid rgba(148, 163, 184, 0.4);
            background: radial-gradient(circle at 0 0, #ffffff, #e5e7eb);
            box-shadow: 0 10px 24px rgba(15, 23, 42, 0.26);
        }

        .offcanvas-header {
            border-bottom: 1px solid #e5e7eb;
        }

        .offcanvas-mall-title {
            font-weight: 700;
            font-size: 1rem;
        }

        .offcanvas .nav-link {
            padding: .6rem 0;
            font-size: .95rem;
            color: #111827;
            border-bottom: 1px solid #f3f4f6;
        }

            .offcanvas .nav-link:last-child {
                border-bottom: none;
            }

            .offcanvas .nav-link.active {
                color: #2563eb;
                font-weight: 600;
            }

        /* ================= MAIN LAYOUT ================= */

        .layout-grid {
            display: grid;
            grid-template-columns: minmax(0, 1fr) 340px;
            gap: 1.5rem;
            align-items: flex-start;
        }

            .layout-grid .main-col {
                align-self: stretch;
            }

            .layout-grid .sidebar-col {
                width: 340px;
            }

        .main-shell {
            margin-top: 1.8rem;
        }

        .card-shell {
            background: rgba(255, 255, 255, 0.98);
            border-radius: var(--card-radius);
            padding: 1.5rem 1.6rem;
            border: 1px solid rgba(226, 232, 240, 0.9);
            box-shadow: var(--shadow-md);
            backdrop-filter: blur(14px);
        }

        /* ================= SIDEBAR: EVENTS + COUPON ================= */

        .sidebar-section-title {
            font-size: .86rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: .08em;
            color: #6b7280;
            margin-bottom: .35rem;
        }

        .sidebar-seeall {
            font-size: .76rem;
            font-weight: 600;
            color: #2563eb;
        }

            .sidebar-seeall i {
                vertical-align: middle;
            }

        .small-event-slider {
            height: 500px;
            max-height: 500px;
            overflow-y: auto;
            -webkit-overflow-scrolling: touch;
            padding: .4rem;
            background: rgba(255, 255, 255, 0.98);
            border-radius: 1rem;
            box-shadow: 0 18px 45px rgba(15, 23, 42, 0.18);
            border: 1px solid rgba(226, 232, 240, 0.9);
            backdrop-filter: blur(14px);
        }

            .small-event-slider .slider-track {
                display: block;
            }

            .small-event-slider .slider-item {
                display: block;
                margin-bottom: .7rem;
            }

            .small-event-slider .small-card {
                display: flex;
                gap: .75rem;
                align-items: flex-start;
                padding: .55rem .6rem;
                border-radius: .9rem;
                transition: transform .12s ease, box-shadow .12s ease, background .15s ease;
                background: linear-gradient(135deg, #f9fafb, #ffffff);
                border: 1px solid rgba(226, 232, 240, 0.9);
            }

                .small-event-slider .small-card:hover {
                    transform: translateY(-3px);
                    box-shadow: 0 18px 40px rgba(15, 23, 42, 0.24);
                    background: #ffffff;
                }

            .small-event-slider .small-poster {
                width: 110px;
                height: 82px;
                object-fit: cover;
                border-radius: .8rem;
                flex-shrink: 0;
                box-shadow: 0 12px 30px rgba(15, 23, 42, 0.35);
            }

            .small-event-slider .small-card-body {
                flex: 1;
            }

            .small-event-slider .small-title {
                font-size: .9rem;
                font-weight: 700;
                margin-bottom: .2rem;
            }

            .small-event-slider .small-meta {
                color: #6b7280;
                font-size: .78rem;
                margin-bottom: .3rem;
            }

        @@media (max-width: 991px) {
            .layout-grid {
                grid-template-columns: 1fr;
            }

                .layout-grid .sidebar-col {
                    width: auto;
                }

            .main-shell {
                margin-top: 1.4rem;
            }

            .top-glass-bar {
                border-radius: 2rem;
                padding-inline: 1.1rem;
            }
        }

        @@media (max-width: 767px) {
            .top-main-row {
                padding-top: .45rem;
                padding-bottom: .35rem;
            }

            .mall-nav {
                display: none !important;
            }

            .top-strip {
                display: none;
            }

            .top-glass-bar {
                padding: .5rem .9rem;
            }

            .small-event-slider {
                height: auto;
                max-height: none;
                box-shadow: 0 10px 25px rgba(15, 23, 42, 0.18);
                overflow-y: visible;
                padding: .5rem 0;
            }

                .small-event-slider .small-card {
                    padding: .35rem;
                }

            .layout-grid .sidebar-col {
                order: 2;
            }
        }

        @@media (min-width: 768px) {
            .mall-nav .dropdown:hover > .dropdown-menu {
                display: block;
                margin-top: 0;
            }

            .mall-nav .dropdown-menu {
                pointer-events: auto;
            }

            .small-event-slider::-webkit-scrollbar {
                width: 10px;
            }

            .small-event-slider::-webkit-scrollbar-thumb {
                background: rgba(148, 163, 184, 0.6);
                border-radius: 999px;
            }

            .small-event-slider {
                scrollbar-gutter: stable;
            }
        }

        @@media (min-width: 1600px) {
            :root {
                --main-max-width: 1700px;
            }
        }

        /* ================= FOOTER ================= */
        footer {
            background: rgba(15, 23, 42, 0.98);
            color: #cbd5f5;
            padding: 3rem 0 2rem;
            font-size: 0.9rem;
            margin-top: 2.5rem;
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- HEADER -->
    <header class="top-shell sticky-top sticky-top-shadow">
        <div class="content-maxwide">
            <div class="top-glass-bar">
                <!-- Top strip (có thể thêm info nếu muốn) -->
                <div class="top-strip d-none d-md-flex justify-content-between">
                    <span>
                        <i class="bi bi-geo-alt"></i>
                        @(ViewData["MallAddress"] ?? "123 Main Street")
                    </span>
                    <span>
                        <i class="bi bi-clock-history"></i>
                        Open daily • 10:00 – 22:00
                    </span>
                </div>

                <!-- Main header row -->
                <div class="d-flex align-items-center justify-content-between top-main-row">
                    <!-- Logo + name -->
                    <div class="mall-brand">
                        <a class="text-decoration-none d-flex align-items-center"
                           href="@Url.Action("Index", "Home", new { area = "Client" })">
                            <div class="mall-brand-logo">
                                <img src="@Url.Content("/admin/img/logo.png")" alt="logo" />
                            </div>
                            <div class="mall-brand-text ms-1">
                                <div class="mall-brand-text-title">
                                    @ViewData["MallName"]
                                </div>
                                <div class="mall-brand-text-sub">
                                    @(ViewData["MallAddress"] ?? "123 Main Street")
                                </div>
                            </div>
                        </a>
                    </div>

                    <!-- NAV DESKTOP -->
                    <nav class="mall-nav d-none d-md-inline-flex">
                        <div class="nav-item dropdown">
                            <a class="nav-link @(routeController == "Stores" ? "active" : "")"
                               href="@Url.Action("Index", "Stores", new { area = "Client" })"
                               id="storesDropdown" role="button">
                                Stores
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="storesDropdown">
                                @foreach (var type in ViewBag.StoreTypes as IEnumerable<dynamic> ?? Enumerable.Empty<dynamic>())
                                {
                                    <li>
                                        <a class="dropdown-item"
                                           href="@Url.Action("Index", "Stores", new { area = "Client", typeId = type.Id })">
                                            @type.Name
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>

                        <a class="nav-link @(routeController == "Cinema" ? "active" : "")"
                           href="@Url.Action("Index", "Cinema", new { area = "Client" })">
                            Cinema
                        </a>

                        <a class="nav-link @(routeController == "Map" ? "active" : "")"
                           href="@Url.Action("Index", "Map", new { area = "Client" })">
                            Map
                        </a>

                        <a class="nav-link @(routeController == "Event" ? "active" : "")"
                           href="@Url.Action("Index", "Event", new { area = "Client" })">
                            Events
                        </a>

                        <a class="nav-link @(routeController == "TenantPromotion" ? "active" : "")"
                           href="@Url.Action("Index", "TenantPromotion", new { area = "Client" })">
                            Promotions
                        </a>

                        <a class="nav-link @(routeController == "Home" && routeAction == "Contact" ? "active" : "")"
                           href="@Url.Action("Contact", "Home", new { area = "Client" })">
                            Contact
                        </a>
                    </nav>

                    <!-- Right controls -->
                    <div class="d-flex align-items-center gap-2">
                        @* USER MENU *@
                        @if (User?.Identity?.IsAuthenticated == true)
                        {
                            var name = User.FindFirst(System.Security.Claims.ClaimTypes.Name)?.Value
                            ?? User.Identity.Name ?? "User";
                            var initialUser = string.IsNullOrWhiteSpace(name)
                            ? "U"
                            : name.Trim()[0].ToString().ToUpper();

                            <div class="dropdown me-1">
                                <a href="#" class="user-menu-trigger" id="profileDropdown"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <div class="user-avatar">
                                        <span class="user-avatar-initial">@initialUser</span>
                                    </div>
                                </a>

                                <div class="dropdown-menu dropdown-menu-end user-menu-dropdown shadow-lg border-0"
                                     aria-labelledby="profileDropdown">
                                    <div class="user-menu-header">
                                        <div class="user-menu-name">@name</div>
                                        <div class="user-menu-sub">Manage your account</div>
                                    </div>

                                    <a class="dropdown-item"
                                       href="@Url.Action("Profile", "Profile", new { area = "Client" })">
                                        <i class="bi bi-person-lines-fill me-2"></i> Profile
                                    </a>

                                    <a class="dropdown-item"
                                       href="@Url.Action("MyTickets", "Ticket", new { area = "Client" })">
                                        <i class="bi bi-ticket-perforated me-2"></i> My Tickets
                                    </a>

                                    <a class="dropdown-item"
                                       href="@Url.Action("MyComplaints", "Complaint", new { area = "Client" })">
                                        <i class="bi bi-chat-dots me-2"></i> Complaints
                                    </a>

                                    <div class="dropdown-divider my-1"></div>

                                    <form method="post"
                                          action="/Client/Account/Logout"
                                          class="m-0">
                                        @Html.AntiForgeryToken()
                                        <button class="dropdown-item user-menu-logout" type="submit">
                                            <i class="bi bi-box-arrow-right me-2"></i> Logout
                                        </button>
                                    </form>
                                </div>
                            </div>
                        }

                        @* NOTIFICATIONS *@
                        <div class="dropdown d-none d-sm-block">
                            <button class="btn btn-sm btn-outline-secondary btn-icon-circle position-relative"
                                    id="notifDropdown"
                                    data-bs-toggle="dropdown"
                                    aria-expanded="false">
                                <i class="bi bi-bell"></i>
                                @if (ViewBag.UnreadNotificationsCount != null && (int)ViewBag.UnreadNotificationsCount > 0)
                                {
                                    <span class="position-absolute top-0 start-100 badge rounded-pill bg-danger notif-badge">
                                        @ViewBag.UnreadNotificationsCount
                                    </span>
                                }
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end"
                                aria-labelledby="notifDropdown"
                                style="width:320px;">
                                <li class="dropdown-header">Notifications</li>
                                <li>@await Html.PartialAsync("_NotificationsPartial")</li>
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <a class="dropdown-item text-center"
                                       href="@Url.Action("Notifications", "Account", new { area = "Client" })">
                                        View all notifications
                                    </a>
                                </li>
                            </ul>
                        </div>

                        @* LOGIN BUTTON *@
                        @if (User?.Identity?.IsAuthenticated != true)
                        {
                            <a id="loginLink"
                               class="btn btn-sm btn-outline-primary rounded-pill px-3 d-none d-sm-inline-flex"
                               href="@Url.Action("Login", "Account", new { area = "Client" })">
                                Login
                            </a>
                        }

                        @* MOBILE TOGGLER *@
                        <button class="btn btn-sm btn-light d-inline-flex d-md-none mobile-nav-toggle"
                                type="button"
                                data-bs-toggle="offcanvas"
                                data-bs-target="#mobileNav"
                                aria-controls="mobileNav">
                            <i class="bi bi-list"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- MOBILE OFFCANVAS NAV -->
    <div class="offcanvas offcanvas-end" tabindex="-1" id="mobileNav" aria-labelledby="mobileNavLabel">
        <div class="offcanvas-header">
            <h6 class="offcanvas-title offcanvas-mall-title" id="mobileNavLabel">
                @ViewData["MallName"]
            </h6>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <nav class="nav flex-column mb-3">
                <a class="nav-link @(routeController == "Stores" ? "active" : "")"
                   href="@Url.Action("Index", "Stores", new { area = "Client" })">
                    Stores
                </a>
                <a class="nav-link @(routeController == "Cinema" ? "active" : "")"
                   href="@Url.Action("Index", "Cinema", new { area = "Client" })">
                    Cinema
                </a>
                <a class="nav-link @(routeController == "Map" ? "active" : "")"
                   href="@Url.Action("Index", "Map", new { area = "Client" })">
                    Map
                </a>
                <a class="nav-link @(routeController == "Event" ? "active" : "")"
                   href="@Url.Action("Index", "Event", new { area = "Client" })">
                    Events
                </a>
                <a class="nav-link @(routeController == "TenantPromotion" ? "active" : "")"
                   href="@Url.Action("Index", "TenantPromotion", new { area = "Client" })">
                    Promotions
                </a>
                <a class="nav-link @(routeController == "Home" && routeAction == "Contact" ? "active" : "")"
                   href="@Url.Action("Contact", "Home", new { area = "Client" })">
                    Contact
                </a>
            </nav>

            <hr />

            @if (User?.Identity?.IsAuthenticated == true)
            {
                var nameMobile = User.FindFirst(System.Security.Claims.ClaimTypes.Name)?.Value
                ?? User.Identity.Name ?? "User";

                <div class="mb-3 small">
                    <div class="fw-semibold">@nameMobile</div>
                    <div class="text-muted">Signed in</div>
                </div>

                <a class="btn btn-outline-secondary w-100 mb-2"
                   href="@Url.Action("Profile", "Profile", new { area = "Client" })">
                    <i class="bi bi-person-lines-fill me-1"></i> Profile
                </a>
                <a class="btn btn-outline-secondary w-100 mb-2"
                   href="@Url.Action("MyTickets", "Ticket", new { area = "Client" })">
                    <i class="bi bi-ticket-perforated me-1"></i> My Tickets
                </a>
                <a class="btn btn-outline-secondary w-100 mb-3"
                   href="@Url.Action("MyComplaints", "Complaint", new { area = "Client" })">
                    <i class="bi bi-chat-dots me-1"></i> Complaints
                </a>

                <form method="post" action="/Client/Account/Logout" class="m-0">
                    @Html.AntiForgeryToken()
                    <button class="btn btn-danger w-100" type="submit">
                        <i class="bi bi-box-arrow-right me-1"></i> Logout
                    </button>
                </form>
            }
            else
            {
                <a class="btn btn-primary w-100"
                   href="@Url.Action("Login", "Account", new { area = "Client" })">
                    <i class="bi bi-box-arrow-in-right me-1"></i> Login
                </a>
            }
        </div>
    </div>

    @* MAIN LAYOUT *@
    @if (!hideCenterMain)
    {
        <main class="container-fluid py-3">
            <div class="content-maxwide">

                @* Hero chỉ xuất hiện ở Home/Index *@
                @if (isHomeIndexRoute)
                {
                    <section class="mb-3">
                        @await Html.PartialAsync("_Hero")
                    </section>
                }

                <div class="main-shell layout-grid">
                    <!-- Main content -->
                    <div class="main-col">
                        <div class="card-shell">
                            @RenderBody()
                        </div>
                    </div>

                    <!-- Sidebar -->
                    <aside class="sidebar-col">
                        @* Cinema coupon – chỉ hiển thị khi model là CinemaHomeVm *@
                        @if (ViewData.Model is CinemaHomeVm cinemaModel)
                        {
                            <div class="mb-3">
                                <div class="card-shell p-3">
                                    <div class="d-flex align-items-center justify-content-between mb-2">
                                        <h6 class="mb-0 sidebar-section-title text-uppercase">
                                            Cinema Coupon
                                        </h6>
                                    </div>
                                    @await Html.PartialAsync("_CouponPartial", cinemaModel)
                                </div>
                            </div>
                        }

                        @* Upcoming events in sidebar *@
                        @{
                            var topEvents = await _event_repo.GetUpcomingEventsAsync(12);

                            Func<string, string> Img = (raw) =>
                            {
                                if (string.IsNullOrWhiteSpace(raw))
                                    return Url.Content("~/images/event-placeholder.png");

                                if (raw.StartsWith("http", System.StringComparison.OrdinalIgnoreCase))
                                    return raw;

                                var s = raw.Replace("wwwroot/", "").TrimStart('~', '/');
                                s = s.Replace(" ", "%20");

                                if (s.StartsWith("Content", System.StringComparison.OrdinalIgnoreCase))
                                    return Url.Content("~/" + s);

                                if (s.StartsWith("images", System.StringComparison.OrdinalIgnoreCase) ||
                                            s.StartsWith("Admin/img", System.StringComparison.OrdinalIgnoreCase))
                                    return Url.Content("~/" + s);

                                if (raw.StartsWith("/"))
                                    return Url.Content("~" + raw);

                                return Url.Content("~/Content/Uploads/Events/" + s);
                            };
                        }

                        <div class="mb-3">
                            <div class="d-flex align-items-center justify-content-between mb-1">
                                <div class="sidebar-section-title">Upcoming Events</div>
                                <a class="sidebar-seeall"
                                   href="@Url.Action("Index", "Event", new { area = "Client" })">
                                    See all <i class="bi bi-arrow-right-short"></i>
                                </a>
                            </div>

                            <div class="small-event-slider mb-2">
                                <div class="slider-track">
                                    @foreach (var e in topEvents ?? Enumerable.Empty<EventCardVm>())
                                    {
                                        var imgUrl = Img(e.ImageUrl);
                                        var start = e.StartDate.HasValue
                                        ? e.StartDate.Value.ToString("dd MMM HH:mm")
                                        : "--";

                                        <div class="slider-item">
                                            <div class="small-card">
                                                <img src="@imgUrl"
                                                     class="small-poster"
                                                     alt="@(e.Title ?? "Event")" />
                                                <div class="small-card-body">
                                                    <div class="small-title" title="@e.Title">
                                                        @(!string.IsNullOrWhiteSpace(e.Title) ? e.Title : "Event")
                                                    </div>
                                                    <div class="small-meta">
                                                        <i class="bi bi-calendar-event"></i> @start
                                                    </div>
                                                    <a class="btn btn-sm btn-light rounded-pill px-3"
                                                       href="@Url.Action("Details", "Event", new { area = "Client", id = e.Id })">
                                                        View details
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </aside>
                </div>
            </div>
        </main>
    }

    <!-- FOOTER -->
    <footer>
        <div class="content-maxwide">
            @await Html.PartialAsync("_Footer")
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>

