@* _LayoutClient.cshtml
   Full layout for Mall website - Modern Premium + Colorful Shopping *@
@inject Semester03.Models.Repositories.TenantRepository _tenantRepo
@inject Semester03.Models.Repositories.EventRepository _event_repo
@using Semester03.Areas.Client.Models.ViewModels

@{
    var hideCenterMainFlag = (ViewData["HideCenterMain"] as bool?) ?? false;
    var routeController = (ViewContext.RouteData.Values["controller"]?.ToString() ?? string.Empty);
    var routeAction = (ViewContext.RouteData.Values["action"]?.ToString() ?? string.Empty);

    var isCinemaIndexRoute =
        string.Equals(routeController, "Cinema", System.StringComparison.OrdinalIgnoreCase)
        && string.Equals(routeAction, "Index", System.StringComparison.OrdinalIgnoreCase);

    // Only hide hero+main when flag is true and current route is Cinema/Index
    var hideCenterMain = hideCenterMainFlag && isCinemaIndexRoute;

    var isHomeIndexRoute =
        string.Equals(routeController, "Home", System.StringComparison.OrdinalIgnoreCase) &&
        string.Equals(routeAction, "Index", System.StringComparison.OrdinalIgnoreCase);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - @(ViewData["MallName"])</title>

    @* CSP meta *@
    <meta http-equiv="Content-Security-Policy"
          content="
            default-src 'self' https: data:;
            script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.jsdelivr.net https://sandbox.vnpayment.vn;
            style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net https://fonts.googleapis.com https://sandbox.vnpayment.vn;
            img-src 'self' data: https://sandbox.vnpayment.vn https://cdn.jsdelivr.net;
            connect-src 'self' https://sandbox.vnpayment.vn https:;
            frame-src https://sandbox.vnpayment.vn;
            font-src 'self' https://fonts.gstatic.com https://cdn.jsdelivr.net;
            object-src 'none';
          " />

    <script>
        window.timer = window.timer || null;
    </script>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet" />

    <style>
        :root {
            --main-max-width: 1500px;
            --primary-color: #2563eb;
            --secondary-color: #6b7280;
            --accent-gradient: linear-gradient(135deg, #4f46e5, #ec4899);
            --card-radius: 1rem;
            --shadow-lg: 0 22px 60px rgba(15, 23, 42, 0.18);
            --transition: all 0.22s ease;
        }

        body {
            font-family: 'Inter', system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
            background: radial-gradient(circle at top, #eff6ff 0, #e0f2fe 22%, #fef3c7 55%, #fdf2f8 85%), #f9fafb;
            color: #0f172a;
            min-height: 100vh;
        }

        a, a:hover, a:focus {
            text-decoration: none;
        }

        /* HEADER / NAVBAR -------------------------------------------------- */
        .top-shell {
            backdrop-filter: blur(14px);
            background: linear-gradient(120deg, rgba(255, 255, 255, 0.92), rgba(248, 250, 252, 0.92));
            border-bottom: 1px solid rgba(148, 163, 184, 0.25);
        }

        .sticky-top-shadow {
            box-shadow: 0 12px 40px rgba(15, 23, 42, 0.12);
        }

        .mall-brand {
            display: flex;
            align-items: center;
            gap: .75rem;
        }

        .mall-brand-logo {
            height: 46px;
            width: 46px;
            border-radius: 999px;
            background: radial-gradient(circle at 25% 0, #fee2e2, #bfdbfe 40%, #a5b4fc 100%);
            display: inline-flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            box-shadow: 0 10px 25px rgba(15, 23, 42, 0.35);
        }

            .mall-brand-logo img {
                height: 42px;
                width: auto;
                border-radius: 999px;
            }

        .mall-brand-text-title {
            font-weight: 800;
            font-size: 1.1rem;
            letter-spacing: -0.03em;
        }

        .mall-brand-text-sub {
            font-size: .75rem;
            color: #6b7280;
        }

        .content-maxwide {
            max-width: var(--main-max-width);
            margin: 0 auto;
        }

        /* NAV TABS MỚI --------------------------------------------------- */
        .mall-nav {
            background: rgba(15, 23, 42, 0.02);
            padding: .25rem .4rem;
            border-radius: 999px;
            box-shadow: 0 8px 20px rgba(15, 23, 42, 0.06);
        }

            .mall-nav .nav-link {
                position: relative;
                padding: .45rem 1.15rem;
                border-radius: 999px;
                font-size: .9rem;
                font-weight: 500;
                color: #111827;
                transition: transform .15s ease, box-shadow .15s ease, color .15s ease;
                z-index: 1;
                overflow: hidden;
            }

                .mall-nav .nav-link::before {
                    content: '';
                    position: absolute;
                    inset: 2px;
                    border-radius: inherit;
                    background: linear-gradient(135deg, #e0f2fe, #fee2e2);
                    opacity: 0;
                    transform: scale(.9);
                    transition: opacity .18s ease, transform .18s ease;
                    z-index: -1;
                }

                .mall-nav .nav-link:hover::before,
                .mall-nav .nav-link.active::before {
                    opacity: 1;
                    transform: scale(1);
                }

                .mall-nav .nav-link:hover,
                .mall-nav .nav-link.active {
                    color: #1d4ed8;
                    font-weight: 600;
                    transform: translateY(-1px);
                    box-shadow: 0 10px 24px rgba(148, 163, 184, 0.35);
                }


        .btn-icon-circle {
            border-radius: 999px;
            width: 32px;
            height: 32px;
            padding: 0;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }

        .notif-badge {
            transform: translate(40%, -40%);
        }

        /* USER DROPDOWN MỚI ------------------------------------------- */
        .user-menu-trigger {
            padding: 0 !important;
        }

        .user-avatar {
            width: 38px;
            height: 38px;
            border-radius: 999px;
            background: radial-gradient(circle at 0% 0%, #fecaca, #f97373, #ef4444);
            display: flex;
            align-items: center;
            justify-content: center;
            color: #ffffff;
            box-shadow: 0 10px 25px rgba(248, 113, 113, 0.45);
            transition: transform .15s ease, box-shadow .15s ease, filter .15s ease;
        }

        .user-avatar-initial {
            font-weight: 700;
            font-size: 1rem;
        }

        .user-menu-trigger:hover .user-avatar {
            transform: translateY(-1px);
            box-shadow: 0 16px 35px rgba(248, 113, 113, 0.65);
            filter: brightness(1.05);
        }

        .user-menu-dropdown {
            min-width: 230px;
            border-radius: 18px;
            padding: 4px 0 8px;
            overflow: hidden;
            margin-top: 8px;
        }

        .user-menu-header {
            padding: 10px 14px 8px;
            border-bottom: 1px solid #f3f4f6;
            background: linear-gradient(135deg, #fee2e2, #fef3c7);
        }

        .user-menu-name {
            font-weight: 700;
            font-size: 0.95rem;
            color: #111827;
        }

        .user-menu-sub {
            font-size: 0.8rem;
            color: #6b7280;
        }

        .user-menu-dropdown .dropdown-item {
            font-size: 0.9rem;
            padding: 8px 14px;
            display: flex;
            align-items: center;
            gap: 6px;
            color: #111827;
        }

            .user-menu-dropdown .dropdown-item i {
                font-size: 1rem;
            }

            .user-menu-dropdown .dropdown-item:hover {
                background: #eff6ff;
                color: #1d4ed8;
            }

        .user-menu-logout {
            color: #dc2626 !important;
            font-weight: 600;
        }

            .user-menu-logout:hover {
                background: #fee2e2;
                color: #b91c1c !important;
            }

        /* HERO ------------------------------------------------------------- */
        .hero {
            background: radial-gradient(circle at top left, #4f46e5, #ec4899);
            color: #fff;
            min-height: 260px;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: left;
            padding: 2.2rem 2.5rem;
            border-radius: 1.4rem;
            box-shadow: var(--shadow-lg);
            position: relative;
            overflow: hidden;
        }

            .hero::before {
                content: '';
                position: absolute;
                inset: 0;
                background: radial-gradient(circle at 10% 10%, rgba(239, 246, 255, 0.15), transparent 55%), radial-gradient(circle at 90% 0%, rgba(248, 250, 252, 0.2), transparent 55%), radial-gradient(circle at 80% 90%, rgba(255, 251, 235, 0.1), transparent 55%);
                pointer-events: none;
            }

        .hero-content {
            position: relative;
            z-index: 1;
            max-width: 520px;
        }

        .hero-title {
            font-size: 2rem;
            font-weight: 800;
            letter-spacing: -0.04em;
            margin-bottom: .35rem;
        }

        .hero-sub {
            font-size: .92rem;
            opacity: 0.9;
            max-width: 420px;
        }

        /* MAIN LAYOUT ------------------------------------------------------ */
        .layout-grid {
            display: grid;
            grid-template-columns: minmax(0, 1fr) 340px;
            gap: 1.5rem;
            align-items: flex-start;
        }

            .layout-grid .main-col {
                align-self: stretch;
            }

            .layout-grid .sidebar-col {
                width: 340px;
            }

        .main-shell {
            margin-top: 1.8rem;
        }

        .card-shell {
            background: #ffffff;
            border-radius: 1.1rem;
            padding: 1.2rem 1.3rem;
            border: 1px solid rgba(226, 232, 240, 0.9);
            box-shadow: 0 16px 40px rgba(15, 23, 42, 0.08);
        }

        footer {
            background: #020617;
            color: #cbd5f5;
            padding: 3rem 0 2rem;
            font-size: 0.9rem;
            margin-top: 2.5rem;
        }

        /* SIDEBAR: EVENTS -------------------------------------------------- */
        .sidebar-section-title {
            font-size: .88rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: .08em;
            color: #6b7280;
            margin-bottom: .35rem;
        }

        .small-event-slider {
            height: 500px;
            max-height: 500px;
            overflow-y: auto;
            -webkit-overflow-scrolling: touch;
            padding: .4rem;
            background: #ffffff;
            border-radius: 1rem;
            box-shadow: 0 18px 45px rgba(15, 23, 42, 0.12);
        }

            .small-event-slider .slider-track {
                display: block;
            }

            .small-event-slider .slider-item {
                display: block;
                margin-bottom: .7rem;
            }

            .small-event-slider .small-card {
                display: flex;
                gap: .75rem;
                align-items: flex-start;
                padding: .55rem .6rem;
                border-radius: .9rem;
                transition: transform .12s ease, box-shadow .12s ease, background .15s ease;
                background: linear-gradient(135deg, #f9fafb, #ffffff);
                border: 1px solid rgba(226, 232, 240, 0.9);
            }

                .small-event-slider .small-card:hover {
                    transform: translateY(-3px);
                    box-shadow: 0 18px 40px rgba(15, 23, 42, 0.18);
                    background: #ffffff;
                }

            .small-event-slider .small-poster {
                width: 110px;
                height: 82px;
                object-fit: cover;
                border-radius: .8rem;
                flex-shrink: 0;
                box-shadow: 0 12px 30px rgba(15, 23, 42, 0.35);
            }

            .small-event-slider .small-card-body {
                flex: 1;
            }

            .small-event-slider .small-title {
                font-size: .9rem;
                font-weight: 700;
                margin-bottom: .2rem;
            }

            .small-event-slider .small-meta {
                color: #6b7280;
                font-size: .78rem;
                margin-bottom: .3rem;
            }

        .sidebar-seeall {
            font-size: .76rem;
            font-weight: 600;
            color: #2563eb;
        }

            .sidebar-seeall i {
                vertical-align: middle;
            }

        /* RESPONSIVE ------------------------------------------------------- */
        @@media (max-width: 991px) {
            .layout-grid {
                grid-template-columns: 1fr;
            }

                .layout-grid .sidebar-col {
                    width: auto;
                }

            .main-shell {
                margin-top: 1.3rem;
            }

            .hero {
                padding: 1.7rem 1.5rem;
                min-height: 220px;
            }

            .hero-title {
                font-size: 1.65rem;
            }
        }

        @@media (max-width: 767px) {
            .mall-nav {
                flex-direction: column;
                gap: .25rem;
            }

            .small-event-slider {
                height: auto;
                max-height: none;
                box-shadow: 0 10px 25px rgba(15, 23, 42, 0.12);
                overflow-y: visible;
                padding: .5rem 0;
            }

                .small-event-slider .small-card {
                    padding: .35rem;
                }

            .layout-grid .sidebar-col {
                order: 2;
            }
        }

        @@media (min-width: 768px) {
            .mall-nav .dropdown:hover > .dropdown-menu {
                display: block;
                margin-top: 0;
            }

            .mall-nav .dropdown-menu {
                pointer-events: auto;
            }

            .small-event-slider::-webkit-scrollbar {
                width: 10px;
            }

            .small-event-slider::-webkit-scrollbar-thumb {
                background: rgba(148, 163, 184, 0.6);
                border-radius: 999px;
            }

            .small-event-slider {
                scrollbar-gutter: stable;
            }
        }

        @@media (min-width: 1600px) {
            :root {
                --main-max-width: 1700px;
            }
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- HEADER -->
    <header class="top-shell sticky-top sticky-top-shadow">
        <div class="content-maxwide">
            <div class="d-flex align-items-center justify-content-between py-2">
                <!-- Logo + name -->
                <div class="mall-brand">
                    <a class="text-decoration-none d-flex align-items-center"
                       href="@Url.Action("Index", "Home", new { area = "Client" })">
                        <div class="mall-brand-logo">
                            <img src="@Url.Content("/admin/img/logo.png")" alt="logo" />
                        </div>
                        <div class="mall-brand-text ms-1">
                            <div class="mall-brand-text-title">
                                @ViewData["MallName"]
                            </div>
                            <div class="mall-brand-text-sub">
                                @(ViewData["MallAddress"] ?? "123 Main Street")
                            </div>
                        </div>
                    </a>
                </div>

                <!-- NAV -->
                <!-- NAV -->
                <nav class="mall-nav d-none d-md-flex align-items-center gap-1">
                    <div class="nav-item dropdown">
                        <a class="nav-link @(routeController == "Stores" ? "active" : "")"
                           href="@Url.Action("Index", "Stores", new { area = "Client" })"
                           id="storesDropdown" role="button">
                            Stores
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="storesDropdown">
                            @foreach (var type in ViewBag.StoreTypes as IEnumerable<dynamic> ?? Enumerable.Empty<dynamic>())
                            {
                                <li>
                                    <a class="dropdown-item"
                                       href="@Url.Action("Index", "Stores", new { area = "Client", typeId = type.Id })">
                                        @type.Name
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>

                    <a class="nav-link @(routeController == "Cinema" ? "active" : "")"
                       href="@Url.Action("Index", "Cinema", new { area = "Client" })">
                        Cinema
                    </a>

                    <a class="nav-link @(routeController == "Map" ? "active" : "")"
                       href="@Url.Action("Index", "Map", new { area = "Client" })">
                        Map
                    </a>

                    @* ĐÃ XÓA Entertainment *@

                    <a class="nav-link @(routeController == "Event" ? "active" : "")"
                       href="@Url.Action("Index", "Event", new { area = "Client" })">
                        Events
                    </a>

                    <a class="nav-link @(routeController == "TenantPromotion" ? "active" : "")"
                       href="@Url.Action("Index", "TenantPromotion", new { area = "Client" })">
                        Promotions
                    </a>

                    <a class="nav-link @(routeController == "Home" && routeAction == "Contact" ? "active" : "")"
                       href="@Url.Action("Contact", "Home", new { area = "Client" })">
                        Contact
                    </a>
                </nav>


                <!-- Right controls -->
                <div class="d-flex align-items-center gap-2">

                    @* USER MENU *@
                    @if (User?.Identity?.IsAuthenticated == true)
                    {
                        var name = User.FindFirst(System.Security.Claims.ClaimTypes.Name)?.Value
                        ?? User.Identity.Name ?? "User";
                        var initial = string.IsNullOrWhiteSpace(name)
                        ? "U"
                        : name.Trim()[0].ToString().ToUpper();

                        <div class="dropdown me-1">
                            <a href="#" class="user-menu-trigger" id="profileDropdown"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <div class="user-avatar">
                                    <span class="user-avatar-initial">@initial</span>
                                </div>
                            </a>

                            <div class="dropdown-menu dropdown-menu-end user-menu-dropdown shadow-lg border-0"
                                 aria-labelledby="profileDropdown">
                                <div class="user-menu-header">
                                    <div class="user-menu-name">@name</div>
                                    <div class="user-menu-sub">Quản lý tài khoản của bạn</div>
                                </div>

                                <a class="dropdown-item"
                                   href="@Url.Action("Profile", "Profile", new { area = "Client" })">
                                    <i class="bi bi-person-lines-fill me-2"></i> View Profile
                                </a>

                                <a class="dropdown-item"
                                   href="@Url.Action("MyTickets", "Ticket", new { area = "Client" })">
                                    <i class="bi bi-ticket-perforated me-2"></i> My Tickets
                                </a>

                                <a class="dropdown-item"
                                   href="@Url.Action("MyComplaints", "Complaint", new { area = "Client" })">
                                    <i class="bi bi-chat-dots me-2"></i> Complaints
                                </a>

                                <div class="dropdown-divider my-1"></div>

                                <form method="post"
                                      asp-area="Client"
                                      asp-controller="Account"
                                      asp-action="Logout"
                                      class="m-0">
                                    @Html.AntiForgeryToken()
                                    <button class="dropdown-item user-menu-logout" type="submit">
                                        <i class="bi bi-box-arrow-right me-2"></i> Logout
                                    </button>
                                </form>
                            </div>
                        </div>
                    }

                    @* NOTIFICATIONS *@
                    <div class="dropdown">
                        <button class="btn btn-sm btn-outline-secondary btn-icon-circle position-relative"
                                id="notifDropdown"
                                data-bs-toggle="dropdown"
                                aria-expanded="false">
                            <i class="bi bi-bell"></i>
                            @if (ViewBag.UnreadNotificationsCount != null && (int)ViewBag.UnreadNotificationsCount > 0)
                            {
                                <span class="position-absolute top-0 start-100 badge rounded-pill bg-danger notif-badge">
                                    @ViewBag.UnreadNotificationsCount
                                </span>
                            }
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end"
                            aria-labelledby="notifDropdown"
                            style="width:320px;">
                            <li class="dropdown-header">Notifications</li>
                            <li>@await Html.PartialAsync("_NotificationsPartial")</li>
                            <li><hr class="dropdown-divider" /></li>
                            <li>
                                <a class="dropdown-item text-center"
                                   href="@Url.Action("Notifications", "Account", new { area = "Client" })">
                                    View all notifications
                                </a>
                            </li>
                        </ul>
                    </div>

                    @* LOGIN BUTTON KHI CHƯA ĐĂNG NHẬP *@
                    @if (User?.Identity?.IsAuthenticated != true)
                    {
                        <a id="loginLink"
                           class="btn btn-sm btn-outline-primary rounded-pill px-3"
                           href="@Url.Action("Login", "Account", new { area = "Client" })">
                            Login
                        </a>
                    }
                </div>
            </div>
        </div>
    </header>

    @* When hideCenterMain = true and route is Cinema/Index, layout skips Hero + Main *@
    @if (!hideCenterMain)
    {
        <main class="container-fluid py-3">
            <div class="content-maxwide">

                @* Chỉ hiển thị hero ở Home/Index *@
                @if (isHomeIndexRoute)
                {
                    <section class="mb-3">
                        @await Html.PartialAsync("_Hero")
                    </section>
                }

                <!-- Main layout -->
                <div class="main-shell layout-grid">
                    <div class="main-col">
                        <div class="card-shell">
                            @RenderBody()
                        </div>
                    </div>

                    <!-- SIDEBAR -->
                    <aside class="sidebar-col">
                        @* ==== CINEMA COUPON: chỉ hiện khi model là CinemaHomeVm ==== *@
                        @if (ViewData.Model is CinemaHomeVm cinemaModel)
                        {
                            <div class="mb-3">
                                <div class="card-shell p-3">
                                    <div class="d-flex align-items-center justify-content-between mb-2">
                                        <h6 class="mb-0 sidebar-section-title text-uppercase">
                                            Cinema Coupon
                                        </h6>
                                    </div>
                                    @await Html.PartialAsync("_CouponPartial", cinemaModel)
                                </div>
                            </div>
                        }

                        @* ==== UPCOMING EVENTS ==== *@
                        @{
                            var topEvents = await _event_repo.GetUpcomingEventsAsync(12);

                            Func<string, string> Img = (raw) =>
                            {
                                if (string.IsNullOrWhiteSpace(raw))
                                    return Url.Content("~/images/event-placeholder.png");

                                if (raw.StartsWith("http", StringComparison.OrdinalIgnoreCase))
                                    return raw;

                                var s = raw.Replace("wwwroot/", "").TrimStart('~', '/');
                                s = s.Replace(" ", "%20");

                                if (s.StartsWith("Content", StringComparison.OrdinalIgnoreCase))
                                    return Url.Content("~/" + s);

                                if (s.StartsWith("images", StringComparison.OrdinalIgnoreCase) ||
                                            s.StartsWith("Admin/img", StringComparison.OrdinalIgnoreCase))
                                    return Url.Content("~/" + s);

                                if (raw.StartsWith("/"))
                                    return Url.Content("~" + raw);

                                return Url.Content("~/Content/Uploads/Events/" + s);
                            };
                        }

                        <div class="mb-3">
                            <div class="d-flex align-items-center justify-content-between mb-1">
                                <div class="sidebar-section-title">Upcoming Events</div>
                                <a class="sidebar-seeall"
                                   href="@Url.Action("Index", "Event", new { area = "Client" })">
                                    See all <i class="bi bi-arrow-right-short"></i>
                                </a>
                            </div>

                            <div class="small-event-slider mb-2">
                                <div class="slider-track">
                                    @foreach (var e in topEvents ?? Enumerable.Empty<EventCardVm>())
                                    {
                                        var imgUrl = Img(e.ImageUrl);
                                        var start = e.StartDate.HasValue
                                        ? e.StartDate.Value.ToString("dd MMM HH:mm")
                                        : "--";

                                        <div class="slider-item">
                                            <div class="small-card">
                                                <img src="@imgUrl"
                                                     class="small-poster"
                                                     alt="@(e.Title ?? "Event")" />
                                                <div class="small-card-body">
                                                    <div class="small-title" title="@e.Title">
                                                        @(!string.IsNullOrWhiteSpace(e.Title) ? e.Title : "Event")
                                                    </div>
                                                    <div class="small-meta">
                                                        <i class="bi bi-calendar-event"></i> @start
                                                    </div>
