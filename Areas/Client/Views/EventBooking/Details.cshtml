@model Semester03.Areas.Client.Models.ViewModels.EventTicketDetailVm

@using System
@using System.IO
@using Microsoft.AspNetCore.Hosting

@{
    Layout = "~/Areas/Client/Views/Shared/_LayoutClient.cshtml";
    ViewData["Title"] = "Thông tin vé sự kiện";

    var dayOfWeek = Model.EventStart.ToString("dddd", new System.Globalization.CultureInfo("vi-VN"));

    var locationText = string.IsNullOrWhiteSpace(Model.PositionLocation)
        ? ""
        : Model.PositionFloor.HasValue
            ? $"{Model.PositionLocation} - Tầng {Model.PositionFloor}"
            : Model.PositionLocation;

    // ===== HÀM ẢNH CHO EVENT (DÙNG CHUNG LOGIC VỚI VIEW EVENT) =====
    Func<string, string> ImgEvent = (raw) =>
    {
        var noImageUrl = Url.Content("~/Content/Uploads/noimage.png");

        try
        {
            if (string.IsNullOrWhiteSpace(raw))
                return noImageUrl;

            // nếu là URL tuyệt đối thì trả luôn
            if (raw.StartsWith("http", StringComparison.OrdinalIgnoreCase))
                return raw;

            // chuẩn hóa path
            var file = raw.Replace("\\", "/").Trim();

            // nếu raw chứa "Content/Uploads/Events" thì chỉ lấy file name cuối
            var keyword = "Content/Uploads/Events";
            var idxKeyword = file.IndexOf(keyword, StringComparison.OrdinalIgnoreCase);
            if (idxKeyword >= 0)
            {
                var lastSlash = file.LastIndexOf('/');
                if (lastSlash >= 0) file = file.Substring(lastSlash + 1);
            }

            // bỏ prefix "wwwroot/", "~/" hoặc "/"
            if (file.StartsWith("wwwroot/", StringComparison.OrdinalIgnoreCase))
                file = file.Substring("wwwroot/".Length);
            if (file.StartsWith("~/"))
                file = file.Substring(2);
            if (file.StartsWith("/"))
                file = file.Substring(1);

            if (string.IsNullOrWhiteSpace(file))
                return noImageUrl;

            // lấy IWebHostEnvironment để check file thật trong wwwroot
            var env = Context.RequestServices.GetService(typeof(IWebHostEnvironment)) as IWebHostEnvironment;
            if (env == null)
            {
                // fallback: cứ trỏ vào thư mục Events
                return Url.Content("~/Content/Uploads/Events/" + Uri.EscapeDataString(file));
            }

            var physical = System.IO.Path.Combine(
                env.WebRootPath ?? "wwwroot",
                "Content", "Uploads", "Events", file
            );

            if (System.IO.File.Exists(physical))
            {
                return Url.Content("~/Content/Uploads/Events/" + Uri.EscapeDataString(file));
            }
            else
            {
                return noImageUrl;
            }
        }
        catch
        {
            return noImageUrl;
        }
    };
}

<style>
    /* TICKET WRAPPER – sáng, nổi, sạch */
    .ticket-wrapper {
        max-width: 780px;
        margin: 2rem auto;
        background: #ffffff;
        border-radius: 22px;
        box-shadow: 0 12px 32px rgba(15, 23, 42, 0.12);
        overflow: hidden;
        position: relative;
        border: 1px solid #e5e7eb;
        transition: transform .18s ease, box-shadow .18s ease;
    }

        .ticket-wrapper:hover {
            transform: translateY(-4px);
            box-shadow: 0 20px 50px rgba(15, 23, 42, 0.18);
        }

    /* HEADER – gradient sáng xanh */
    .ticket-header {
        padding: 18px 22px;
        background: linear-gradient(135deg, #3b82f6, #60a5fa);
        font-weight: 700;
        font-size: 1.15rem;
        color: #ffffff;
        display: flex;
        align-items: center;
        gap: 10px;
        letter-spacing: .01em;
    }

        .ticket-header a {
            color: white;
            opacity: .9;
            transition: opacity .15s ease;
        }

            .ticket-header a:hover {
                opacity: 1;
            }

    /* POSTER – sáng + bo nhẹ */
    .ticket-poster {
        width: 100%;
        height: 260px;
        object-fit: cover;
        background: #f3f4f6;
        display: block;
    }

    /* BODY – sáng */
    .ticket-body {
        padding: 22px 26px;
        background: #ffffff;
        color: #1f2937;
    }

    .ticket-label {
        font-size: .88rem;
        color: #6b7280;
        font-weight: 500;
    }

    .ticket-value {
        font-size: 1.1rem;
        font-weight: 700;
        color: #111827;
    }

    /* SECTION DIVIDER – sáng, mảnh */
    .ticket-section {
        margin-top: 20px;
        padding-top: 16px;
        border-top: 1px dashed rgba(148, 163, 184, 0.5);
    }

    /* STATUS BADGE */
    .ticket-badge-status {
        display: inline-block;
        padding: 5px 14px;
        border-radius: 999px;
        font-size: .78rem;
        font-weight: 700;
        background: #e5e7eb;
        color: #111827;
        margin-bottom: 12px;
    }

        .ticket-badge-status.past {
            background: #d1fae5;
            color: #065f46;
        }

        .ticket-badge-status.cancelled {
            background: #fee2e2;
            color: #b91c1c;
        }

    /* BIG STATUS STAMP */
    .stamp-status {
        position: absolute;
        top: 20px;
        right: -40px;
        transform: rotate(20deg);
        background: #22c55e;
        color: #ffffff;
        padding: 6px 46px;
        font-weight: 800;
        font-size: .78rem;
        text-transform: uppercase;
        box-shadow: 0 0 0 3px rgba(34, 197, 94, .3);
    }

        .stamp-status.cancelled {
            background: #ef4444;
            box-shadow: 0 0 0 3px rgba(239, 68, 68, .3);
        }

    /* INPUT */
    #cancelQty.form-control {
        background: #ffffff;
        border-radius: 10px;
        border: 1px solid #d1d5db;
        color: #111827;
    }

        #cancelQty.form-control:focus {
            box-shadow: 0 0 0 1px #3b82f6;
            border-color: #3b82f6;
        }

    /* CANCEL BUTTON */
    #btnCancelTickets.btn-danger {
        border-radius: 10px;
        font-weight: 600;
        padding: 8px 22px;
        background: #ef4444;
        border: none;
        box-shadow: 0 6px 18px rgba(239, 68, 68, .25);
        transition: transform .15s ease, box-shadow .15s ease;
    }

        #btnCancelTickets.btn-danger:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 28px rgba(239, 68, 68, .35);
        }

    /* MOBILE FIXES */
    @@media (max-width: 575.98px) {
        .ticket-body

    {
        padding: 18px;
    }

    .ticket-poster {
        height: 200px;
    }

    }
</style>


<div class="ticket-wrapper mt-4 mb-4 position-relative">

    @* Stamp trạng thái *@
    @if (Model.Status == "Cancelled")
    {
        <div class="stamp-status cancelled">Cancelled</div>
    }
    else if (Model.Status == "Occurred")
    {
        <div class="stamp-status">Occurred</div>
    }

    <div class="ticket-header">
        <a href="javascript:history.back()">
            <i class="bi bi-arrow-left"></i>
        </a>
        Thông tin vé sự kiện
    </div>

    <!-- DÙNG HÀM ImgEvent THAY VÌ DÙNG TRỰC TIẾP Model.EventImg -->
    <img src="@ImgEvent(Model.EventImg)" class="ticket-poster" />

    <div class="ticket-body">
        @Html.AntiForgeryToken()


        <div class="ticket-value mb-1">@Model.EventName</div>

        @if (!string.IsNullOrWhiteSpace(Model.Description))
        {
            <div class="ticket-label mb-3">
                @Model.Description
            </div>
        }

        <span class="ticket-badge-status
            @(Model.Status == "Occurred" ? "past" : Model.Status == "Cancelled" ? "Cancelled" : "")">
            @Model.Status.ToUpper()
        </span>

        <div class="ticket-section">
            <div class="ticket-label">Mã đặt vé:</div>
            <div class="ticket-value">@Model.BookingId</div>

            <div class="ticket-label mt-3">Thời gian:</div>
            <div class="ticket-value" style="color:#e00063">
                @Model.EventStart.ToString("HH:mm") - @Model.EventEnd.ToString("HH:mm")
            </div>
            <div class="ticket-value">
                @dayOfWeek, @Model.EventStart.ToString("dd/MM/yyyy")
            </div>

        </div>

        <div class="ticket-section">
            <div class="row text-center">
                <div class="col">
                    <div class="ticket-label">Number of tickets</div>
                    <div class="ticket-value">@Model.Quantity</div>
                </div>
                <div class="col">
                    <div class="ticket-label">Price / ticket</div>
                    <div class="ticket-value">
                        @Model.UnitPrice.ToString("N0") đ
                    </div>
                </div>
                <div class="col">
                    <div class="ticket-label">Total</div>
                    <div class="ticket-value">
                        @Model.TotalCost.ToString("N0") đ
                    </div>
                </div>
            </div>
        </div>

        @if (!string.IsNullOrWhiteSpace(locationText) || !string.IsNullOrWhiteSpace(Model.OrganizerShopName))
        {
            <div class="ticket-section">
                @if (!string.IsNullOrWhiteSpace(locationText))
                {
                    <div class="ticket-label">Location</div>
                    <div class="ticket-value">@locationText</div>
                }

                @if (!string.IsNullOrWhiteSpace(Model.OrganizerShopName))
                {
                    <div class="ticket-label mt-2">Organizer</div>
                    <div class="ticket-value">@Model.OrganizerShopName</div>
                }
            </div>
        }

        @* ===========================
           PHẦN HỦY VÉ SỰ KIỆN
           =========================== *@
        @if (Model.Status != "Cancelled" && Model.Quantity > 0)
        {
            <div class="ticket-section">
                <div class="ticket-label mb-2">Cancel some tickets</div>

                <div class="d-flex align-items-center gap-2">
                    <input id="cancelQty"
                           type="number"
                           class="form-control"
                           min="1"
                           max="@Model.Quantity"
                           placeholder="Enter the ticket number you want to cancel"
                           style="width:150px;" />

                    <button class="btn btn-danger" id="btnCancelTickets">
                        Cancel
                    </button>
                </div>

                <small class="text-muted">You can only cancel up to @Model.Quantity tickets.</small>
            </div>
        }

    </div>

</div>




@section Scripts {

    <!-- jQuery (dùng CDN jsdelivr cho đúng CSP) -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>

    <!-- SweetAlert2 đẹp đẹp -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        $(document).ready(function () {

            $("#btnCancelTickets").click(function (e) {
                e.preventDefault(); // chặn reload default

                let qty = parseInt($("#cancelQty").val());

                if (!qty || qty <= 0) {
                    Swal.fire({
                        icon: 'warning',
                        title: 'Invalid quantity',
                        text: 'Please enter the ticket number you want to cancel (> 0).',
                        confirmButtonColor: '#2563eb'
                    });
                    return;
                }

                // Hỏi xác nhận trước khi gọi API
                Swal.fire({
                    icon: 'question',
                    title: 'Confirm ticket cancellationé',
                    html: `Are you sure want to <b>cancel ${qty} tickets</b> for this event?`,
                    showCancelButton: true,
                    confirmButtonText: 'Yes',
                    cancelButtonText: 'No',
                    confirmButtonColor: '#dc2626',
                    cancelButtonColor: '#6b7280'
                }).then(function (result) {
                    if (!result.isConfirmed) return;

                    // Nếu user bấm Đồng ý thì mới hủy
                    doPartialCancel(qty);
                });
            });

            function doPartialCancel(qty) {
                const token = $('input[name="__RequestVerificationToken"]').val();
                const $btn = $("#btnCancelTickets");

                // Disable nút + đổi nội dung cho có cảm giác đang xử lý
                $btn.prop("disabled", true).html(
                    '<span class="spinner-border spinner-border-sm me-1" role="status"></span>Đang hủy...'
                );

                $.ajax({
                    url: '@Url.Action("PartialCancel", "EventBooking", new { area = "Client" })',
                    type: "POST",
                    headers: {
                        'RequestVerificationToken': token
                    },
                    data: {
                        bookingId: @Model.BookingId,
                        cancelQuantity: qty
                    },
                    success: function (res) {
                        console.log("RES:", res);

                        Swal.fire({
                            icon: res.success ? 'success' : 'error',
                            title: res.success ? 'Cancel thành công' : 'Không thể hủy vé',
                            text: res.message,
                            confirmButtonColor: '#2563eb'
                        }).then(function () {
                            if (res.success) {
                                // reload để cập nhật lại số lượng, trạng thái
                                location.reload();
                            } else {
                                // bật lại nút nếu thất bại
                                $btn.prop("disabled", false).text('Cancel');
                            }
                        });
                    },
                    error: function (xhr) {
                        console.log("AJAX ERROR:", xhr.status, xhr.responseText);

                        Swal.fire({
                            icon: 'error',
                            title: 'Lỗi hệ thống',
                            text: 'Đã xảy ra lỗi khi hủy vé. Vui lòng thử lại sau.',
                            confirmButtonColor: '#2563eb'
                        });

                        $btn.prop("disabled", false).text('Cancel');
                    }
                });
            }

        });
    </script>
}





