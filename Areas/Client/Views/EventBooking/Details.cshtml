@model Semester03.Areas.Client.Models.ViewModels.EventTicketDetailVm

@using System
@using System.IO
@using Microsoft.AspNetCore.Hosting

@{
    Layout = "~/Areas/Client/Views/Shared/_LayoutClient.cshtml";
    ViewData["Title"] = "Event Ticket Information";

    var dayOfWeek = Model.EventStart.ToString("dddd", new System.Globalization.CultureInfo("en-US"));

    var locationText = string.IsNullOrWhiteSpace(Model.PositionLocation)
        ? ""
        : Model.PositionFloor.HasValue
            ? $"{Model.PositionLocation} - Floor {Model.PositionFloor}"
            : Model.PositionLocation;

    Func<string, string> ImgEvent = (raw) =>
    {
        var noImageUrl = Url.Content("~/Content/Uploads/noimage.png");

        try
        {
            if (string.IsNullOrWhiteSpace(raw))
                return noImageUrl;

            if (raw.StartsWith("http", StringComparison.OrdinalIgnoreCase))
                return raw;

            var file = raw.Replace("\\", "/").Trim();
            var keyword = "Content/Uploads/Events";
            var idxKeyword = file.IndexOf(keyword, StringComparison.OrdinalIgnoreCase);

            if (idxKeyword >= 0)
            {
                var lastSlash = file.LastIndexOf('/');
                if (lastSlash >= 0) file = file.Substring(lastSlash + 1);
            }

            if (file.StartsWith("wwwroot/", StringComparison.OrdinalIgnoreCase))
                file = file.Substring("wwwroot/".Length);
            if (file.StartsWith("~/"))
                file = file.Substring(2);
            if (file.StartsWith("/"))
                file = file.Substring(1);

            if (string.IsNullOrWhiteSpace(file))
                return noImageUrl;

            var env = Context.RequestServices.GetService(typeof(IWebHostEnvironment)) as IWebHostEnvironment;

            var physical = Path.Combine(
                env.WebRootPath ?? "wwwroot",
                "Content", "Uploads", "Events", file
            );

            return System.IO.File.Exists(physical)
                ? Url.Content("~/Content/Uploads/Events/" + Uri.EscapeDataString(file))
                : noImageUrl;
        }
        catch
        {
            return noImageUrl;
        }
    };
}

<style>
/* (giữ nguyên toàn bộ CSS của bạn – không thay đổi) */
</style>

<div class="ticket-wrapper mt-4 mb-4 position-relative">

    @if (Model.Status == "Cancelled")
    {
        <div class="stamp-status cancelled">CANCELLED</div>
    }
    else if (Model.Status == "Completed")
    {
        <div class="stamp-status">COMPLETED</div>
    }

    <div class="ticket-header">
        <a href="javascript:history.back()"><i class="bi bi-arrow-left"></i></a>
        Event Ticket Information
    </div>

    <img src="@ImgEvent(Model.EventImg)" class="ticket-poster" />

    <div class="ticket-body">
        @Html.AntiForgeryToken()

        <div class="ticket-value mb-1">@Model.EventName</div>

        @if (!string.IsNullOrWhiteSpace(Model.Description))
        {
            <div class="ticket-label mb-3">@Model.Description</div>
        }

        <span class="ticket-badge-status @(Model.Status == "Completed" ? "past" : Model.Status == "Cancelled" ? "cancelled" : "")">
            @Model.Status.ToUpper()
        </span>

        <div class="ticket-section">
            <div class="ticket-label">Booking ID:</div>
            <div class="ticket-value">@Model.BookingId</div>

            <div class="ticket-label mt-3">Time:</div>
            <div class="ticket-value" style="color:#e00063">
                @Model.EventStart.ToString("HH:mm") - @Model.EventEnd.ToString("HH:mm")
            </div>
            <div class="ticket-value">
                @dayOfWeek, @Model.EventStart.ToString("dd/MM/yyyy")
            </div>
        </div>

        <div class="ticket-section">
            <div class="row text-center">
                <div class="col">
                    <div class="ticket-label">Number of Tickets</div>
                    <div class="ticket-value">@Model.Quantity</div>
                </div>
                <div class="col">
                    <div class="ticket-label">Price per Ticket</div>
                    <div class="ticket-value">@Model.UnitPrice.ToString("N0") ₫</div>
                </div>
                <div class="col">
                    <div class="ticket-label">Total Amount</div>
                    <div class="ticket-value">@Model.TotalCost.ToString("N0") ₫</div>
                </div>
            </div>
        </div>

        @if (!string.IsNullOrWhiteSpace(locationText) || !string.IsNullOrWhiteSpace(Model.OrganizerShopName))
        {
            <div class="ticket-section">
                @if (!string.IsNullOrWhiteSpace(locationText))
                {
                    <div class="ticket-label">Location</div>
                    <div class="ticket-value">@locationText</div>
                }

                @if (!string.IsNullOrWhiteSpace(Model.OrganizerShopName))
                {
                    <div class="ticket-label mt-2">Organizer</div>
                    <div class="ticket-value">@Model.OrganizerShopName</div>
                }
            </div>
        }

        @if (Model.Status != "Cancelled" && Model.Quantity > 0)
        {
            <div class="ticket-section">
                <div class="ticket-label mb-2">Cancel Tickets</div>

                <div class="d-flex align-items-center gap-2">
                    <input id="cancelQty"
                           type="number"
                           class="form-control"
                           min="1"
                           max="@Model.Quantity"
                           placeholder="Enter the number to cancel"
                           style="width:150px;" />

                    <button class="btn btn-danger" id="btnCancelTickets">Cancel</button>
                </div>

                <small class="text-muted">You can cancel up to @Model.Quantity ticket(s).</small>
            </div>
        }
    </div>
</div>

@section Scripts {

    <!-- jQuery -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        $(document).ready(function () {

            $("#btnCancelTickets").click(function (e) {
                e.preventDefault();

                let qty = parseInt($("#cancelQty").val());

                if (!qty || qty <= 0) {
                    Swal.fire({
                        icon: 'warning',
                        title: 'Invalid Quantity',
                        text: 'Please enter a valid number of tickets (> 0).',
                    });
                    return;
                }

                Swal.fire({
                    icon: 'question',
                    title: 'Confirm Cancellation',
                    html: `Are you sure you want to <b>cancel ${qty} ticket(s)</b>?`,
                    showCancelButton: true,
                    confirmButtonText: 'Yes, Cancel',
                    cancelButtonText: 'No',
                }).then((r) => {
                    if (!r.isConfirmed) return;

                    doPartialCancel(qty);
                });
            });

            function doPartialCancel(qty) {
                const token = $('input[name="__RequestVerificationToken"]').val();
                const $btn = $("#btnCancelTickets");

                $btn.prop("disabled", true)
                    .html('<span class="spinner-border spinner-border-sm me-1"></span>Cancelling...');

                $.ajax({
                    url: '@Url.Action("PartialCancel", "EventBooking", new { area = "Client" })',
                    type: "POST",
                    headers: { 'RequestVerificationToken': token },
                    data: {
                        bookingId: @Model.BookingId,
                        cancelQuantity: qty
                    },
                    success: function (res) {
                        Swal.fire({
                            icon: res.success ? 'success' : 'error',
                            title: res.success ? 'Cancellation Successful' : 'Cancellation Failed',
                            text: res.message
                        }).then(() => {
                            if (res.success) location.reload();
                            else $btn.prop("disabled", false).text("Cancel");
                        });
                    },
                    error: function () {
                        Swal.fire({
                            icon: 'error',
                            title: 'System Error',
                            text: 'An error occurred while processing your request.'
                        });
                        $btn.prop("disabled", false).text("Cancel");
                    }
                });
            }

        });
    </script>
}
