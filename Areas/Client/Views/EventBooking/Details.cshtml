<div class="ticket-wrapper mt-4 mb-4 position-relative">

    @* Status stamp *@
    @if (Model.Status == "Cancelled")
    {
        <div class="stamp-status cancelled">CANCELLED</div>
    }
    else if (Model.Status == "Completed")
    {
        <div class="stamp-status">COMPLETED</div>
    }

    <div class="ticket-header">
        <a href="javascript:history.back()">
            <i class="bi bi-arrow-left"></i>
        </a>
        Event ticket information
    </div>

    <!-- Use ImgEvent helper instead of Model.EventImg directly -->
    <img src="@ImgEvent(Model.EventImg)" class="ticket-poster" />

    <div class="ticket-body">

        <div class="ticket-value mb-1">@Model.EventName</div>

        @if (!string.IsNullOrWhiteSpace(Model.Description))
        {
            <div class="ticket-label mb-3">
                @Model.Description
            </div>
        }

        <span class="ticket-badge-status
            @(Model.Status == "Completed" ? "past" : Model.Status == "Cancelled" ? "cancelled" : "")">
            @Model.Status.ToUpper()
        </span>

        <div class="ticket-section">
            <div class="ticket-label">Booking ID:</div>
            <div class="ticket-value">@Model.BookingId</div>

            <div class="ticket-label mt-3">Time:</div>

            <!-- Thời gian bắt đầu -->
            <div class="ticket-value" style="color:#e00063">
                Start: @Model.EventStart.ToString("HH:mm dd/MM/yyyy")
            </div>

            <!-- Thời gian kết thúc -->
            <div class="ticket-value" style="color:#e00063">
                End: @Model.EventEnd.ToString("HH:mm dd/MM/yyyy")
            </div>

        </div>

        <div class="ticket-section">
            <div class="row text-center">
                <div class="col">
                    <div class="ticket-label">Number of tickets</div>
                    <div class="ticket-value">@Model.Quantity</div>
                </div>
                <div class="col">
                    <div class="ticket-label">Price / ticket</div>
                    <div class="ticket-value">
                        @Model.UnitPrice.ToString("N0") ₫
                    </div>
                </div>
                <div class="col">
                    <div class="ticket-label">Total amount</div>
                    <div class="ticket-value">
                        @Model.TotalCost.ToString("N0") ₫
                    </div>
                </div>
            </div>
        </div>

        @if (!string.IsNullOrWhiteSpace(locationText) || !string.IsNullOrWhiteSpace(Model.OrganizerShopName))
        {
            <div class="ticket-section">
                @if (!string.IsNullOrWhiteSpace(locationText))
                {
                    <div class="ticket-label">Location</div>
                    <div class="ticket-value">@locationText</div>
                }

                @if (!string.IsNullOrWhiteSpace(Model.OrganizerShopName))
                {
                    <div class="ticket-label mt-2">Organizer</div>
                    <div class="ticket-value">@Model.OrganizerShopName</div>
                }
            </div>
        }

        @* ===========================
           PARTIAL TICKET CANCELLATION
           =========================== *@
        @if (Model.Status != "Cancelled" && Model.Quantity > 0)
        {
            <div class="ticket-section">
                <div class="ticket-label mb-2">Cancel tickets</div>

                @* Token chống CSRF, không cần form *@
                @Html.AntiForgeryToken()

                <div class="d-flex align-items-center gap-2">
                    <input id="cancelQty"
                           type="number"
                           class="form-control"
                           min="1"
                           max="@Model.Quantity"
                           placeholder="Enter the number of tickets to cancel"
                           style="width:150px;" />

                    <button class="btn btn-danger" id="btnCancelTickets">
                        Cancel
                    </button>
                </div>

                <small class="text-muted">
                    You can cancel up to @Model.Quantity ticket(s), at least 24 hours before the event starts.
                </small>
            </div>
        }

    </div>

    <!-- CENTER RESULT OVERLAY -->
    <div id="evtCancelResultOverlay" class="cancel-result-overlay">
        <div id="evtCancelResultBox" class="cancel-result-box">
            <div id="evtCancelResultIcon" class="cancel-result-icon">
                <i class="bi bi-check2"></i>
            </div>
            <div id="evtCancelResultTitle" class="cancel-result-title">
                Cancellation successful
            </div>
            <div id="evtCancelResultText" class="cancel-result-text">
                Your request has been processed.
            </div>
            <div class="cancel-result-note">
                The page will refresh to update your ticket information.
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script>
        function showEventCenterResult(success, message, autoReload) {
            var overlay = document.getElementById("evtCancelResultOverlay");
            var box = document.getElementById("evtCancelResultBox");
            var icon = document.getElementById("evtCancelResultIcon");
            var title = document.getElementById("evtCancelResultTitle");
            var text = document.getElementById("evtCancelResultText");

            if (!overlay || !box) {
                alert(message || (success ? "Cancellation successful" : "Cancellation failed"));
                if (autoReload) {
                    location.reload();
                }
                return;
            }

            box.classList.remove("success", "error");
            if (success) {
                box.classList.add("success");
                icon.innerHTML = '<i class="bi bi-check2"></i>';
                title.textContent = "Cancellation successful";
            } else {
                box.classList.add("error");
                icon.innerHTML = '<i class="bi bi-x-lg"></i>';
                title.textContent = "Cancellation failed";
            }

            text.textContent = message || (success
                ? "Your cancellation request has been processed."
                : "Unable to cancel the ticket, please try again.");

            overlay.style.display = "flex";

            setTimeout(function () {
                overlay.style.display = "none";
                if (autoReload) {
                    location.reload();
                }
            }, 1600);
        }

        document.addEventListener("DOMContentLoaded", function () {
            var btn = document.getElementById("btnCancelTickets");
            if (!btn) return;

            btn.addEventListener("click", function () {
                var input = document.getElementById("cancelQty");
                var qty = parseInt(input.value, 10);

                if (!qty || qty <= 0) {
                    showEventCenterResult(false, "Please enter a valid number of tickets.", false);
                    return;
                }

                var token = document.querySelector('input[name="__RequestVerificationToken"]');
                var tokenValue = token ? token.value : "";

                var url = "@Url.Action("PartialCancel", "EventBooking", new { area = "Client" })";

                var bodyParams = new URLSearchParams();
                bodyParams.append("bookingId", "@Model.BookingId");
                bodyParams.append("cancelQuantity", qty);
                if (tokenValue) {
                    bodyParams.append("__RequestVerificationToken", tokenValue);
                }

                fetch(url, {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/x-www-form-urlencoded; charset=UTF-8"
                    },
                    body: bodyParams.toString()
                })
                    .then(function (response) {
                        if (!response.ok) {
                            // ví dụ 400 vì antiforgery fail...
                            return response.text().then(function () { return null; });
                        }
                        return response.text();
                    })
                    .then(function (text) {
                        if (!text) {
                            showEventCenterResult(false, "Server returned invalid result.", false);
                            return;
                        }

                        var res = null;
                        try {
                            res = JSON.parse(text);
                        } catch (e) {
                            console.error("JSON parse error", e, text);
                        }

                        if (!res) {
                            showEventCenterResult(false, "Server returned invalid JSON result.", false);
                            return;
                        }

                        var msg = res.message || (res.success ? "Cancellation successful." : "Cancellation failed.");
                        showEventCenterResult(res.success, msg, true);
                    })
                    .catch(function (err) {
                        console.error(err);
                        showEventCenterResult(false, "An error occurred while sending the cancellation request.", false);
                    });
            });
        });
    </script>
}
