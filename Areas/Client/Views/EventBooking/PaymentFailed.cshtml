@{
    Layout = "~/Areas/Client/Views/Shared/_LayoutClient.cshtml";
    ViewData["Title"] = "Thanh toán thất bại";
    var msg = ViewData["Message"] as string ?? "Thanh toán thất bại hoặc bị hủy.";
}

<div class="container py-4">
    <div class="card p-4">
        <h3>Thanh toán thất bại</h3>
        <p class="text-danger">@msg</p>
        <div class="mt-3">
            <a class="btn btn-outline-secondary" href="javascript:history.back()">Quay lại</a>
            <a class="btn btn-primary" href="@Url.Action("Index", "Event", new { area = "Client" })">Xem sự kiện khác</a>
        </div>
    </div>
</div>
