@using System;
@using System.Linq

@{
    Layout = null;
    ViewData["Title"] = "Sign in";

    var mallNameObj = ViewData["MallName"] ?? "ABCDMall";
    var mallName = mallNameObj.ToString();
    var mallInitials = string.Concat(
        mallName.Split(' ', StringSplitOptions.RemoveEmptyEntries)
                .Take(2)
                .Select(p => p[0])
    );
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - @mallName</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">

    <style>
        :root {
            --accent-1: #ff7a18;
            --accent-2: #ff4b6e;
            --accent-3: #2563eb;
        }

        body {
            font-family: 'Inter', system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
            min-height: 100vh;
            margin: 0;
            background: radial-gradient(circle at top left, #ff7a18 0, #ff4b6e 22%, transparent 55%), radial-gradient(circle at bottom right, #2563eb 0, #0f172a 48%, #020617 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 1.5rem;
            color: #0f172a;
        }

        .auth-container {
            width: 100%;
            max-width: 1100px;
        }

        .auth-shell {
            background: rgba(15, 23, 42, 0.92);
            border-radius: 1.5rem;
            overflow: hidden;
            box-shadow: 0 30px 80px rgba(15, 23, 42, 0.7);
            border: 1px solid rgba(148, 163, 184, 0.5);
        }

        .auth-visual {
            background-image: radial-gradient(circle at top left, rgba(248, 250, 252, 0.38), transparent 60%), linear-gradient(135deg, rgba(255, 122, 24, 0.18), rgba(255, 75, 110, 0.24)), url('/images/hero-default.jpg');
            background-position: center;
            background-size: cover;
            color: #e5e7eb;
            padding: 2.5rem 2.25rem;
            position: relative;
        }

            .auth-visual::after {
                content: "";
                position: absolute;
                inset: 0;
                background: radial-gradient(circle at bottom, rgba(15, 23, 42, 0.35), rgba(15, 23, 42, 0.65));
                pointer-events: none;
            }

        .auth-visual-inner {
            position: relative;
            z-index: 2;
        }

        .auth-pill {
            display: inline-flex;
            align-items: center;
            gap: .4rem;
            padding: .25rem .7rem;
            border-radius: 999px;
            background: rgba(15, 23, 42, 0.6);
            border: 1px solid rgba(248, 250, 252, 0.23);
            font-size: .75rem;
            margin-bottom: 1rem;
        }

        .auth-pill-dot {
            width: 8px;
            height: 8px;
            border-radius: 999px;
            background: radial-gradient(circle, #ff7a18, #ff4b6e);
            box-shadow: 0 0 0 4px rgba(248, 250, 252, 0.22);
        }

        .auth-visual h2 {
            font-size: 1.9rem;
            font-weight: 800;
            margin-bottom: .75rem;
            text-shadow: 0 8px 20px rgba(15, 23, 42, 0.65);
        }

        .auth-visual p {
            font-size: .95rem;
            color: #e5e7eb;
            max-width: 260px;
        }

        .auth-benefits {
            list-style: none;
            padding-left: 0;
            margin-top: 1.4rem;
            margin-bottom: 0;
            font-size: .88rem;
        }

            .auth-benefits li {
                display: flex;
                align-items: center;
                gap: .4rem;
                margin-bottom: .35rem;
            }

            .auth-benefits i {
                color: #a5b4fc;
            }

        .auth-badge-bottom {
            position: absolute;
            bottom: 1.1rem;
            right: 1.4rem;
            font-size: .78rem;
            color: #cbd5f5;
        }

        .login-panel {
            background: #f9fafb;
            height: 100%;
        }

        .login-card {
            height: 100%;
            background: #ffffff;
            padding: 2rem 2rem;
            border-radius: 0;
        }

        @@media (min-width: 992px) {
            .login-card {
                border-radius: 0 1.5rem 1.5rem 0;
            }
        }

        .auth-brand {
            display: flex;
            align-items: center;
            gap: .75rem;
            margin-bottom: 1rem;
        }

        .auth-logo {
            width: 44px;
            height: 44px;
            border-radius: 14px;
            background: linear-gradient(135deg, #ff7a18, #ff4b6e, #ffd166);
            display: flex;
            align-items: center;
            justify-content: center;
            color: #ffffff;
            font-weight: 800;
            box-shadow: 0 10px 25px rgba(248, 113, 113, 0.45);
            font-size: .95rem;
        }

        .auth-brand-text-title {
            font-size: .95rem;
            font-weight: 700;
            color: #0f172a;
        }

        .auth-brand-text-sub {
            font-size: .78rem;
            color: #6b7280;
        }

        .login-card h3 {
            font-weight: 800;
            color: #111827;
        }

        .login-subtitle {
            font-size: .9rem;
            color: #6b7280;
        }

        .auth-error {
            font-size: .82rem;
            border-radius: .75rem;
            border-left: 4px solid #ef4444;
            background: #fef2f2;
        }

        .auth-input-group .input-group-text {
            border-radius: .85rem 0 0 .85rem;
            border-right: 0;
            background: #f3f4f6;
            color: #6b7280;
            border-color: #e5e7eb;
        }

        .auth-input-group .form-control {
            border-radius: 0 .85rem .85rem 0;
            border-left: 0;
            padding: 0.7rem 0.9rem;
            border-color: #e5e7eb;
            font-size: .95rem;
        }

            .auth-input-group .form-control:focus {
                border-color: #a855f7;
                box-shadow: 0 0 0 0.15rem rgba(168, 85, 247, 0.18);
            }

        .btn-primary {
            border-radius: 999px;
            font-weight: 600;
            padding: 0.65rem 1.25rem;
            background: linear-gradient(135deg, var(--accent-1), var(--accent-2), var(--accent-3));
            border: none;
            box-shadow: 0 12px 30px rgba(79, 70, 229, 0.35);
            transition: transform 0.18s ease, box-shadow 0.18s ease, filter 0.18s ease;
        }

            .btn-primary:hover {
                transform: translateY(-1px);
                box-shadow: 0 18px 42px rgba(79, 70, 229, 0.45);
                filter: brightness(1.03);
            }

        .btn-outline-secondary {
            border-radius: 999px;
            font-weight: 500;
        }

        .login-footer {
            text-align: center;
            margin-top: 1.25rem;
            font-size: 0.9rem;
            color: #6b7280;
        }

            .login-footer a {
                font-weight: 600;
                color: #2563eb;
            }

                .login-footer a:hover {
                    text-decoration: underline;
                }

        @@media (max-width: 991.98px) {
            body {
                padding: 1rem;
            }

            .auth-shell {
                border-radius: 1.25rem;
            }

            .login-card {
                border-radius: 1.25rem;
            }
        }
    </style>
</head>
<body>
    <div class="auth-container">
        <div class="row g-0 justify-content-center">
            <div class="col-lg-11">
                <div class="auth-shell row g-0 align-items-stretch">
                    <!-- Left visual panel (hidden on mobile) -->
                    <div class="col-lg-5 d-none d-lg-flex auth-visual">
                        <div class="auth-visual-inner">
                            <div class="auth-pill">
                                <span class="auth-pill-dot"></span>
                                <span>Welcome back to @mallName</span>
                            </div>
                            <h2>Shopping, dining and entertainment in one place.</h2>
                            <p>
                                Sign in to access your account, favorite stores, booking history
                                and exclusive mall promotions.
                            </p>

                            <ul class="auth-benefits">
                                <li>
                                    <i class="bi bi-check-circle-fill"></i>
                                    Save your favorite brands & restaurants
                                </li>
                                <li>
                                    <i class="bi bi-check-circle-fill"></i>
                                    Track events and movie showtimes
                                </li>
                                <li>
                                    <i class="bi bi-check-circle-fill"></i>
                                    Get personalized deals and vouchers
                                </li>
                            </ul>

                            <div class="auth-badge-bottom">
                                <i class="bi bi-shield-check me-1"></i>
                                Secure sign‑in powered by modern encryption
                            </div>
                        </div>
                    </div>

                    <!-- Right login form -->
                    <div class="col-12 col-lg-7 login-panel">
                        <div class="login-card">
                            <div class="auth-brand mb-3">
                                <div class="auth-logo">@mallInitials</div>
                                <div>
                                    <div class="auth-brand-text-title">@mallName</div>
                                    <div class="auth-brand-text-sub">Customer portal</div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <h3 class="mb-1">Sign in</h3>
                                <p class="login-subtitle mb-0">
                                    Enter your account details to continue exploring @mallName.
                                </p>
                            </div>

                            @if (!ViewData.ModelState.IsValid)
                            {
                                <div class="auth-error alert alert-danger border-0 py-2 px-3 mb-3">
                                    @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                    {
                                        <div><i class="bi bi-exclamation-circle-fill me-1"></i>@err.ErrorMessage</div>
                                    }
                                </div>
                            }

                            <form asp-action="Login" method="post" novalidate>
                                @Html.AntiForgeryToken()

                                <div class="mb-3">
                                    <label class="form-label">Username</label>
                                    <div class="input-group input-group-lg auth-input-group">
                                        <span class="input-group-text">
                                            <i class="bi bi-person"></i>
                                        </span>
                                        <input class="form-control"
                                               name="username"
                                               placeholder="Enter your username"
                                               autocomplete="username" />
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Password</label>
                                    <div class="input-group input-group-lg auth-input-group">
                                        <span class="input-group-text">
                                            <i class="bi bi-lock"></i>
                                        </span>
                                        <input class="form-control"
                                               name="password"
                                               type="password"
                                               placeholder="Enter your password"
                                               autocomplete="current-password" />
                                    </div>
                                </div>

                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="true" id="rememberMe" name="rememberMe" />
                                        <label class="form-check-label small" for="rememberMe">
                                            Remember me
                                        </label>
                                    </div>
                                    <a href="#"
                                       class="small text-decoration-none text-primary-emphasis">
                                        Forgot password?
                                    </a>
                                </div>

                                <div class="d-grid gap-2">
                                    <button class="btn btn-primary" type="submit">
                                        <i class="bi bi-box-arrow-in-right me-1"></i> Sign in
                                    </button>
                                    <a class="btn btn-outline-secondary"
                                       href="@Url.Action("Index", "Home", new { area = "Client" })">
                                        <i class="bi bi-x-circle me-1"></i> Cancel
                                    </a>
                                </div>
                            </form>

                            <div class="login-footer">
                                Don't have an account?
                                <a href="@Url.Action("Register", "Account", new { area = "Client" })">
                                    Create one in seconds
                                </a>
                            </div>
                        </div>
                    </div>
                    <!-- /Right login form -->
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
