@using System
@using System.IO
@using Microsoft.AspNetCore.Hosting
@using Semester03.Models.ViewModels
@model TenantPromotionVm

@{
    Layout = "_LayoutClient";
    ViewData["Title"] = Model.Title;

    // === HÀM LẤY ẢNH PROMOTION CÓ FALLBACK ===
    Func<string, string> ImgPromotion = (raw) =>
    {
        var noImageUrl = Url.Content("~/Content/Uploads/noimage.png");

        try
        {
            if (string.IsNullOrWhiteSpace(raw))
                return noImageUrl;

            // Nếu là link tuyệt đối (http/https) thì trả về luôn
            if (raw.StartsWith("http", StringComparison.OrdinalIgnoreCase))
                return raw;

            // Chuẩn hóa path
            var file = raw.Replace("\\", "/").Trim();

            // Nếu trong chuỗi đã chứa "Content/Uploads/TenantPromotion/xxx"
            var keyword = "Content/Uploads/TenantPromotion";
            var idxKeyword = file.IndexOf(keyword, StringComparison.OrdinalIgnoreCase);
            if (idxKeyword >= 0)
            {
                // chỉ lấy tên file phía sau dấu /
                var lastSlash = file.LastIndexOf('/');
                if (lastSlash >= 0) file = file[(lastSlash + 1)..];
            }

            // Loại bỏ prefix thừa
            if (file.StartsWith("wwwroot/", StringComparison.OrdinalIgnoreCase))
                file = file["wwwroot/".Length..];
            if (file.StartsWith("~/"))
                file = file[2..];
            if (file.StartsWith("/"))
                file = file[1..];

            if (string.IsNullOrWhiteSpace(file))
                return noImageUrl;

            // Lấy IWebHostEnvironment để build physical path
            var env = Context.RequestServices.GetService(typeof(IWebHostEnvironment)) as IWebHostEnvironment;
            if (env == null)
            {
                // fallback: cứ trả về đường dẫn tương đối
                return Url.Content("~/Content/Uploads/TenantPromotion/" + Uri.EscapeDataString(file));
            }

            var physical = System.IO.Path.Combine(
                env.WebRootPath ?? "wwwroot",
                "Content", "Uploads", "TenantPromotion",
                file
            );

            if (System.IO.File.Exists(physical))
            {
                return Url.Content("~/Content/Uploads/TenantPromotion/" + Uri.EscapeDataString(file));
            }

            // nếu file không tồn tại -> fallback
            return noImageUrl;
        }
        catch
        {
            return noImageUrl;
        }
    };
}

@section Styles {
    <style>
        .promo-detail-wrapper {
            padding: 2.3rem 0 2.8rem;
        }

        .promo-detail-shell {
            max-width: 1100px;
            margin: 0 auto;
        }

        /* BACK BUTTON */
        .back-btn {
            padding: .42rem 1.1rem;
            border-radius: 999px;
            transition: .2s ease;
            border: 1px solid #e5e7eb;
            font-size: .85rem;
            display: inline-flex;
            align-items: center;
            gap: .4rem;
            background: #ffffffcc;
            backdrop-filter: blur(8px);
        }

            .back-btn:hover {
                background: #fee2e2;
                color: #b91c1c !important;
                border-color: #fecaca;
                transform: translateX(-2px);
            }

        /* MAIN CARD */
        .promo-card-detail {
            border-radius: 1.4rem;
            padding: 1.8rem 1.8rem 2.1rem;
            background: radial-gradient(circle at top, #eff6ff 0, #ffffff 55%, #fdf2f8 100%);
            box-shadow: 0 20px 60px rgba(15, 23, 42, 0.16);
            border: 1px solid rgba(148, 163, 184, 0.5);
            animation: promo-fade-in .45s ease;
        }

        @@keyframes promo-fade-in {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* TITLE */
        .promo-kicker {
            font-weight: 800;
            letter-spacing: .18em;
            text-transform: uppercase;
            font-size: .78rem;
            color: #9ca3af;
            margin-bottom: .25rem;
        }

        .promo-title {
            margin: 0 0 .35rem 0;
            font-size: 2rem;
            font-weight: 800;
            letter-spacing: -0.04em;
        }

            .promo-title span {
                background: linear-gradient(90deg,#4f46e5,#ec4899);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                color: transparent;
            }

        .promo-period {
            font-size: .9rem;
            color: #4b5563;
            display: inline-flex;
            align-items: center;
            gap: .5rem;
        }

            .promo-period i {
                color: #fb7185;
            }

        /* TOP META / BADGES */
        .promo-badges {
            display: flex;
            flex-wrap: wrap;
            gap: .5rem;
            margin-top: .7rem;
        }

        .badge-pill-soft {
            border-radius: 999px;
            padding: .25rem .7rem;
            font-size: .78rem;
            display: inline-flex;
            align-items: center;
            gap: .35rem;
            font-weight: 600;
        }

        .badge-discount {
            background: linear-gradient(135deg,#ef4444,#f97316);
            color: #fff;
            box-shadow: 0 10px 26px rgba(248, 113, 113, .6);
        }

        .badge-store {
            background: rgba(59,130,246,.06);
            color: #1d4ed8;
            border: 1px solid rgba(129,140,248,.5);
        }

        .badge-status {
            background: rgba(16,185,129,.08);
            color: #047857;
            border: 1px solid rgba(45,212,191,.6);
        }

        /* BANNER */
        .promo-banner {
            border-radius: 1.1rem;
            overflow: hidden;
            box-shadow: 0 16px 40px rgba(15, 23, 42, 0.28);
            background: #020617;
            position: relative;
        }

            .promo-banner img {
                width: 100%;
                height: 360px;
                object-fit: cover;
                display: block;
                transition: transform .5s ease;
            }

        .promo-card-detail:hover .promo-banner img {
            transform: scale(1.04);
        }

        .promo-banner-tag {
            position: absolute;
            bottom: .95rem;
            left: .95rem;
            padding: .25rem .7rem;
            border-radius: 999px;
            font-size: .75rem;
            text-transform: uppercase;
            letter-spacing: .12em;
            background: rgba(15,23,42,.7);
            color: #e5e7eb;
            backdrop-filter: blur(10px);
        }

        /* CONTENT SIDE */
        .promo-desc {
            font-size: .95rem;
            margin-top: 1rem;
            line-height: 1.7;
            color: #111827;
        }

        .promo-sidebar-box {
            border-radius: 1rem;
            background: #ffffffcc;
            backdrop-filter: blur(10px);
            padding: 1rem 1.1rem;
            border: 1px solid rgba(209,213,219,.9);
            box-shadow: 0 12px 30px rgba(15, 23, 42, 0.12);
            font-size: .9rem;
        }

        .promo-meta-row {
            display: flex;
            justify-content: space-between;
            gap: .75rem;
            margin-bottom: .4rem;
        }

        .promo-meta-label {
            font-weight: 600;
            color: #6b7280;
        }

        .promo-meta-value {
            font-weight: 600;
            color: #111827;
            text-align: right;
        }

        .promo-note {
            margin-top: .6rem;
            font-size: .82rem;
            color: #9ca3af;
        }

        @@media (max-width: 991px) {
            .promo-card-detail {
                padding: 1.4rem 1.2rem 1.7rem;
            }

            .promo-banner img {
                height: 260px;
            }
        }
    </style>
}

<div class="promo-detail-wrapper">
    <div class="promo-detail-shell">

        <a href="@Url.Action("Index", "TenantPromotion", new { area = "Client" })"
           class="back-btn mb-3">
            <i class="bi bi-arrow-left"></i>
            Back to promotions
        </a>

        <div class="promo-card-detail">
            <div class="row g-4 align-items-start">
                <!-- LEFT: IMAGE -->
                <div class="col-lg-6">
                    <div class="promo-banner">
                        <img src="@ImgPromotion(Model.Img)" alt="@Model.Title" />
                        <div class="promo-banner-tag">
                            ABCD Mall • Promotion
                        </div>
                    </div>
                </div>

                <!-- RIGHT: TEXT / META -->
                <div class="col-lg-6">
                    <div class="promo-kicker">Limited time offer</div>
                    <h2 class="promo-title">
                        <span>@Model.Title</span>
                    </h2>

                    <div class="promo-period">
                        <i class="bi bi-calendar3"></i>
                        <span>
                            @Model.PromotionStart?.ToString("dd/MM/yyyy")
                            –
                            @Model.PromotionEnd?.ToString("dd/MM/yyyy")
                        </span>
                    </div>

                    <div class="promo-badges">
                        @if (Model.DiscountPercent.HasValue)
                        {
                            <div class="badge-pill-soft badge-discount">
                                <i class="bi bi-fire"></i>
                                @Model.DiscountPercent% OFF
                            </div>
                        }
                        else if (Model.DiscountAmount.HasValue)
                        {
                            <div class="badge-pill-soft badge-discount">
                                <i class="bi bi-fire"></i>
                                @Model.DiscountAmount.Value.ToString("#,0") ₫ OFF
                            </div>
                        }

                        <div class="badge-pill-soft badge-store">
                            <i class="bi bi-shop"></i>
                            Special mall offer
                        </div>

                        <div class="badge-pill-soft badge-status">
                            <i class="bi bi-clock-history"></i>
                            Currently active
                        </div>
                    </div>

                    <div class="promo-desc">
                        @Html.Raw(Model.Description)
                    </div>

                    <div class="promo-sidebar-box mt-3">
                        @if (Model.MinBillAmount.HasValue)
                        {
                            <div class="promo-meta-row">
                                <div class="promo-meta-label">Minimum bill</div>
                                <div class="promo-meta-value">
                                    @Model.MinBillAmount.Value.ToString("#,0") ₫
                                </div>
                            </div>
                        }

                        @if (Model.DiscountPercent.HasValue)
                        {
                            <div class="promo-meta-row">
                                <div class="promo-meta-label">Discount rate</div>
                                <div class="promo-meta-value">
                                    @Model.DiscountPercent%
                                </div>
                            </div>
                        }

                        @if (Model.DiscountAmount.HasValue)
                        {
                            <div class="promo-meta-row">
                                <div class="promo-meta-label">Discount amount</div>
                                <div class="promo-meta-value">
                                    @Model.DiscountAmount.Value.ToString("#,0") ₫
                                </div>
                            </div>
                        }

                        <div class="promo-note">
                            * Please check with the store for detailed terms & conditions of this promotion.
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
