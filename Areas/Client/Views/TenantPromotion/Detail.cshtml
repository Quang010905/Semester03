@using Semester03.Models.ViewModels
@model TenantPromotionVm

@{
    Layout = "_LayoutClient";
    ViewData["Title"] = Model.Title;
}

@section Styles {
    <style>
        .promo-detail-wrapper {
            padding: 2rem 0;
        }

        /* Back button */
        .back-btn {
            padding: .45rem 1rem;
            border-radius: 999px;
            transition: .25s ease;
            border: 1px solid #ddd;
        }

            .back-btn:hover {
                background: #ff4b5c;
                color: white !important;
                border-color: #ff4b5c;
                transform: translateX(-3px);
            }

        /* Main card */
        .promo-card-detail {
            border-radius: 1.2rem;
            padding: 2rem;
            background: #ffffff;
            box-shadow: 0 15px 40px rgba(0,0,0,.12);
            animation: fadeIn .5s ease;
        }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        /* Title */
        .promo-title {
            font-size: 2rem;
            font-weight: 800;
            color: #dc3545;
            letter-spacing: -0.5px;
        }

        /* Image banner */
        .promo-banner {
            border-radius: 1rem;
            overflow: hidden;
            box-shadow: 0 10px 35px rgba(220,53,69,0.3);
            transition: .4s ease;
        }

            .promo-banner img {
                width: 100%;
                height: 420px;
                object-fit: cover;
            }

            .promo-banner:hover {
                transform: scale(1.02);
            }

        /* Time */
        .promo-time {
            font-size: 1rem;
            margin-top: .8rem;
            color: #555;
        }

        /* Discount blocks */
        .discount-box {
            background: linear-gradient(135deg, #ff4b5c, #dc3545);
            color: white;
            padding: .65rem 1.2rem;
            border-radius: .65rem;
            font-size: 1rem;
            font-weight: 700;
            display: inline-block;
            box-shadow: 0 8px 25px rgba(255,76,76,0.45);
            margin-top: 1rem;
        }

        /* Price details */
        .detail-label {
            font-weight: 700;
            color: #dc3545;
        }

        .promo-desc {
            font-size: 1.05rem;
            margin-top: 1rem;
            line-height: 1.65;
            color: #333;
        }
    </style>
}

<div class="container promo-detail-wrapper">

    <a href="@Url.Action("Index","TenantPromotion", new { area="Client" })"
       class="btn btn-light back-btn mb-3">
        <i class="bi bi-arrow-left"></i> Back
    </a>

    <div class="promo-card-detail">

        <h2 class="promo-title mb-3">@Model.Title</h2>

        <div class="promo-banner mb-3">
            <img src="@Url.Content("~/Content/Uploads/TenantPromotion/" + Model.Img)" />
        </div>

        <p class="promo-time">
            <i class="bi bi-calendar3 text-danger"></i>
            <strong> @Model.PromotionStart?.ToString("dd/MM/yyyy") – @Model.PromotionEnd?.ToString("dd/MM/yyyy") </strong>
        </p>

        @if (Model.DiscountPercent.HasValue)
        {
            <div class="discount-box">
                @Model.DiscountPercent% OFF
            </div>
        }

        @if (Model.DiscountAmount.HasValue)
        {
            <div class="discount-box">
                @Model.DiscountAmount.Value.ToString("#,0") ₫ OFF
            </div>
        }

        <div class="promo-desc">
            @Html.Raw(Model.Description)
        </div>

        @if (Model.MinBillAmount.HasValue)
        {
            <p class="mt-3">
                <span class="detail-label">Minimum bill:</span>
                @Model.MinBillAmount.Value.ToString("#,0") ₫
            </p>
        }
    </div>
</div>

