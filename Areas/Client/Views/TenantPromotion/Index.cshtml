@using System
@using System.IO
@using Microsoft.AspNetCore.Hosting
@using Semester03.Models.ViewModels
@model TenantPromotionListVm

@{
    Layout = "~/Areas/Client/Views/Shared/_LayoutClient.cshtml";
    ViewData["Title"] = "Promotions";

    // ===== IMAGE HELPER WITH FALLBACK =====
    Func<string, string> ImgPromotion = (raw) =>
    {
        var noImageUrl = Url.Content("~/Content/Uploads/noimage.png");

        try
        {
            if (string.IsNullOrWhiteSpace(raw))
                return noImageUrl;

            if (raw.StartsWith("http", StringComparison.OrdinalIgnoreCase))
                return raw;

            var file = raw.Replace("\\", "/").Trim();

            var keyword = "Content/Uploads/TenantPromotion";
            var idxKeyword = file.IndexOf(keyword, StringComparison.OrdinalIgnoreCase);
            if (idxKeyword >= 0)
            {
                var lastSlash = file.LastIndexOf('/');
                if (lastSlash >= 0) file = file.Substring(lastSlash + 1);
            }

            if (file.StartsWith("wwwroot/", StringComparison.OrdinalIgnoreCase))
                file = file.Substring("wwwroot/".Length);
            if (file.StartsWith("~/"))
                file = file.Substring(2);
            if (file.StartsWith("/"))
                file = file.Substring(1);

            if (string.IsNullOrWhiteSpace(file))
                return noImageUrl;

            var env = Context.RequestServices.GetService(typeof(IWebHostEnvironment)) as IWebHostEnvironment;
            if (env == null)
            {
                return Url.Content("~/Content/Uploads/TenantPromotion/" + Uri.EscapeDataString(file));
            }

            var physical = System.IO.Path.Combine(
                env.WebRootPath ?? "wwwroot",
                "Content", "Uploads", "TenantPromotion", file
            );

            if (System.IO.File.Exists(physical))
            {
                return Url.Content("~/Content/Uploads/TenantPromotion/" + Uri.EscapeDataString(file));
            }

            return noImageUrl;
        }
        catch
        {
            return noImageUrl;
        }
    };
}

@section Styles {
    <style>
        /* ===== SECTION WRAPPER (glow giống Events/Map) ===================== */
        .section-wrapper {
            position: relative;
            padding: 2.2rem 1.8rem 2.5rem;
            border-radius: 1.7rem;
            background: rgba(255,255,255,0.95);
            box-shadow: 0 20px 55px rgba(15,23,42,0.12);
            margin-bottom: 3rem;
            overflow: hidden;
        }

            .section-wrapper::before {
                content: "";
                position: absolute;
                inset: -40%;
                background: radial-gradient(circle at 0 0, rgba(99,102,241,.25), transparent 60%), radial-gradient(circle at 100% 100%, rgba(236,72,153,.25), transparent 60%);
                mix-blend-mode: screen;
                animation: glowMove 22s linear infinite alternate;
                pointer-events: none;
            }

        @@keyframes glowMove {
            from {
                transform: translate3d(0,0,0) scale(1);
            }

            to {
                transform: translate3d(4%, -4%, 0) scale(1.06);
            }
        }

        .section-wrapper::after {
            content: "";
            position: absolute;
            inset: 0;
            border-radius: 1.7rem;
            padding: 2px;
            background: linear-gradient(135deg, #6366f1, #ec4899);
            -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
            mask-composite: exclude;
            pointer-events: none;
        }

        .promotion-page-wrapper {
            padding: 1.8rem 0 2.8rem;
            max-width: 1200px;
            margin: 0 auto;
        }

        /* ===== HEADER ===================================================== */
        .promo-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-end;
            gap: 1.25rem;
            flex-wrap: wrap;
            margin-bottom: 1.5rem;
        }

        .promo-kicker {
            font-weight: 800;
            letter-spacing: .14em;
            text-transform: uppercase;
            font-size: .78rem;
            color: #9ca3af;
        }

        .promo-title {
            margin: 0;
            font-weight: 800;
            letter-spacing: -0.04em;
            font-size: 1.9rem;
        }

            .promo-title span {
                background: linear-gradient(90deg,#4f46e5,#ec4899);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                color: transparent;
            }

        .promo-subtitle {
            font-size: .9rem;
            color: #6b7280;
        }

        /* ===== FILTER BOX ================================================== */
        .filter-box {
            background: #ffffff;
            padding: 0.9rem 1.2rem;
            border-radius: 1rem;
            box-shadow: 0 10px 28px rgba(15,23,42,0.10);
            margin-bottom: 2rem;
            display: flex;
            flex-wrap: wrap;
            gap: 0.75rem;
            align-items: center;
        }

            .filter-box label {
                font-size: .85rem;
                font-weight: 600;
                color: #4b5563;
            }

            .filter-box .form-select {
                max-width: 260px;
                border-radius: 999px;
                font-size: .85rem;
            }

        /* ===== GRID + CARDS =============================================== */
        .promo-section-title {
            font-weight: 700;
            font-size: 1.05rem;
            text-transform: uppercase;
            letter-spacing: .16em;
            color: #6b7280;
            margin-bottom: .75rem;
        }

            .promo-section-title span {
                color: #111827;
            }

        .promo-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill,minmax(270px,1fr));
            gap: 1.4rem;
        }

        .promo-card {
            position: relative;
            border-radius: 1.1rem;
            overflow: hidden;
            background: #f9fafb;
            border: 1px solid rgba(148,163,184,0.45);
            box-shadow: 0 18px 40px rgba(15,23,42,.16);
            transition: transform .22s ease, box-shadow .22s ease, border-color .22s ease;
            color: #111827;
            display: flex;
            flex-direction: column;
        }

            .promo-card:hover {
                transform: translateY(-6px);
                box-shadow: 0 24px 60px rgba(15,23,42,.24);
                border-color: rgba(37,99,235,0.9);
            }

        .promo-img-wrapper {
            position: relative;
            height: 190px;
            overflow: hidden;
            background: #020617;
        }

            .promo-img-wrapper img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                display: block;
                transform-origin: center;
                transition: transform .4s ease;
            }

        .promo-card:hover .promo-img-wrapper img {
            transform: scale(1.05);
        }

        .discount-badge {
            background: linear-gradient(135deg,#ef4444,#f97316);
            color: #fff;
            font-weight: 700;
            padding: .25rem .7rem;
            border-radius: 999px;
            font-size: .78rem;
            position: absolute;
            top: 10px;
            left: 10px;
            box-shadow: 0 8px 18px rgba(0,0,0,.35);
            z-index: 2;
            display: inline-flex;
            align-items: center;
            gap: .25rem;
        }

            .discount-badge i {
                font-size: .9rem;
            }

        .promo-content {
            background: #ffffff;
            padding: .8rem 1rem 1rem;
            display: flex;
            flex-direction: column;
            gap: .25rem;
        }

        .promo-title-text {
            font-size: 1.0rem;
            font-weight: 700;
            margin-bottom: .1rem;
        }

        .promo-time {
            font-size: .82rem;
            color: #6b7280;
            display: flex;
            align-items: center;
            gap: .35rem;
        }

        .promo-footer-row {
            margin-top: .35rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: .8rem;
        }

        .promo-footer-store {
            color: #6b7280;
            display: inline-flex;
            align-items: center;
            gap: .3rem;
        }

        .promo-footer-status {
            color: #16a34a;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: .3rem;
        }

        /* EXPIRED */
        .expired-card {
            background: #f9fafb;
            border-style: dashed;
            border-color: #d1d5db;
            box-shadow: none;
            opacity: .8;
        }

        .expired-badge {
            position: absolute;
            right: .75rem;
            top: .75rem;
            font-size: .7rem;
            padding: .25rem .5rem;
            border-radius: 999px;
            background: #e5e7eb;
            color: #6b7280;
            font-weight: 600;
        }

        .empty-state-text {
            font-size: .9rem;
            color: #9ca3af;
            padding: 1.2rem 0;
        }

        /* Pagination */
        .pagination .page-link {
            border-radius: 999px;
            margin: 0 3px;
            font-size: .85rem;
        }

        .pagination .page-item.active .page-link {
            background: linear-gradient(90deg,#4f46e5,#0ea5e9);
            border-color: transparent;
            color: #fff;
        }

        @@media (max-width: 768px) {
            .promo-header {
                align-items: flex-start;
            }

            .promo-card img {
                height: 170px;
            }
        }
    </style>
}

<div class="promotion-page-wrapper">
    <div class="section-wrapper">
        <!-- HEADER + FILTER -->
        <div class="promo-header">
            <div>
                <div class="promo-kicker">Mall deals</div>
                <h2 class="promo-title">
                    <span>Promotions &amp; Offers</span>
                </h2>
                <div class="promo-subtitle">
                    Discover the latest discounts from your favorite stores.
                </div>
            </div>

            <!-- FILTER -->
            <div class="filter-box">
                <label class="me-1">Filter by store</label>
                <select id="tenantFilter" class="form-select form-select-sm">
                    <option value="">All stores</option>
                    @foreach (var t in Model.Tenants)
                    {
                        <option value="@t.TenantId"
                                selected="@(Model.SelectedTenantId == t.TenantId)">
                            @t.TenantName
                        </option>
                    }
                </select>
            </div>
        </div>

        <!-- ACTIVE PROMOTIONS -->
        <div class="mb-2 promo-section-title">
            <span>Active promotions</span>
        </div>

        @if (!Model.ActivePromotions.Any())
        {
            <div class="empty-state-text">
                There are no active promotions at the moment. Please check back soon.
            </div>
        }
        else
        {
            <div class="promo-grid">
                @foreach (var p in Model.ActivePromotions)
                {
                    var img = ImgPromotion(p.Img);

                    <a href="@Url.Action("Detail", "TenantPromotion", new { area = "Client", id = p.Id })"
                       class="promo-card text-decoration-none">

                        <div class="promo-img-wrapper">
                            <img src="@img" alt="@p.Title" />

                            @if (p.DiscountPercent.HasValue)
                            {
                                <span class="discount-badge">
                                    <i class="bi bi-fire"></i>@p.DiscountPercent% OFF
                                </span>
                            }
                            else if (p.DiscountAmount.HasValue)
                            {
                                <span class="discount-badge">
                                    <i class="bi bi-fire"></i>@p.DiscountAmount.Value.ToString("#,0") ₫ OFF
                                </span>
                            }
                        </div>

                        <div class="promo-content">
                            <div class="promo-title-text text-truncate" title="@p.Title">@p.Title</div>

                            <div class="promo-time">
                                <i class="bi bi-calendar3"></i>
                                @p.PromotionStart?.ToString("dd/MM/yyyy") – @p.PromotionEnd?.ToString("dd/MM/yyyy")
                            </div>

                            <div class="promo-footer-row">
                                <span class="promo-footer-store">
                                    <i class="bi bi-shop"></i>Store
                                </span>

                                <span class="promo-footer-status">
                                    <i class="bi bi-clock"></i>Ongoing
                                </span>
                            </div>
                        </div>
                    </a>
                }
            </div>

            <!-- PAGINATION -->
            @if (Model.TotalPages > 1)
            {
                <nav class="d-flex justify-content-center mt-4">
                    <ul class="pagination">
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(Model.Page == i ? "active" : "")">
                                <a class="page-link"
                                   href="@Url.Action("Index", "TenantPromotion", new { area = "Client", tenantId = Model.SelectedTenantId, page = i })">
                                    @i
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        }

        <!-- EXPIRED PROMOTIONS -->
        <div class="promo-section-title mt-5 text-muted">
            <span>Expired promotions</span>
        </div>

        @if (!Model.ExpiredPromotions.Any())
        {
            <div class="empty-state-text">
                No expired promotions to show.
            </div>
        }
        else
        {
            <div class="promo-grid">
                @foreach (var p in Model.ExpiredPromotions)
                {
                    var img = ImgPromotion(p.Img);

                    <div class="promo-card expired-card">
                        <span class="expired-badge">
                            Expired
                        </span>
                        <div class="promo-img-wrapper">
                            <img src="@img" alt="@p.Title" />
                        </div>
                        <div class="promo-content">
                            <div class="promo-title-text text-truncate" title="@p.Title">@p.Title</div>
                            <div class="promo-time">
                                Ended: @p.PromotionEnd?.ToString("dd/MM/yyyy")
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Auto filter by store
        document.getElementById('tenantFilter').addEventListener('change', function () {
            const tenantId = this.value;
            const url = new URL(window.location.href);

            if (tenantId) {
                url.searchParams.set("tenantId", tenantId);
            } else {
                url.searchParams.delete("tenantId");
            }
            url.searchParams.delete("page"); // reset page on filter change

            window.location.href = url.toString();
        });
    </script>
}
