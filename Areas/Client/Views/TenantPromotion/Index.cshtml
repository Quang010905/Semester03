@using System
@using System.IO
@using Microsoft.AspNetCore.Hosting
@using Semester03.Models.ViewModels
@model TenantPromotionListVm

@{
    Layout = "_LayoutClient";
    ViewData["Title"] = "Promotions";

    // ===== HÀM XỬ LÝ ẢNH PROMOTION (CÓ FALLBACK) =====
    Func<string, string> ImgPromotion = (raw) =>
    {
        var noImageUrl = Url.Content("~/Content/Uploads/noimage.png");

        try
        {
            if (string.IsNullOrWhiteSpace(raw))
                return noImageUrl;

            // nếu là link tuyệt đối
            if (raw.StartsWith("http", StringComparison.OrdinalIgnoreCase))
                return raw;

            // chuẩn hóa path
            var file = raw.Replace("\\", "/").Trim();

            // nếu trong chuỗi đã có "Content/Uploads/TenantPromotion" thì chỉ lấy tên file
            var keyword = "Content/Uploads/TenantPromotion";
            var idxKeyword = file.IndexOf(keyword, StringComparison.OrdinalIgnoreCase);
            if (idxKeyword >= 0)
            {
                var lastSlash = file.LastIndexOf('/');
                if (lastSlash >= 0) file = file.Substring(lastSlash + 1);
            }

            // bỏ các prefix thừa
            if (file.StartsWith("wwwroot/", StringComparison.OrdinalIgnoreCase))
                file = file.Substring("wwwroot/".Length);
            if (file.StartsWith("~/"))
                file = file.Substring(2);
            if (file.StartsWith("/"))
                file = file.Substring(1);

            if (string.IsNullOrWhiteSpace(file))
                return noImageUrl;

            // lấy IWebHostEnvironment để kiểm tra file vật lý
            var env = Context.RequestServices.GetService(typeof(IWebHostEnvironment)) as IWebHostEnvironment;
            if (env == null)
            {
                // nếu không lấy được env thì trả luôn đường dẫn tương đối
                return Url.Content("~/Content/Uploads/TenantPromotion/" + Uri.EscapeDataString(file));
            }

            var physical = System.IO.Path.Combine(env.WebRootPath ?? "wwwroot", "Content", "Uploads", "TenantPromotion", file);


            if (System.IO.File.Exists(physical))
            {
                return Url.Content("~/Content/Uploads/TenantPromotion/" + Uri.EscapeDataString(file));
            }

            return noImageUrl;
        }
        catch
        {
            return noImageUrl;
        }
    };
}

@section Styles {
    <style>
        .promotion-page-wrapper {
            padding: 2rem 0;
        }

        /* Dropdown Filter */
        .filter-box {
            background: #fff;
            padding: 1rem 1.5rem;
            border-radius: 1rem;
            box-shadow: 0 6px 20px rgba(0,0,0,.08);
            margin-bottom: 2rem;
            display: flex;
            justify-content: flex-start;
            gap: 1rem;
            align-items: center;
        }

        /* CARD GRID */
        .promo-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill,minmax(270px,1fr));
            gap: 1.4rem;
        }

        .promo-card {
            background: #fff;
            border-radius: 1rem;
            overflow: hidden;
            box-shadow: 0 6px 16px rgba(0,0,0,.1);
            transition: all .25s ease;
            position: relative;
        }

            .promo-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 12px 28px rgba(0,0,0,.15);
            }

            .promo-card img {
                width: 100%;
                height: 180px;
                object-fit: cover;
            }

        .promo-body {
            padding: 1rem;
        }

        .promo-title {
            font-size: 1.05rem;
            font-weight: 700;
        }

        .promo-time {
            font-size: .85rem;
            color: #64748b;
        }

        .discount-badge {
            background: #ef4444;
            color: #fff;
            font-weight: 700;
            padding: .25rem .55rem;
            border-radius: .35rem;
            font-size: .75rem;
            position: absolute;
            top: 10px;
            left: 10px;
            box-shadow: 0 4px 12px rgba(0,0,0,.25);
        }

        .expired-card {
            opacity: .55;
        }

        /* Pagination */
        .pagination .page-link {
            border-radius: 8px;
            margin: 0 3px;
        }

        .pagination .page-item.active .page-link {
            background: #2563eb;
            border-color: #2563eb;
            color: #fff;
        }
    </style>
}

<div class="container promotion-page-wrapper">

    <!-- AUTO FILTER -->
    <div class="filter-box">
        <label class="fw-bold me-2">Filter by Store:</label>
        <select id="tenantFilter" class="form-select" style="max-width:260px;">
            <option value="">All stores</option>
            @foreach (var t in Model.Tenants)
            {
                <option value="@t.TenantId"
                        selected="@(Model.SelectedTenantId == t.TenantId)">
                    @t.TenantName
                </option>
            }
        </select>
    </div>

    <!-- ACTIVE -->
    <h4 class="fw-bold mb-3">🔥 Active Promotions</h4>

    @if (!Model.ActivePromotions.Any())
    {
        <div class="text-muted">No promotions available.</div>
    }
    else
    {
        <div class="promo-grid">
            @foreach (var p in Model.ActivePromotions)
            {
                var img = ImgPromotion(p.Img);

                <a href="@Url.Action("Detail", "TenantPromotion", new { area="Client", id = p.Id })"
                   class="promo-card text-decoration-none text-dark">

                    @* Discount badge *@
                    @if (p.DiscountPercent.HasValue)
                    {
                        <span class="discount-badge">@p.DiscountPercent% OFF</span>
                    }
                    else if (p.DiscountAmount.HasValue)
                    {
                        <span class="discount-badge">@p.DiscountAmount.Value.ToString("#,0") ₫</span>
                    }

                    <img src="@img" />

                    <div class="promo-body">
                        <div class="promo-title">@p.Title</div>
                        <div class="promo-time">
                            <i class="bi bi-calendar3"></i>
                            @p.PromotionStart?.ToString("dd/MM/yyyy") –
                            @p.PromotionEnd?.ToString("dd/MM/yyyy")
                        </div>
                    </div>
                </a>
            }
        </div>

        <!-- PAGINATION -->
        @if (Model.TotalPages > 1)
        {
            <nav class="d-flex justify-content-center mt-4">
                <ul class="pagination">
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(Model.Page == i ? "active" : "")">
                            <a class="page-link"
                               href="@Url.Action("Index","TenantPromotion", new { area="Client", tenantId = Model.SelectedTenantId, page = i })">
                                @i
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        }
    }

    <!-- EXPIRED -->
    <h4 class="fw-bold mt-5 mb-3 text-muted">🕒 Expired Promotions</h4>
    <div class="promo-grid">
        @foreach (var p in Model.ExpiredPromotions)
        {
            var img = ImgPromotion(p.Img);

            <div class="promo-card expired-card">
                <img src="@img" />
                <div class="promo-body">
                    <div class="promo-title">@p.Title</div>
                    <div class="promo-time">
                        Ended: @p.PromotionEnd?.ToString("dd/MM/yyyy")
                    </div>
                </div>
            </div>
        }
    </div>

</div>

@section Scripts {
    <script>
        // 🔥 Auto filter on dropdown change
        document.getElementById('tenantFilter').addEventListener('change', function () {
            const tenantId = this.value;
            const url = new URL(window.location.href);
            if (tenantId)
                url.searchParams.set("tenantId", tenantId);
            else
                url.searchParams.delete("tenantId");

            url.searchParams.delete("page"); // reset page

            window.location.href = url.toString();
        });
    </script>
}
