@model Semester03.Areas.Client.Models.ViewModels.TicketEmailViewModel
<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Vé xem phim - ABCD Mall</title>
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: Inter, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
            background: #f6f8fb;
            padding: 20px;
        }

        .email-card {
            max-width: 780px;
            margin: 0 auto;
            background: #ffffff;
            border-radius: 14px;
            overflow: hidden;
            box-shadow: 0 8px 30px rgba(15,23,42,.08);
        }

        .hero {
            background: linear-gradient(90deg,#0d6efd 0%, #6f42c1 100%);
            color: white;
            padding: 28px 32px;
        }

        .content {
            padding: 24px;
        }

        .ticket-row {
            border-radius: 10px;
            border: 1px dashed #e6e9ef;
            padding: 12px;
            margin-bottom: 12px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 12px;
        }

        .movie {
            font-weight: 700;
            font-size: 16px;
            color: #0f172a;
            margin-bottom: 6px;
        }

        .meta {
            color: #6b7280;
            font-size: 13px;
        }

        .badge-seat {
            background: #eef2ff;
            color: #3730a3;
            padding: 6px 10px;
            border-radius: 999px;
            font-weight: 600;
        }

        .summary {
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 12px;
            padding-top: 10px;
            border-top: 1px solid #eef2ff;
            margin-top: 12px;
        }

        .btn-primary {
            background: linear-gradient(45deg,#0d6efd,#6f42c1);
            border: none;
            padding: 10px 16px;
            border-radius: 8px;
            color: white;
            text-decoration: none;
            display: inline-block;
        }

        .footer {
            padding: 18px 24px;
            font-size: 13px;
            color: #94a3b8;
            text-align: center;
            background: #fbfdff;
        }

        .points {
            color: #059669;
            font-weight: 700;
        }
    </style>
</head>
<body>
    <div class="email-card">
        <div class="hero">
            <h1>ABCD Mall — Vé xem phim của bạn đã được đặt</h1>
            <p>Giao dịch thành công. Dưới đây là thông tin vé của bạn.</p>
        </div>
        <div class="content">
            <p>Xin chào <strong>@Model.UserFullName</strong>,</p>
            <p class="meta">Ngày mua: <strong>@Model.PurchaseDate.ToLocalTime().ToString("dddd, dd MMM yyyy HH:mm")</strong></p>

            <div style="margin-top:18px">
                @foreach (var t in Model.Tickets)
                {
                    <div class="ticket-row">
                        <div class="ticket-left">
                            <div class="movie">@t.MovieTitle</div>
                            <div class="meta">@t.CinemaName &nbsp;•&nbsp; @t.ScreenName</div>
                            <div class="meta">Bắt đầu: @t.ShowtimeStart.ToLocalTime().ToString("ddd, dd MMM yyyy HH:mm")</div>
                        </div>
                        <div style="text-align:right">
                            <div class="badge-seat">@t.SeatLabel</div>
                            <div class="meta" style="margin-top:8px">Giá: <strong>@t.Price.ToString("N0") đ</strong></div>
                        </div>
                    </div>
                }
            </div>

            <div class="summary">
                <div>
                    <div class="meta">Tổng số vé: <strong>@Model.Tickets.Count</strong></div>

                    @if (Model.DiscountAmount > 0)
                    {
                        <div class="meta">Tổng trước khuyến mãi: <strong>@Model.OriginalAmount.ToString("N0") đ</strong></div>
                        <div class="meta">Giảm giá: <strong>-@Model.DiscountAmount.ToString("N0") đ</strong></div>
                    }

                    <div class="meta">Tổng thanh toán: <strong>@Model.TotalAmount.ToString("N0") đ</strong></div>
                </div>
                <div style="text-align:right">
                    <div class="meta">Bạn nhận được:</div>
                    <div class="points">@Model.PointsAwarded điểm</div>
                </div>
            </div>

            <div style="margin-top:18px; display:flex; gap:12px; align-items:center;">
                <a href="#" class="btn-primary">Xem đơn hàng</a>
                <a href="#" style="text-decoration:none; color:#6b7280; font-weight:600;">Liên hệ hỗ trợ</a>
            </div>

            <p style="margin-top:14px; color:#6b7280; font-size:13px;">
                Lưu ý: Vui lòng xuất trình email này hoặc mã vé tại quầy trước giờ chiếu.
            </p>
        </div>

        <div class="footer">
            © @DateTime.UtcNow.Year ABCD Mall • Hotline: 1900-XXX-XXX • Địa chỉ: 123 Example Street
        </div>
    </div>
</body>
</html>
