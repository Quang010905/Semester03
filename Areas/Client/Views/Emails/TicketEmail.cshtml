@using System
@model Semester03.Areas.Client.Models.ViewModels.TicketEmailViewModel
<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Movie Tickets - ABCD Mall</title>
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            margin: 0;
            padding: 20px;
            font-family: Inter, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            background: #f6f8fb;
        }

        .email-card {
            max-width: 780px;
            margin: 0 auto;
            background: #ffffff;
            border-radius: 14px;
            overflow: hidden;
            box-shadow: 0 8px 30px rgba(15,23,42,.08);
        }

        .hero {
            background: linear-gradient(90deg,#0d6efd 0%, #6f42c1 100%);
            color: #ffffff;
            padding: 28px 32px;
        }

            .hero h1 {
                font-size: 20px;
                margin: 0 0 6px;
                font-weight: 700;
            }

            .hero p {
                margin: 0;
                font-size: 14px;
                opacity: 0.9;
            }

        .content {
            padding: 24px;
        }

            .content p {
                font-size: 14px;
                color: #111827;
            }

        .ticket-row {
            border-radius: 10px;
            border: 1px dashed #e6e9ef;
            padding: 12px;
            margin-bottom: 12px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 12px;
        }

        .movie {
            font-weight: 700;
            font-size: 16px;
            color: #0f172a;
            margin-bottom: 6px;
        }

        .meta {
            color: #6b7280;
            font-size: 13px;
        }

        .badge-seat {
            background: #eef2ff;
            color: #3730a3;
            padding: 6px 10px;
            border-radius: 999px;
            font-weight: 600;
            font-size: 13px;
            display: inline-block;
        }

        .summary {
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 12px;
            padding-top: 10px;
            border-top: 1px solid #eef2ff;
            margin-top: 12px;
            font-size: 13px;
        }

            .summary strong {
                font-weight: 600;
            }

        .btn-primary-link {
            background: linear-gradient(45deg,#0d6efd,#6f42c1);
            border: none;
            padding: 10px 16px;
            border-radius: 8px;
            color: white !important;
            text-decoration: none;
            display: inline-block;
            font-size: 13px;
            font-weight: 600;
        }

        .link-plain {
            text-decoration: none;
            color: #6b7280;
            font-weight: 600;
            font-size: 13px;
        }

        .footer {
            padding: 18px 24px;
            font-size: 13px;
            color: #94a3b8;
            text-align: center;
            background: #fbfdff;
        }

        .points {
            color: #059669;
            font-weight: 700;
        }

        @@media (max-width: 600px) {
            .hero {
                padding: 20px 18px;
            }

            .content {
                padding: 16px;
            }

            .ticket-row {
                flex-direction: column;
                align-items: flex-start;
            }

            .summary {
                flex-direction: column;
                align-items: flex-start;
            }
        }
    </style>
</head>
<body>
    <div class="email-card">
        <div class="hero">
            <h1>ABCD Mall — Your movie tickets are confirmed</h1>
            <p>Your transaction was successful. Below are your ticket details.</p>
        </div>

        <div class="content">
            <p>Hello <strong>@Model.UserFullName</strong>,</p>
            <p class="meta">
                Purchase date:
                <strong>@Model.PurchaseDate.ToLocalTime().ToString("dddd, dd MMM yyyy HH:mm")</strong>
            </p>

            <div style="margin-top:18px">
                @foreach (var t in Model.Tickets)
                {
                    <div class="ticket-row">
                        <div class="ticket-left">
                            <div class="movie">@t.MovieTitle</div>
                            <div class="meta">@t.CinemaName &nbsp;•&nbsp; @t.ScreenName</div>
                            <div class="meta">
                                Start:
                                @t.ShowtimeStart.ToLocalTime().ToString("ddd, dd MMM yyyy HH:mm")
                            </div>
                        </div>
                        <div style="text-align:right">
                            <div class="badge-seat">@t.SeatLabel</div>
                            <div class="meta" style="margin-top:8px">
                                Price:
                                <strong>@t.Price.ToString("N0") VND</strong>
                            </div>

                            @* QR code *@
                            @if (!string.IsNullOrWhiteSpace(t.QrCode))
                            {
                                var qrUrl = "https://api.qrserver.com/v1/create-qr-code/?size=180x180&data="
                                + Uri.EscapeDataString(t.QrCode);

                                <div style="margin-top:10px;">
                                    <img src="@qrUrl"
                                         alt="Ticket QR"
                                         style="width:110px;height:110px;border-radius:8px;display:block;margin-left:auto;" />
                                    <div class="meta" style="margin-top:4px;">
                                        Scan this QR at the cinema.
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>

            <div class="summary">
                <div>
                    <div class="meta">
                        Total tickets:
                        <strong>@Model.Tickets.Count</strong>
                    </div>

                    @if (Model.DiscountAmount > 0)
                    {
                        <div class="meta">
                            Total before discount:
                            <strong>@Model.OriginalAmount.ToString("N0") VND</strong>
                        </div>
                        <div class="meta">
                            Discount:
                            <strong>-@Model.DiscountAmount.ToString("N0") VND</strong>
                        </div>
                    }

                    <div class="meta">
                        Total paid:
                        <strong>@Model.TotalAmount.ToString("N0") VND</strong>
                    </div>
                </div>

                <div style="text-align:right">
                    <div class="meta">You earned:</div>
                    <div class="points">@Model.PointsAwarded points</div>
                </div>
            </div>

            <div style="margin-top:18px; display:flex; gap:12px; align-items:center;">
                <a href="#" class="btn-primary-link">View booking</a>
                <a href="#" class="link-plain">Contact support</a>
            </div>

            <p style="margin-top:14px; color:#6b7280; font-size:13px;">
                Note: Please present this email or your ticket QR code at the counter before showtime.
            </p>
        </div>

        <div class="footer">
            © @DateTime.UtcNow.Year ABCD Mall • Hotline: 1900-XXX-XXX • Address: 123 Example Street
        </div>
    </div>
</body>
</html>
