@model Semester03.Areas.Client.Models.ViewModels.EventBookingEmailVm
<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Event Tickets - ABCD Mall</title>
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            margin: 0;
            padding: 20px;
            font-family: Inter, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            background: #f6f8fb;
        }

        .email-card {
            max-width: 780px;
            margin: 0 auto;
            background: #ffffff;
            border-radius: 14px;
            overflow: hidden;
            box-shadow: 0 8px 30px rgba(15,23,42,.08);
        }

        .hero {
            background: linear-gradient(90deg,#0d6efd 0%, #ec4899 50%, #6f42c1 100%);
            color: #ffffff;
            padding: 28px 32px;
        }

            .hero h1 {
                font-size: 20px;
                margin: 0 0 6px;
                font-weight: 700;
            }

            .hero p {
                margin: 0;
                font-size: 14px;
                opacity: 0.9;
            }

        .content {
            padding: 24px;
        }

            .content p {
                font-size: 14px;
                color: #111827;
            }

        .ticket-row {
            border-radius: 10px;
            border: 1px dashed #e6e9ef;
            padding: 12px;
            margin-bottom: 12px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 12px;
        }

        .event-title {
            font-weight: 700;
            font-size: 16px;
            color: #0f172a;
            margin-bottom: 6px;
        }

        .meta {
            color: #6b7280;
            font-size: 13px;
        }

        .badge-qty {
            background: #eef2ff;
            color: #3730a3;
            padding: 6px 10px;
            border-radius: 999px;
            font-weight: 600;
            font-size: 13px;
            display: inline-block;
        }

        .summary {
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 12px;
            padding-top: 10px;
            border-top: 1px solid #eef2ff;
            margin-top: 12px;
            font-size: 13px;
        }

            .summary strong {
                font-weight: 600;
            }

        .btn-primary-link {
            background: linear-gradient(45deg,#0d6efd,#6f42c1);
            border: none;
            padding: 10px 16px;
            border-radius: 8px;
            color: white !important;
            text-decoration: none;
            display: inline-block;
            font-size: 13px;
            font-weight: 600;
        }

        .link-plain {
            text-decoration: none;
            color: #6b7280;
            font-weight: 600;
            font-size: 13px;
        }

        .footer {
            padding: 18px 24px;
            font-size: 13px;
            color: #94a3b8;
            text-align: center;
            background: #fbfdff;
        }

        @@media (max-width: 600px) {
            .hero {
                padding: 20px 18px;
            }

            .content {
                padding: 16px;
            }

            .ticket-row {
                flex-direction: column;
                align-items: flex-start;
            }

            .summary {
                flex-direction: column;
                align-items: flex-start;
            }
        }
    </style>
</head>
<body>
    <div class="email-card">
        <div class="hero">
            <h1>ABCD Mall — Your event booking is confirmed</h1>
            <p>Your event tickets have been booked successfully.</p>
        </div>

        <div class="content">
            <p>Hello <strong>@Model.UserFullName</strong>,</p>
            <p class="meta">
                Booking ID:
                <strong>#@Model.BookingId</strong><br />
                Purchase date:
                <strong>@Model.PurchaseDate.ToLocalTime().ToString("dddd, dd MMM yyyy HH:mm")</strong>
            </p>

            <div style="margin-top:18px">
                <div class="ticket-row">
                    <div class="ticket-left">
                        <div class="event-title">@Model.EventName</div>

                        <div class="meta">
                            Time:
                            <strong>
                                @Model.EventStart.ToLocalTime().ToString("ddd, dd MMM yyyy HH:mm")
                                @if (Model.EventEnd.HasValue)
                                {
                                    @(" - " + Model.EventEnd.Value.ToLocalTime().ToString("HH:mm"))
                                }
                            </strong>
                        </div>

                        @if (!string.IsNullOrWhiteSpace(Model.Location))
                        {
                            <div class="meta">
                                Location:
                                <strong>@Model.Location</strong>
                            </div>
                        }

                        @if (!string.IsNullOrWhiteSpace(Model.OrganizerName))
                        {
                            <div class="meta">
                                Organizer:
                                <strong>@Model.OrganizerName</strong>
                            </div>
                        }
                    </div>

                    <div style="text-align:right">
                        <div class="badge-qty">@Model.Quantity x ticket(s)</div>

                        <div class="meta" style="margin-top:8px">
                            Unit price:
                            <strong>@Model.UnitPrice.ToString("N0") VND</strong>
                        </div>

                        <div class="meta">
                            Total:
                            <strong>@Model.TotalAmount.ToString("N0") VND</strong>
                        </div>
                    </div>
                </div>
            </div>

            <div class="summary">
                <div>
                    <div class="meta">
                        Total tickets:
                        <strong>@Model.Quantity</strong>
                    </div>
                    <div class="meta">
                        Total paid:
                        <strong>@Model.TotalAmount.ToString("N0") VND</strong>
                    </div>
                </div>

                <div style="text-align:right">
                    <div class="meta">
                        Please keep this email and show it at the check-in counter on event day.
                    </div>
                </div>
            </div>

            <div style="margin-top:18px; display:flex; gap:12px; align-items:center;">
                <a href="#" class="btn-primary-link">View booking</a>
                <a href="#" class="link-plain">Contact support</a>
            </div>

            <p style="margin-top:14px; color:#6b7280; font-size:13px;">
                Note: You may be required to present your ticket QR code or this email at event check-in.
            </p>
        </div>

        <div class="footer">
            © @DateTime.UtcNow.Year ABCD Mall • Hotline: 1900-XXX-XXX • Address: 123 Example Street
        </div>
    </div>
</body>
</html>
