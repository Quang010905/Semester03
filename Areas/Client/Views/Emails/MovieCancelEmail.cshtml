@model Semester03.Areas.Client.Models.ViewModels.MovieCancelEmailVm
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <style>
        body {
            font-family: 'Segoe UI', Arial, sans-serif;
            background: #f4f4f7;
            padding: 0;
            margin: 0;
        }

        .email-wrapper {
            max-width: 650px;
            margin: auto;
            background: white;
            padding: 25px;
            border-radius: 12px;
            box-shadow: 0 4px 14px rgba(0,0,0,0.12);
        }

        .header {
            text-align: center;
            background: #2563eb;
            padding: 16px;
            color: #fff;
            border-radius: 8px;
        }

        .section {
            margin-top: 25px;
        }

        .label {
            color: #64748b;
            font-size: 14px;
        }

        .value {
            font-size: 18px;
            color: #0f172a;
            font-weight: 700;
        }

        .footer {
            margin-top: 35px;
            text-align: center;
            font-size: 13px;
            color: #6b7280;
        }
    </style>
</head>

<body>

    <div class="email-wrapper">

        <div class="header">
            <h2>Movie Ticket Cancellation Confirmation</h2>
        </div>

        <p>Hello <strong>@Model.UserName</strong>,</p>

        <p>You have cancelled the following movie tickets:</p>

        <div class="value">
            @Model.MovieName
        </div>

        <div class="label mt-3">Showtime</div>
        <div class="value">@Model.Showtime.ToString("HH:mm dd/MM/yyyy")</div>

        <div class="label mt-3">Number of tickets cancelled</div>
        <div class="value">@Model.CancelledSeats.Count tickets</div>

        <div class="label mt-3">Refund amount</div>
        <div class="value">@Model.RefundAmount.ToString("N0") VND</div>

        <p class="mt-4">If you did not request this action, please contact us immediately.</p>

        <div class="footer">
            This is an automated email – please do not reply.
        </div>
    </div>

</body>
</html>
