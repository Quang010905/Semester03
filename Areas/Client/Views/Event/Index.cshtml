@model Semester03.Areas.Client.Models.ViewModels.EventHomeVm
@using System
@using System.IO
@using System.Linq
@using Microsoft.AspNetCore.Hosting
@using Semester03.Areas.Client.Models.ViewModels

@{
    ViewData["Title"] = "Events";
    Layout = "~/Areas/Client/Views/Shared/_LayoutClient.cshtml";

    Func<string, string> Img = (raw) =>
    {
        var noImageUrl = Url.Content("~/Content/Uploads/noimage.png");

        try
        {
            if (string.IsNullOrWhiteSpace(raw)) return noImageUrl;
            if (raw.StartsWith("http", StringComparison.OrdinalIgnoreCase)) return raw;

            var file = raw.Replace("\\", "/").Trim();
            var keyword = "Content/Uploads/Events";
            var idx = file.IndexOf(keyword, StringComparison.OrdinalIgnoreCase);
            if (idx >= 0)
            {
                var lastSlash = file.LastIndexOf('/');
                if (lastSlash >= 0) file = file.Substring(lastSlash + 1);
            }

            file = file.Replace("wwwroot/", "").TrimStart('~', '/');

            if (string.IsNullOrWhiteSpace(file)) return noImageUrl;

            var env = Context.RequestServices.GetService(typeof(IWebHostEnvironment)) as IWebHostEnvironment;

            var physical = System.IO.Path.Combine(env.WebRootPath, "Content", "Uploads", "Events", file);

            return System.IO.File.Exists(physical)
                ? Url.Content("~/Content/Uploads/Events/" + Uri.EscapeDataString(file))
                : noImageUrl;
        }
        catch { return noImageUrl; }
    };

    var upcoming = Model.Upcoming ?? new List<EventCardVm>();
    var pastPaged = Model.Past ?? new PagedResult<EventCardVm>();
    var past = pastPaged.Items ?? new List<EventCardVm>();

    string fromDate = ViewBag.FromDate as string;
    string toDate = ViewBag.ToDate as string;
    bool showUpcomingAll = ViewBag.ShowUpcomingAll != null && (bool)ViewBag.ShowUpcomingAll;
}

@section Styles {
    <style>

        /* ============================================================
                       🔥 SECTION WRAPPER + NEON BORDER
                    ============================================================ */
        .section-wrapper {
            position: relative;
            padding: 2.2rem 1.8rem 2.5rem;
            border-radius: 1.7rem;
            background: rgba(255,255,255,0.92);
            box-shadow: 0 20px 55px rgba(15,23,42,0.12);
            margin-bottom: 3rem;
            overflow: hidden;
        }

            /* glow background */
            .section-wrapper::before {
                content: "";
                position: absolute;
                inset: -40%;
                background: radial-gradient(circle at 0 0, rgba(99,102,241,.25), transparent 60%), radial-gradient(circle at 100% 100%, rgba(236,72,153,.25), transparent 60%);
                mix-blend-mode: screen;
                animation: glowMove 22s linear infinite alternate;
                pointer-events: none;
            }

        @@keyframes glowMove {
            from {
                transform: translate3d(0,0,0) scale(1);
            }

            to {
                transform: translate3d(4%, -4%, 0) scale(1.06);
            }
        }

        /* neon border line */
        .section-wrapper::after {
            content: "";
            position: absolute;
            inset: 0;
            border-radius: 1.7rem;
            padding: 2px;
            background: linear-gradient(135deg, #6366f1, #ec4899);
            -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
            mask-composite: exclude;
            pointer-events: none;
        }


        /* ============================================================
                       SECTION TITLES
                    ============================================================ */
        .section-title {
            font-weight: 800;
            font-size: 1.8rem;
            margin-bottom: 1.2rem;
            letter-spacing: -.02em;
        }

            .section-title span {
                background: linear-gradient(90deg,#4f46e5,#ec4899);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
            }

        /* ============================================================
                       EVENT CARD
                    ============================================================ */
        .event-card {
            border-radius: 1.2rem;
            background: #fff;
            border: 1px solid #e5e7eb;
            overflow: hidden;
            box-shadow: 0 16px 40px rgba(15,23,42,0.08);
            transition: .25s ease;
            cursor: pointer;
        }

            .event-card:hover {
                transform: translateY(-6px);
                box-shadow: 0 28px 60px rgba(15,23,42,.22);
            }

        .event-img-wrapper {
            height: 190px;
            overflow: hidden;
        }

        .event-img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: .6s ease;
        }

        .event-card:hover .event-img {
            transform: scale(1.06);
        }

        .event-body {
            padding: 1rem 1rem 1.25rem;
        }

        .event-chip {
            display: inline-block;
            background: #eef2ff;
            color: #4338ca;
            padding: 4px 12px;
            font-size: .72rem;
            border-radius: 999px;
            font-weight: 600;
            margin-bottom: .35rem;
        }

        .event-title {
            font-weight: 700;
            font-size: 1.05rem;
            margin-bottom: .25rem;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .event-desc {
            color: #6b7280;
            font-size: .86rem;
            height: 38px;
            overflow: hidden;
            margin-bottom: .4rem;
        }

        .event-date {
            font-size: .8rem;
            color: #4b5563;
            display: flex;
            align-items: center;
            gap: .35rem;
        }

        /* Past events */
        .event-card.expired {
            opacity: .75;
        }

        .ended-badge {
            padding: 4px 10px;
            font-size: .75rem;
            background: #dc2626;
            color: white;
            border-radius: 6px;
        }

    </style>
}

<div class="container py-4">

    <!-- FILTER BY DATE -->
    <div class="section-wrapper mb-4">
        <h2 class="section-title"><span>Filter Events</span></h2>

        <form asp-action="Index" method="get" class="row g-3 align-items-end">
            <div class="col-md-3">
                <label class="form-label">From date</label>
                <input type="date" name="fromDate" class="form-control" value="@fromDate" />
            </div>
            <div class="col-md-3">
                <label class="form-label">To date</label>
                <input type="date" name="toDate" class="form-control" value="@toDate" />
            </div>
            <div class="col-md-3">
                <label class="form-label d-block">&nbsp;</label>
                <button type="submit" class="btn btn-primary me-2">
                    <i class="bi bi-search"></i> Search
                </button>
                <a href="@Url.Action("Index", "Event", new { area = "Client" })" class="btn btn-outline-secondary">
                    Reset
                </a>
            </div>
        </form>
    </div>

    <!-- UPCOMING EVENTS -->
    <div class="section-wrapper">
        <h2 class="section-title"><span>Upcoming Events</span></h2>

        @if (!upcoming.Any())
        {
            <p class="text-muted">There are no upcoming events.</p>
        }
        else
        {
            <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-4">
                @foreach (var e in upcoming)
                {
                    var url = Url.Action("Details", "Event", new { area = "Client", id = e.Id });

                    <div class="col">
                        <div class="event-card" onclick="location.href='@url'">
                            <div class="event-img-wrapper">
                                <img src="@Img(e.ImageUrl)" class="event-img" />
                            </div>

                            <div class="event-body">
                                <span class="event-chip">ABCD Mall</span>
                                <div class="event-title">@e.Title</div>
                                <div class="event-desc">@e.ShortDescription</div>

                                <div class="event-date">
                                    <i class="bi bi-calendar-event"></i>
                                    @e.StartDate?.ToString("dd MMM yyyy HH:mm")
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- VIEW MORE / SHOW LESS UPCOMING -->
            <div class="text-center mt-3">
                @if (!showUpcomingAll && upcoming.Count >= 6)
                {
                    <a class="btn btn-outline-primary"
                       href="@Url.Action("Index", new { showUpcomingAll = true, fromDate = fromDate, toDate = toDate })">
                        View more upcoming
                    </a>
                }
                else if (showUpcomingAll)
                {
                    <a class="btn btn-outline-secondary"
                       href="@Url.Action("Index", new { showUpcomingAll = false, fromDate = fromDate, toDate = toDate })">
                        Show less
                    </a>
                }
            </div>
        }
    </div>


    <!-- PAST EVENTS -->
    <div class="section-wrapper">
        <h3 class="section-title"><span>Past Events</span></h3>

        @if (!past.Any())
        {
            <p class="text-muted">There are no past events yet.</p>
        }
        else
        {
            <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-4">
                @foreach (var e in past)
                {
                    var url = Url.Action("Details", "Event", new { area = "Client", id = e.Id });

                    <div class="col">
                        <div class="event-card expired" onclick="location.href='@url'">

                            <div class="event-img-wrapper">
                                <img src="@Img(e.ImageUrl)" class="event-img" />
                            </div>

                            <div class="event-body">
                                <span class="event-chip">ABCD Mall</span>

                                <div class="event-title">@e.Title</div>
                                <div class="event-desc">@e.ShortDescription</div>

                                <div class="d-flex justify-content-between mt-1">
                                    <div class="event-date">
                                        <i class="bi bi-calendar-event"></i>
                                        @e.StartDate?.ToString("dd MMM yyyy HH:mm")
                                    </div>

                                    <span class="ended-badge">Ended</span>
                                </div>
                            </div>

                        </div>
                    </div>
                }
            </div>
        }

        @if (pastPaged.TotalPages > 1)
        {
            <nav class="mt-4">
                <ul class="pagination justify-content-center">
                    @if (pastPaged.PageIndex > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("Index", new { page = pastPaged.PageIndex - 1, showUpcomingAll = showUpcomingAll, fromDate = fromDate, toDate = toDate })">«</a>
                        </li>
                    }

                    @for (var i = 1; i <= pastPaged.TotalPages; i++)
                    {
                        <li class="page-item @(i == pastPaged.PageIndex ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { page = i, showUpcomingAll = showUpcomingAll, fromDate = fromDate, toDate = toDate })">@i</a>
                        </li>
                    }

                    @if (pastPaged.PageIndex < pastPaged.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("Index", new { page = pastPaged.PageIndex + 1, showUpcomingAll = showUpcomingAll, fromDate = fromDate, toDate = toDate })">»</a>
                        </li>
                    }
                </ul>
            </nav>

            <!-- VIEW MORE PAST = NEXT PAGE -->
            @if (pastPaged.PageIndex < pastPaged.TotalPages)
            {
                <div class="text-center mt-3">
                    <a class="btn btn-outline-primary"
                       href="@Url.Action("Index", new { page = pastPaged.PageIndex + 1, showUpcomingAll = showUpcomingAll, fromDate = fromDate, toDate = toDate })">
                        View more past events
                    </a>
                </div>
            }
        }
    </div>

</div>
