@model Semester03.Areas.Client.Models.ViewModels.EventHomeVm
@using System
@using System.IO
@using System.Linq
@using Microsoft.AspNetCore.Hosting
@using Semester03.Areas.Client.Models.ViewModels

@{
    ViewData["Title"] = "Events";
    Layout = "~/Areas/Client/Views/Shared/_LayoutClient.cshtml";

    // Image helper
    Func<string, string> Img = (raw) =>
    {
        var noImageUrl = Url.Content("~/Content/Uploads/noimage.png");

        try
        {
            if (string.IsNullOrWhiteSpace(raw)) return noImageUrl;
            if (raw.StartsWith("http", StringComparison.OrdinalIgnoreCase)) return raw;

            var file = raw.Replace("\\", "/").Trim();
            var keyword = "Content/Uploads/Events";
            var idx = file.IndexOf(keyword, StringComparison.OrdinalIgnoreCase);
            if (idx >= 0)
            {
                var lastSlash = file.LastIndexOf('/');
                if (lastSlash >= 0) file = file.Substring(lastSlash + 1);
            }

            if (file.StartsWith("wwwroot/")) file = file[8..];
            if (file.StartsWith("~/")) file = file[2..];
            if (file.StartsWith("/")) file = file[1..];

            if (string.IsNullOrWhiteSpace(file)) return noImageUrl;

            var env = Context.RequestServices.GetService(typeof(IWebHostEnvironment)) as IWebHostEnvironment;
            if (env == null) return Url.Content("~/Content/Uploads/Events/" + Uri.EscapeDataString(file));

            var physical = System.IO.Path.Combine(
                env.WebRootPath ?? "wwwroot",
                 "Content",
                 "Uploads",
                 "Events",
                    file
             );

            return System.IO.File.Exists(physical)
                ? Url.Content("~/Content/Uploads/Events/" + Uri.EscapeDataString(file))
                : noImageUrl;
        }
        catch { return noImageUrl; }
    };

    var upcoming = Model.Upcoming ?? new List<EventCardVm>();
    var pastPaged = Model.Past ?? new PagedResult<EventCardVm>();
    var past = pastPaged.Items ?? new List<EventCardVm>();
}

@section Styles {
    <style>
        /* SECTION TITLE --------------------------*/
        .section-title {
            font-weight: 800;
            font-size: 1.8rem;
            letter-spacing: -.03em;
            margin-bottom: 1rem;
            position: relative;
            padding-bottom: .5rem;
        }

            .section-title span {
                background: linear-gradient(90deg,#4f46e5,#ec4899);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                color: transparent;
            }

            .section-title::after {
                content: "";
                width: 85px;
                height: 4px;
                background: linear-gradient(90deg, #4f46e5, #ec4899);
                border-radius: 5px;
                position: absolute;
                left: 0;
                bottom: 0;
            }

        /* EVENT CARD ------------------------------*/
        .event-card {
            border-radius: 1.1rem;
            background: #fff;
            border: 1px solid #e5e7eb;
            overflow: hidden;
            box-shadow: 0 16px 40px rgba(15,23,42,0.08);
            cursor: pointer;
            transition: .25s ease;
            position: relative;
        }

            .event-card:hover {
                transform: translateY(-6px);
                box-shadow: 0 26px 60px rgba(15,23,42,0.22);
            }

        .event-img-wrapper {
            height: 190px;
            overflow: hidden;
        }

        .event-img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: .6s ease;
        }

        .event-card:hover .event-img {
            transform: scale(1.06);
        }

        .event-body {
            padding: 1rem 1rem 1.2rem;
        }

        /* TAG / CHIP --------------------------------*/
        .event-chip {
            display: inline-block;
            background: #eef2ff;
            color: #4338ca;
            padding: 4px 12px;
            border-radius: 999px;
            font-size: .72rem;
            font-weight: 600;
            margin-bottom: .4rem;
        }

        /* TEXT --------------------------------------*/
        .event-title {
            font-size: 1.05rem;
            font-weight: 700;
            margin-bottom: .25rem;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .event-desc {
            font-size: .86rem;
            color: #6b7280;
            margin-bottom: .4rem;
            height: 38px;
            overflow: hidden;
        }

        .event-date {
            font-size: .8rem;
            color: #4b5563;
            display: flex;
            align-items: center;
            gap: .35rem;
        }

        /* PAST EVENTS ------------------------------*/
        .event-card.expired {
            opacity: .7;
        }

        .ended-badge {
            font-size: .75rem;
            background: #dc2626;
            padding: 4px 10px;
            border-radius: 6px;
            color: #fff;
        }
    </style>
}

<div class="container py-3">

    <!-- UPCOMING EVENTS ---------------------------------------------- -->
    <h2 class="section-title"><span>Upcoming events</span></h2>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-4">
        @foreach (var e in upcoming)
        {
            var url = Url.Action("Details", "Event", new { area = "Client", id = e.Id });

            <div class="col">
                <div class="event-card" onclick="location.href='@url'">
                    <div class="event-img-wrapper">
                        <img src="@Img(e.ImageUrl)" class="event-img" />
                    </div>

                    <div class="event-body">
                        <span class="event-chip">ABCD Mall</span>

                        <div class="event-title">@e.Title</div>

                        <div class="event-desc">@e.ShortDescription</div>

                        <div class="event-date">
                            <i class="bi bi-calendar-event"></i>
                            @e.StartDate?.ToString("dd MMM yyyy HH:mm")
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- PAST EVENTS --------------------------------------------------- -->
    <h3 class="section-title mt-5"><span>Past events</span></h3>

    @if (!past.Any())
    {
        <p class="text-muted">There are no past events yet.</p>
    }
    else
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-4">
            @foreach (var e in past)
            {
                var url = Url.Action("Details", "Event", new { area = "Client", id = e.Id });

                <div class="col">
                    <div class="event-card expired" onclick="location.href='@url'">
                        <div class="event-img-wrapper">
                            <img src="@Img(e.ImageUrl)" class="event-img" />
                        </div>

                        <div class="event-body">
                            <span class="event-chip">ABCD Mall</span>

                            <div class="event-title">@e.Title</div>

                            <div class="event-desc">@e.ShortDescription</div>

                            <div class="d-flex justify-content-between align-items-center mt-1">
                                <div class="event-date">
                                    <i class="bi bi-calendar-event"></i>
                                    @e.StartDate?.ToString("dd MMM yyyy HH:mm")
                                </div>

                                <span class="ended-badge">Ended</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (pastPaged.TotalPages > 1)
        {
            <nav class="mt-4" aria-label="Page navigation">
                <ul class="pagination justify-content-center">

                    @if (pastPaged.PageIndex > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("Index", new { page = pastPaged.PageIndex - 1 })">«</a>
                        </li>
                    }

                    @for (var i = 1; i <= pastPaged.TotalPages; i++)
                    {
                        <li class="page-item @(i == pastPaged.PageIndex ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                        </li>
                    }

                    @if (pastPaged.PageIndex < pastPaged.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("Index", new { page = pastPaged.PageIndex + 1 })">»</a>
                        </li>
                    }

                </ul>
            </nav>
        }
    }
</div>
