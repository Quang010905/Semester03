@model Semester03.Areas.Client.Models.ViewModels.EventDetailsVm
@using System
@using System.Globalization
@using System.IO
@using Microsoft.AspNetCore.Hosting

@{
    ViewData["Title"] = Model.Title;
    Layout = "~/Areas/Client/Views/Shared/_LayoutClient.cshtml";

    // Hàm xử lý ảnh sự kiện – đồng bộ với Index & Tickets
    Func<string, string> Img = (raw) =>
    {
        var noImageUrl = Url.Content("~/Content/Uploads/noimage.png");

        try
        {
            if (string.IsNullOrWhiteSpace(raw))
                return noImageUrl;

            if (raw.StartsWith("http", StringComparison.OrdinalIgnoreCase))
                return raw;

            var file = raw.Replace("\\", "/").Trim();

            var keyword = "Content/Uploads/Events";
            var idxKeyword = file.IndexOf(keyword, StringComparison.OrdinalIgnoreCase);
            if (idxKeyword >= 0)
            {
                var lastSlash = file.LastIndexOf('/');
                if (lastSlash >= 0) file = file.Substring(lastSlash + 1);
            }

            if (file.StartsWith("wwwroot/", StringComparison.OrdinalIgnoreCase))
                file = file.Substring("wwwroot/".Length);
            if (file.StartsWith("~/"))
                file = file.Substring(2);
            if (file.StartsWith("/"))
                file = file.Substring(1);

            if (string.IsNullOrWhiteSpace(file))
                return noImageUrl;

            var env = Context.RequestServices.GetService(typeof(IWebHostEnvironment)) as IWebHostEnvironment;
            if (env == null)
            {
                return Url.Content("~/Content/Uploads/Events/" + Uri.EscapeDataString(file));
            }

            var physical = System.IO.Path.Combine(
                env.WebRootPath ?? "wwwroot",
                "Content", "Uploads", "Events", file
            );

            if (System.IO.File.Exists(physical))
            {
                return Url.Content("~/Content/Uploads/Events/" + Uri.EscapeDataString(file));
            }
            else
            {
                return noImageUrl;
            }
        }
        catch
        {
            return Url.Content("~/Content/Uploads/noimage.png");
        }
    };

    var isPast = Model.IsPast;
    // mặc định 0.0 khi chưa có comment
    var displayAvg = Model.CommentCount > 0 ? Model.AvgRate : 0.0;
}

@section Styles {
    <style>
        :root {
            --primary: #0d6efd;
            --primary-soft: rgba(13, 110, 253, 0.1);
            --bg-soft: #f8fafc;
            --text-muted: #64748b;
            --radius-lg: 1.25rem;
            --shadow-soft: 0 18px 40px rgba(15, 23, 42, 0.08);
        }

        body {
            background-color: #f1f5f9;
        }

        .page-wrapper {
            padding-block: 1.5rem 2.5rem;
        }

        .back-link {
            display: inline-flex;
            align-items: center;
            gap: .5rem;
            font-size: 0.9rem;
            color: #6b7280;
            text-decoration: none;
            padding: .35rem .75rem;
            border-radius: 999px;
            background: rgba(148, 163, 184, 0.12);
            transition: all .2s ease;
        }

            .back-link:hover {
                color: #111827;
                background: rgba(148, 163, 184, 0.25);
                text-decoration: none;
                transform: translateX(-2px);
            }

        .event-main-card {
            background: #ffffff;
            border-radius: var(--radius-lg);
            box-shadow: var(--shadow-soft);
            padding: 1.5rem 1.6rem;
        }

        .event-header {
            display: grid;
            grid-template-columns: 260px 1fr auto;
            gap: 1.5rem;
            align-items: stretch;
        }

        .event-poster {
            border-radius: 1.25rem;
            overflow: hidden;
            box-shadow: 0 18px 40px rgba(15, 23, 42, 0.22);
            position: relative;
            background: #020617;
        }

            .event-poster img {
                width: 100%;
                height: 100%;
                min-height: 230px;
                object-fit: cover;
                display: block;
                transition: transform .6s ease;
            }

            .event-poster:hover img {
                transform: scale(1.05);
            }

        .event-pill {
            position: absolute;
            left: 1rem;
            top: 1rem;
            background: rgba(15, 23, 42, .75);
            backdrop-filter: blur(8px);
            color: #e5e7eb;
            padding: 0.3rem .7rem;
            border-radius: 999px;
            font-size: 0.75rem;
            display: inline-flex;
            align-items: center;
            gap: .35rem;
        }

        .event-header-main {
            display: flex;
            flex-direction: column;
        }

        .event-header-topline {
            display: flex;
            flex-wrap: wrap;
            gap: .4rem;
            align-items: center;
            font-size: 0.85rem;
            color: var(--text-muted);
            margin-bottom: .2rem;
        }

        .event-title-main {
            font-size: 1.9rem;
            font-weight: 800;
            margin-bottom: .15rem;
            letter-spacing: -0.03em;
            color: #0f172a;
        }

        .event-subline {
            color: var(--text-muted);
            font-size: .9rem;
            margin-bottom: .4rem;
        }

        .event-tags {
            display: flex;
            flex-wrap: wrap;
            gap: .35rem;
            margin-bottom: .5rem;
        }

        .tag-pill {
            border-radius: 999px;
            padding: 3px 9px;
            font-size: 0.7rem;
            font-weight: 500;
            display: inline-flex;
            align-items: center;
            gap: 4px;
        }

        .tag-open {
            background: #dcfce7;
            color: #16a34a;
        }

        .tag-upcoming {
            background: #e0f2fe;
            color: #0369a1;
        }

        .tag-ongoing {
            background: #d1fae5;
            color: #047857;
        }

        .tag-ended {
            background: #fee2e2;
            color: #b91c1c;
        }

        .tag-quality {
            background: #fef9c3;
            color: #a16207;
        }

        .event-header-meta {
            font-size: .88rem;
            color: var(--text-muted);
        }

            .event-header-meta strong {
                color: #111827;
            }

        .rating-panel {
            text-align: right;
            min-width: 180px;
            display: flex;
            flex-direction: column;
            align-items: flex-end;
            justify-content: space-between;
        }

        .rating-pill {
            display: inline-flex;
            align-items: center;
            gap: .3rem;
            font-weight: 800;
            background: linear-gradient(120deg, #ffb347, #ffcc33);
            color: #111827;
            padding: .35rem .8rem;
            border-radius: .9rem;
            font-size: .95rem;
            box-shadow: 0 10px 30px rgba(250, 204, 21, 0.4);
        }

            .rating-pill small {
                font-size: .75rem;
                opacity: .85;
            }

        .rating-stars {
            display: inline-flex;
            gap: .1rem;
            margin-top: .25rem;
        }

            .rating-stars i {
                font-size: 1rem;
                color: #facc15;
            }

        .rating-count {
            font-size: .8rem;
            color: var(--text-muted);
            margin-top: .1rem;
        }

        .status-chip {
            margin-top: .4rem;
            font-size: .75rem;
            padding: 2px 8px;
            border-radius: 999px;
            background: #e5e7eb;
            color: #374151;
        }

            .status-chip.active {
                background: #dcfce7;
                color: #15803d;
            }

            .status-chip.ended {
                background: #fee2e2;
                color: #b91c1c;
            }

        .event-content-row {
            margin-top: 1.3rem;
        }

        .event-section {
            background: #ffffff;
            border-radius: 1rem;
            padding: 1rem 1.1rem;
            border: 1px solid #e5e7eb;
            margin-bottom: 1rem;
        }

        .event-section-title {
            font-size: 1rem;
            font-weight: 700;
            margin-bottom: .6rem;
            display: flex;
            align-items: center;
            gap: .45rem;
        }

            .event-section-title i {
                font-size: 1.05rem;
                color: var(--primary);
            }

        .event-description {
            font-size: .94rem;
            color: #374151;
        }

        /* comments */
        .comment-header-row {
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: .75rem;
            flex-wrap: wrap;
        }

        .avg-rate-box {
            display: flex;
            flex-direction: column;
            align-items: flex-end;
            font-size: .85rem;
            color: var(--text-muted);
        }

            .avg-rate-box .big-rate {
                font-size: 1.1rem;
                font-weight: 700;
                color: #111827;
            }

        .user-rating-row {
            display: flex;
            align-items: center;
            gap: .6rem;
            flex-wrap: wrap;
            margin-bottom: .35rem;
        }

        .stars-input .star {
            font-size: 1.4rem;
            cursor: pointer;
            color: #cbd5e1;
            transition: transform .15s ease, color .15s ease;
        }

            .stars-input .star.filled,
            .stars-input .star.bi-star-fill {
                color: #fbbf24;
                transform: scale(1.05);
            }

        .comment-item {
            border-bottom: 1px solid #e5e7eb;
            padding: .75rem 0;
        }

            .comment-item:last-child {
                border-bottom: none;
            }

        .comment-user {
            font-weight: 600;
            margin-right: .35rem;
        }

        .comment-time {
            color: #94a3b8;
            font-size: .85rem;
        }

        .comment-text {
            margin-top: .3rem;
            font-size: .9rem;
        }

        .comment-empty {
            color: var(--text-muted);
            font-size: .9rem;
        }

        .comment-stars-readonly i {
            font-size: 1rem;
            color: #facc15;
        }

        /* sidebar */
        .event-side-card {
            background: #ffffff;
            border-radius: 1rem;
            padding: 1rem 1.1rem;
            border: 1px solid #e5e7eb;
        }

            .event-side-card h6 {
                font-weight: 700;
                margin-bottom: .75rem;
            }

            .event-side-card p {
                font-size: .9rem;
                margin-bottom: .3rem;
            }

        .btn-register {
            font-weight: 600;
        }

        /* upcoming events slider */
        .upcoming-wrapper {
            margin-top: .3rem;
        }

        .upcoming-scroll-outer {
            position: relative;
        }

        .upcoming-scroll {
            display: flex;
            gap: 0.9rem;
            overflow-x: auto;
            scroll-behavior: smooth;
            padding-bottom: .4rem;
        }

            .upcoming-scroll::-webkit-scrollbar {
                height: 6px;
            }

            .upcoming-scroll::-webkit-scrollbar-thumb {
                background: #cbd5e1;
                border-radius: 999px;
            }

        .upcoming-card {
            min-width: 250px;
            max-width: 280px;
            background: #ffffff;
            border-radius: .9rem;
            border: 1px solid #e5e7eb;
            box-shadow: 0 10px 24px rgba(15,23,42,0.08);
            overflow: hidden;
            cursor: pointer;
            transition: transform .15s ease, box-shadow .15s ease;
        }

            .upcoming-card:hover {
                transform: translateY(-3px);
                box-shadow: 0 16px 32px rgba(15,23,42,0.14);
            }

        .upcoming-img {
            width: 100%;
            height: 120px;
            object-fit: cover;
        }

        .upcoming-body {
            padding: .6rem .75rem .7rem;
        }

        .upcoming-title {
            font-size: .92rem;
            font-weight: 600;
            margin-bottom: .15rem;
            white-space: nowrap;
            text-overflow: ellipsis;
            overflow: hidden;
        }

        .upcoming-date {
            font-size: .8rem;
            color: var(--text-muted);
            margin-bottom: .2rem;
        }

        .upcoming-desc {
            font-size: .8rem;
            color: #4b5563;
            white-space: nowrap;
            text-overflow: ellipsis;
            overflow: hidden;
        }

        .upcoming-nav {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: .75rem;
            margin-top: .4rem;
        }

        .upcoming-dot {
            width: 7px;
            height: 7px;
            border-radius: 50%;
            background: #d1d5db;
            transition: background .2s ease, transform .2s ease;
        }

            .upcoming-dot.active {
                background: #0f172a;
                transform: scale(1.2);
            }

        .upcoming-arrow-btn {
            border-radius: 999px;
            border: 1px solid #d1d5db;
            width: 28px;
            height: 28px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            padding: 0;
            font-size: .9rem;
        }

        @@media (max-width: 991.98px) {
            .event-header {
                grid-template-columns: 1fr;
            }

            .rating-panel {
                text-align: left;
                align-items: flex-start;
            }
        }
    </style>
}

<div class="container page-wrapper">
    <a class="back-link mb-3" href="@Url.Action("Index", "Event", new { area = "Client" })">
        <i class="bi bi-arrow-left"></i> Back to events
    </a>

    <div class="event-main-card">
        <!-- HEADER -->
        <div class="event-header">
            <div class="event-poster">
                <img src="@Img(Model.ImageUrl)" alt="@Model.Title" />
                <div class="event-pill">
                    <i class="bi bi-calendar-event"></i>
                    <span>Event</span>
                </div>
            </div>

            <div class="event-header-main">

                <div class="event-title-main">@Model.Title</div>

                <div class="event-subline">
                    Sự kiện tại ABCD Mall với nhiều hoạt động thú vị. Tham gia để trải nghiệm mua sắm
                    và giải trí cùng bạn bè và gia đình.
                </div>

                <div class="event-tags">
                    @if (!isPast && Model.Status == 1)
                    {
                        <span class="tag-pill tag-open">
                            <i class="bi bi-check-circle"></i> Đang mở đăng ký
                        </span>
                    }
                    @if (Model.IsOngoing && Model.Status == 1)
                    {
                        <span class="tag-pill tag-ongoing">
                            <i class="bi bi-broadcast"></i> Đang diễn ra
                        </span>
                    }
                    else if (Model.IsUpcoming && Model.Status == 1)
                    {
                        <span class="tag-pill tag-upcoming">
                            <i class="bi bi-calendar2-event"></i> Sắp diễn ra
                        </span>
                    }
                    else if (Model.IsPast)
                    {
                        <span class="tag-pill tag-ended">
                            <i class="bi bi-flag-fill"></i> Đã kết thúc
                        </span>
                    }
                </div>

            </div>

            <div class="rating-panel">
                <div>
                    <div class="rating-pill">
                        @displayAvg.ToString("0.0") <small>/5</small>
                    </div>
                    <div class="rating-stars">
                        @{
                            var avgStar = displayAvg;
                            for (int i = 1; i <= 5; i++)
                            {
                                if (avgStar >= i)
                                {
                                    <i class="bi bi-star-fill"></i>
                                }
                                else
                                {
                                    <i class="bi bi-star"></i>
                                }
                            }
                        }
                    </div>
                    <div class="rating-count">
                        @(Model.CommentCount > 0 ? $"{Model.CommentCount} review(s)" : "No reviews yet")
                    </div>
                </div>
            </div>
        </div>

        <hr class="my-3" />

        <!-- MAIN CONTENT -->
        <div class="row event-content-row g-4">
            <div class="col-lg-8">

                <!-- comments -->
                <section class="event-section">
                    <div class="event-section-title">
                        <i class="bi bi-chat-right-text"></i>
                        <span>Comments &amp; ratings</span>
                    </div>

                    <div class="comment-header-row mb-2">
                        <div>
                            <div class="user-rating-row">
                                <span class="fw-semibold">Your rating:</span>
                                @if (User?.Identity?.IsAuthenticated == true)
                                {
                                    <div id="userStars" class="stars-input">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            <i class="star bi bi-star" data-value="@i"></i>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted small">
                                        Bạn cần đăng nhập để đánh giá.
                                    </span>
                                }
                            </div>
                        </div>

                        <div class="avg-rate-box">
                            <span class="big-rate">@displayAvg.ToString("0.0") / 5</span>
                            <span>(@Model.CommentCount bình luận)</span>
                        </div>
                    </div>

                    <div id="commentFormArea" class="mb-2">
                        @if (User?.Identity?.IsAuthenticated == true)
                        {
                            @Html.AntiForgeryToken()
                            <!-- hidden event id for JS -->
                            <input type="hidden" id="eventId" value="@Model.Id" />

                            <textarea id="commentText"
                                  class="form-control mb-2"
                                  rows="3"
                                  placeholder="Chia sẻ trải nghiệm của bạn về sự kiện..."></textarea>
                            <div class="d-flex gap-2 align-items-center flex-wrap">
                                <button id="submitComment" class="btn btn-primary btn-sm">
                                    <i class="bi bi-send me-1"></i>Gửi bình luận
                                </button>
                                <small class="text-muted">
                                    Bình luận có thể được kiểm duyệt trước khi hiển thị.
                                </small>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info py-2 mb-2">
                                Bạn cần
                                <a href="@Url.Action("Login", "Account", new { area = "Client" })">đăng nhập</a>
                                để bình luận và đánh giá sự kiện này.
                            </div>
                        }
                    </div>

                    <hr class="my-3" />

                    <div id="commentsList">
                        @if (Model.Comments != null && Model.Comments.Any())
                        {
                            foreach (var c in Model.Comments)
                            {
                                <div class="comment-item">
                                    <div class="d-flex justify-content-between flex-wrap gap-2">
                                        <div>
                                            <span class="comment-user">@c.UserName</span>
                                            <span class="small text-muted">•</span>
                                            <span class="comment-time">@c.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</span>
                                        </div>
                                        <div class="comment-stars-readonly">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                var cls = c.Rate >= i ? "bi-star-fill" : "bi-star";
                                                <i class="star @cls"></i>
                                            }
                                        </div>
                                    </div>
                                    <div class="comment-text">
                                        @Html.Raw(System.Net.WebUtility.HtmlEncode(c.Text))
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="comment-empty">
                                Chưa có bình luận nào — hãy là người đầu tiên!
                            </div>
                        }
                    </div>
                </section>

                <!-- upcoming events slider -->
                @if (Model.Related != null && Model.Related.Any())
                {
                    <section class="event-section upcoming-wrapper">
                        <div class="event-section-title">
                            <i class="bi bi-grid-3x3-gap"></i>
                            <span>Upcoming events</span>
                        </div>

                        <div class="upcoming-scroll-outer">
                            <div class="upcoming-scroll" id="upcomingEventsScroll">
                                @foreach (var ev in Model.Related)
                                {
                                    var url = Url.Action("Details", "Event", new { area = "Client", id = ev.Id });
                                    <div class="upcoming-card" onclick="location.href='@url'">
                                        <img src="@Img(ev.ImageUrl)" class="upcoming-img" alt="@ev.Title" />
                                        <div class="upcoming-body">
                                            <div class="upcoming-title" title="@ev.Title">@ev.Title</div>
                                            <div class="upcoming-date">
                                                <i class="bi bi-calendar-event"></i>
                                                @ev.StartDate?.ToString("dd/MM/yyyy HH:mm")
                                            </div>
                                            <div class="upcoming-desc">@ev.ShortDescription</div>
                                        </div>
                                    </div>
                                }
                            </div>

                            <div class="upcoming-nav mt-2">
                                <button type="button"
                                        class="btn btn-sm btn-light upcoming-arrow-btn"
                                        id="upcomingPrevBtn">
                                    <i class="bi bi-chevron-left"></i>
                                </button>

                                <div id="upcomingDots" class="d-flex gap-1"></div>

                                <button type="button"
                                        class="btn btn-sm btn-light upcoming-arrow-btn"
                                        id="upcomingNextBtn">
                                    <i class="bi bi-chevron-right"></i>
                                </button>
                            </div>
                        </div>
                    </section>
                }
            </div>

            <!-- SIDEBAR -->
            <aside class="col-lg-4">
                <div class="event-side-card">
                    <h6>Thông tin sự kiện</h6>

                    <p><strong>Ngày bắt đầu:</strong> @Model.StartDate.ToString("dd/MM/yyyy HH:mm")</p>
                    <p><strong>Ngày kết thúc:</strong> @(Model.EndDate.HasValue? Model.EndDate.Value.ToString("dd/MM/yyyy HH:mm") : "-")</p>

                    <p>
                        <strong>Giá vé:</strong>
                        @if (Model.Price.HasValue)
                        {
                            @Model.Price.Value.ToString("C0", new CultureInfo("vi-VN"))
                        }
                        else
                        {
                            <span>Miễn phí</span>
                        }
                    </p>

                    <p>
                        <strong>Slots còn lại:</strong> @Model.AvailableSlots
                        @if (Model.MaxSlot > 0)
                        {
                            <span>/ @Model.MaxSlot</span>
                        }
                    </p>

                    <p>
                        <strong>Trạng thái:</strong>
                        @{
                            string statusTextSide;
                            if (Model.IsPast) statusTextSide = "Đã kết thúc";
                            else if (Model.IsOngoing && Model.Status == 1) statusTextSide = "Đang diễn ra";
                            else if (Model.IsUpcoming && Model.Status == 1) statusTextSide = "Sắp diễn ra";
                            else if (Model.Status == 1) statusTextSide = "Đang mở";
                            else statusTextSide = "Không hoạt động";
                        }
                        @statusTextSide
                    </p>

                    <hr />

                    <h6>Tổ chức / Shop</h6>
                    <div>
                        <div class="fw-bold">@(!string.IsNullOrWhiteSpace(Model.OrganizerShopName) ? Model.OrganizerShopName : "-")</div>
                        @if (!string.IsNullOrWhiteSpace(Model.OrganizerDescription))
                        {
                            <div class="text-muted small">@Model.OrganizerDescription</div>
                        }
                    </div>

                    <div class="mt-2 small-muted">
                        <div><strong>Vị trí:</strong></div>
                        @if (!string.IsNullOrWhiteSpace(Model.PositionLocation))
                        {
                            <div>@Model.PositionLocation</div>
                        }
                        @if (Model.PositionFloor.HasValue)
                        {
                            <div>Tầng: @Model.PositionFloor.Value</div>
                        }
                    </div>

                    @if (!string.IsNullOrWhiteSpace(Model.OrganizerPhone) || !string.IsNullOrWhiteSpace(Model.OrganizerEmail))
                    {
                        <div class="mt-2">
                            <small class="text-muted">Liên hệ:</small>
                            <div>
                                @if (!string.IsNullOrWhiteSpace(Model.OrganizerPhone))
                                {
                                    <div><i class="bi bi-telephone"></i> @Model.OrganizerPhone</div>
                                }
                                @if (!string.IsNullOrWhiteSpace(Model.OrganizerEmail))
                                {
                                    <div><i class="bi bi-envelope"></i> @Model.OrganizerEmail</div>
                                }
                            </div>
                        </div>
                    }

                    <div class="d-grid mt-3">
                        @if (Model.IsPast || Model.Status != 1 || Model.AvailableSlots <= 0)
                        {
                            <button class="btn btn-secondary btn-register" disabled>
                                @(Model.AvailableSlots <= 0 ? "Hết chỗ" : "Sự kiện đã kết thúc")
                            </button>
                        }
                        else
                        {
                            if (User?.Identity?.IsAuthenticated == true)
                            {
                                <a href="@Url.Action("Register", "EventBooking", new { area = "Client", id = Model.Id })"
                                   class="btn btn-success btn-register">
                                    Đăng ký ngay
                                </a>
                            }
                            else
                            {
                                var registerUrl = Url.Action("Register", "EventBooking", new { area = "Client", id = Model.Id });
                                var loginUrl = Url.Action("Login", "Account", new { area = "Client", returnUrl = registerUrl });

                                <a href="@loginUrl" class="btn btn-outline-primary btn-register">
                                    Đăng nhập để đăng ký
                                </a>
                            }
                        }
                    </div>

                </div>
            </aside>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function () {
            const starEls = document.querySelectorAll('#userStars .star');
            let selected = 0;

            function apply(v) {
                starEls.forEach(el => {
                    const val = Number(el.dataset.value);
                    el.classList.remove('bi-star', 'bi-star-fill', 'filled');
                    if (val <= v) el.classList.add('bi-star-fill', 'filled');
                    else el.classList.add('bi-star');
                });
            }

            starEls.forEach(el => {
                el.addEventListener('mouseenter', () => apply(Number(el.dataset.value)));
                el.addEventListener('mouseleave', () => apply(selected));
                el.addEventListener('click', () => {
                    selected = Number(el.dataset.value);
                    apply(selected);
                });
            });

            const btn = document.getElementById('submitComment');
            if (!btn) return;

            btn.addEventListener('click', async () => {
                const textEl = document.getElementById('commentText');
                const text = (textEl?.value || '').trim();
                if (!selected) return alert('Vui lòng chọn số sao đánh giá.');
                if (!text) return alert('Vui lòng viết bình luận.');

                const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
                const token = tokenInput ? tokenInput.value : '';

                btn.disabled = true;
                const originalHtml = btn.innerHTML;
                btn.innerHTML = '<span class="spinner-border spinner-border-sm me-1"></span>Đang gửi...';

                try {
                    const resp = await fetch('@Url.Action("AddComment", "Event", new { area = "Client" })', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded; charset=UTF-8',
                            'RequestVerificationToken': token,
                            'X-Requested-With': 'XMLHttpRequest'
                        },
                        body: new URLSearchParams({
                            eventId: document.getElementById('eventId').value,
                            rate: selected,
                            text: text
                        })
                    });

                    const data = await resp.json();
                    if (data && data.success) {
                        alert(data.message || 'Gửi bình luận thành công.');
                        if (textEl) textEl.value = '';
                        selected = 0;
                        apply(0);
                        window.location.reload();
                    } else {
                        alert(data?.message || 'Có lỗi khi gửi bình luận.');
                    }
                } catch (e) {
                    console.error(e);
                    alert('Lỗi server. Vui lòng thử lại sau.');
                } finally {
                    btn.disabled = false;
                    btn.innerHTML = originalHtml;
                }
            });
        })();
    </script>
}
