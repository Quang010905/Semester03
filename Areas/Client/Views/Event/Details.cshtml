@model Semester03.Areas.Client.Models.ViewModels.EventDetailsVm
@using System
@{
    ViewData["Title"] = Model.Title;
    Layout = "~/Areas/Client/Views/Shared/_LayoutClient.cshtml";

    Func<string, string> Img = (raw) =>
    {
        if (string.IsNullOrWhiteSpace(raw))
        {
            return Url.Content("~/images/event-placeholder.png");
        }
        if (raw.StartsWith("http", StringComparison.OrdinalIgnoreCase))
        {
            return raw;
        }
        var s = raw.Replace("wwwroot/", "").TrimStart('~', '/');
        s = s.Replace(" ", "%20");
        if (s.StartsWith("Content", StringComparison.OrdinalIgnoreCase)
            || s.StartsWith("images", StringComparison.OrdinalIgnoreCase)
            || s.StartsWith("Admin/img", StringComparison.OrdinalIgnoreCase))
        {
            return Url.Content("~/" + s);
        }
        if (raw.StartsWith("/"))
        {
            return Url.Content("~" + raw);
        }
        return Url.Content("~/Content/Uploads/Events/" + s);
    };
}

<style>
    .event-main-img {
        height: 360px;
        object-fit: cover;
        width: 100%;
        border-radius: 6px;
    }

    .event-meta {
        color: #6c757d;
        font-size: 0.95rem;
    }

    .related-card {
        border: 0;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 6px 18px rgba(0,0,0,0.06);
    }

        .related-card img {
            height: 140px;
            object-fit: cover;
            width: 100%;
        }

    .related-title {
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: 6px;
    }

    .btn-register {
        padding: 10px 14px;
        font-weight: 600;
    }
</style>

<div class="container py-4">
    <div class="row">
        <div class="col-lg-8">
            <div class="mb-3">
                <img src="@Img(Model.ImageUrl)" alt="@Model.Title" class="event-main-img w-100" />
            </div>

            <h1 class="mb-2">@Model.Title</h1>
            <p class="event-meta mb-3">
                <span>@Model.StartDate.ToString("dd MMM yyyy HH:mm")</span>
                @if (Model.EndDate.HasValue)
                {
                    <span> — @Model.EndDate.Value.ToString("dd MMM yyyy HH:mm")</span>
                }
            </p>

            <div class="mb-4">
                @Html.Raw(Model.Description)
            </div>

            <div class="d-flex align-items-center gap-2">
                <a href="@Url.Action("Index", "Event", new { area = "Client" })" class="btn btn-outline-secondary">Quay lại</a>
                <div class="ms-auto text-muted small">
                    <div><strong>Slots:</strong> @Model.MaxSlot</div>
                    <div><strong>Status:</strong> @(Model.Status == 1 ? "Active" : "Inactive")</div>
                </div>
            </div>

            @if (Model.Related != null && Model.Related.Any())
            {
                <hr class="my-4" />
                <h4 class="mb-3">Sự kiện liên quan</h4>

                <div class="row g-3">
                    @foreach (var r in Model.Related)
                    {
                        <div class="col-12 col-sm-6 col-md-6 col-lg-3">
                            <div class="card related-card">
                                <a href="@Url.Action("Details", "Event", new { area = "Client", id = r.Id })" class="d-block">
                                    <img src="@Img(r.ImageUrl)" class="card-img-top" alt="@r.Title" />
                                </a>
                                <div class="card-body p-3">
                                    <a href="@Url.Action("Details", "Event", new { area = "Client", id = r.Id })" class="text-dark">
                                        <div class="related-title">@r.Title</div>
                                    </a>
                                    <div class="small text-muted mb-2">@r.StartDate?.ToString("dd MMM yyyy")</div>
                                    <p class="small mb-0 text-truncate">@r.ShortDescription</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>

        <aside class="col-lg-4">
            <div class="p-3 bg-white rounded" style="box-shadow:0 6px 20px rgba(0,0,0,0.04);">
                <h6 class="mb-3">Thông tin sự kiện</h6>
                <p class="mb-1"><strong>Ngày:</strong> @Model.StartDate.ToString("dd MMM yyyy") @if(Model.EndDate.HasValue){
                <text> — @Model.EndDate.Value.ToString("dd MMM yyyy")</text>
                                }
</p>
                <p class="mb-1"><strong>Slots:</strong> @Model.MaxSlot</p>
                <p class="mb-1"><strong>Trạng thái:</strong> @(Model.Status == 1 ? "Đang diễn ra" : "Ngừng")</p>
                <p class="mb-1"><strong>Đơn vị tổ chức:</strong> @(Model.TenantPositionId != 0 ? Model.TenantPositionId.ToString() : "-")</p>

                <div class="d-grid mt-3">
                    <a href="@Url.Action("Register", "EventBooking", new { area = "Client", id = Model.Id })" class="btn btn-success">Đăng ký ngay</a>
                </div>
            </div>
        </aside>
    </div>
</div>
