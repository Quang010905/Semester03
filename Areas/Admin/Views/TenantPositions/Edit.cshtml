@model Semester03.Models.Entities.TblTenantPosition

@{
    ViewData["Title"] = "Edit Position";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";

    // Check if this is a fixed Cinema spot
    bool isCinema = (Model.TenantPositionAssignedCinemaId != null);
}

<h1 class="h3 mb-2 text-gray-800">Edit Unit: @Model.TenantPositionLocation</h1>

@if (isCinema)
{
    <div class="alert alert-info border-left-info">
        <i class="fas fa-info-circle"></i> This unit is designated for <strong>Mall Cinema</strong> and cannot be reassigned to regular tenants here.
    </div>
}
else
{
    <p class="mb-4">Assign a tenant to this unit or update rental details. Structural fields are read-only.</p>
}

<div class="row">
    <div class="col-md-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Unit Details</h6>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input type="hidden" asp-for="TenantPositionId" />
                    <input type="hidden" asp-for="TenantPositionLeftPct" />
                    <input type="hidden" asp-for="TenantPositionTopPct" />

                    <input type="hidden" asp-for="TenantPositionAssignedCinemaId" />

                    <h6 class="text-secondary text-uppercase small font-weight-bold">Structural Info (Fixed)</h6>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="TenantPositionLocation" class="control-label">Location Code</label>
                                <input asp-for="TenantPositionLocation" class="form-control bg-light" readonly />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="TenantPositionFloor" class="control-label">Floor</label>
                                <input asp-for="TenantPositionFloor" class="form-control bg-light" readonly />
                            </div>
                        </div>
                    </div>
                    <hr />

                    <h6 class="text-primary text-uppercase small font-weight-bold">Occupant Assignment</h6>

                    <div class="form-group">
                        <label asp-for="TenantPositionAssignedTenantId" class="control-label font-weight-bold">Assign Tenant (Shop)</label>

                        @if (isCinema)
                        {
                            <input type="text" class="form-control" value="N/A (Reserved for Cinema)" disabled />
                        }
                        else
                        {
                            <select asp-for="TenantPositionAssignedTenantId"
                                    id="TenantPositionAssignedTenantId"
                                    class="form-control"
                                    asp-items="ViewBag.TenantList">
                                <option value="">-- VACANT (No Tenant) --</option>
                            </select>
                            <small class="form-text text-muted">Select a shop to assign to this unit.</small>
                        }
                    </div>

                    <h6 class="text-warning text-uppercase small font-weight-bold mt-3">Lease Contract Period</h6>
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <label asp-for="PositionLeaseStart" class="control-label">Start Date</label>
                                <input asp-for="PositionLeaseStart" class="form-control" type="date" readonly="@isCinema" />
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label asp-for="PositionLeaseEnd" class="control-label">End Date</label>
                                <input asp-for="PositionLeaseEnd" class="form-control" type="date" readonly="@isCinema" />
                            </div>
                        </div>
                    </div>
                    <hr />

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="TenantPositionAreaM2" class="control-label">Area (m²)</label>
                                <input asp-for="TenantPositionAreaM2" class="form-control" type="number"  readonly />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="TenantPositionRentPricePerM2" class="control-label">Rent Price (per m²)</label>
                                <div class="input-group">
                                    <input asp-for="TenantPositionRentPricePerM2" class="form-control" type="number" step="0.01" readonly="@isCinema" />
                                    <div class="input-group-append">
                                        <span class="input-group-text">VND</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <input type="hidden" asp-for="TenantPositionStatus" />

                    <div class="form-group mt-4">
                        @if (!isCinema)
                        {
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save"></i> Save Changes
                            </button>
                        }
                        <a asp-action="Index" class="btn btn-secondary btn-lg">Back to Map</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-info">Current Status</h6>
            </div>
            <div class="card-body text-center">
                <div class="mb-3">
                    @if (Model.TenantPositionAssignedCinemaId != null)
                    {
                        <i class="fas fa-film fa-4x text-dark mb-2"></i>
                        <h4 class="text-dark">CINEMA</h4>
                        <p class="badge badge-dark p-2">Mall Property</p>
                        <p><strong>@Model.TenantPositionAssignedCinema?.CinemaName</strong></p>
                    }
                    else if (Model.TenantPositionStatus == 1)
                    {
                        <i class="fas fa-store fa-4x text-primary mb-2"></i>
                        <h4 class="text-primary">Occupied</h4>
                        <p>Assigned to: <strong>@Model.TenantPositionAssignedTenant?.TenantName</strong></p>
                    }
                    else
                    {
                        <i class="fas fa-door-open fa-4x text-success mb-2"></i>
                        <h4 class="text-success">Vacant</h4>
                        <p>Ready for lease</p>
                    }
                </div>
                <div class="text-left small text-muted">
                    <hr>
                    <p class="mb-1"><strong>System Coordinates:</strong></p>
                    <ul class="list-unstyled">
                        <li>Left Pct: @Model.TenantPositionLeftPct%</li>
                        <li>Top Pct: @Model.TenantPositionTopPct%</li>
                    </ul>
                </div>
                
                @if (Model.PositionLeaseEnd.HasValue && Model.PositionLeaseEnd.Value <= DateTime.Now.AddDays(30) && Model.PositionLeaseEnd.Value > DateTime.Now)
                {
                    <div class="alert alert-warning mt-3 p-2">
                        <small><i class="fas fa-clock"></i> Lease expires soon!</small>
                        <form asp-action="SendReminders" method="post" class="mt-2">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.TenantPositionId" />
                            <button type="submit" class="btn btn-sm btn-outline-warning btn-block"
                                    onclick="return confirm('Send renewal reminder to @Model.TenantPositionAssignedTenant?.TenantName?');">
                                <i class="fas fa-paper-plane"></i> Send Reminder Email
                            </button>
                        </form>
                    </div>
                }
                @if (Model.TenantPositionStatus == 1 && Model.TenantPositionAssignedTenantId != null)
                {
                    if (!Model.PositionLeaseEnd.HasValue || Model.PositionLeaseEnd.Value >= DateTime.Now)
                    {
                        <hr />
                        <div class="alert alert-light border-warning">
                            <h6 class="font-weight-bold text-warning">Early Termination</h6>
                            <p class="small text-muted mb-2">Tenant leaving before contract end?</p>

                            <form asp-action="Evict" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@Model.TenantPositionId" />
                                <button type="submit" class="btn btn-outline-danger btn-block btn-sm"
                                        onclick="return confirm('CONFIRM: Tenant creates vacancy early?\n\nThis will remove the tenant and clear lease dates immediately.');">
                                    <i class="fas fa-user-slash"></i> Terminate Lease & Vacate
                                </button>
                            </form>
                        </div>
                    }
                }
                @if (Model.PositionLeaseEnd.HasValue && Model.PositionLeaseEnd.Value < DateTime.Now)
                {
                    <div class="card shadow mb-4 border-left-danger">
                        <div class="card-header py-3 bg-danger">
                            <h6 class="m-0 font-weight-bold text-white">
                                <i class="fas fa-exclamation-triangle"></i> EXPIRED ACTIONS
                            </h6>
                        </div>
                        <div class="card-body">
                            <div class="alert alert-danger text-center">
                                <strong>LEASE HAS EXPIRED!</strong><br />
                                Date: @Model.PositionLeaseEnd.Value.ToString("dd/MM/yyyy")
                                <br />
                                (@((DateTime.Now - Model.PositionLeaseEnd.Value).Days) days overdue)
                            </div>

                            <form asp-action="SendOverstayNotice" method="post" class="mb-2">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@Model.TenantPositionId" />
                                <button type="submit" class="btn btn-warning btn-block"
                                        onclick="return confirm('Send URGENT overstay notice to tenant?');">
                                    <i class="fas fa-bullhorn"></i> Send Penalty Notice
                                </button>
                            </form>

                            <hr />

                            <p class="small text-muted mb-1">If tenant agrees to stay:</p>
                            <button type="button" class="btn btn-success btn-block mb-2" onclick="$('#PositionLeaseEnd').focus();">
                                <i class="fas fa-file-contract"></i> Renew Contract
                            </button>

                            <p class="small text-muted mb-1">If tenant leaves or is evicted:</p>
                            <form asp-action="Evict" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@Model.TenantPositionId" />
                                <button type="submit" class="btn btn-danger btn-block"
                                        onclick="return confirm('DANGER: This will remove the tenant and set the unit to VACANT. Are you sure you want to EVICT this tenant?');">
                                    <i class="fas fa-user-times"></i> Evict / Vacate Unit
                                </button>
                            </form>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@ttskch/select2-bootstrap4-theme@@1.5.2/dist/select2-bootstrap4.min.css">

    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        $(document).ready(function() {
            // 3. Kích hoạt Select2 cho thẻ select tenant
            $('#TenantPositionAssignedTenantId').select2({
                theme: 'bootstrap4', // Sử dụng theme Bootstrap 4 cho đẹp
                width: '100%',       // Chiều rộng full
                placeholder: "-- Search & Select Tenant --",
                allowClear: true     // Cho phép xóa chọn về trống (Vacant)
            });

            function toggleLeaseInputs() {
                var tenantId = $('#TenantPositionAssignedTenantId').val();
                var $dateInputs = $('#PositionLeaseStart, #PositionLeaseEnd');

                if (tenantId && tenantId !== "") {
                    // Có Tenant -> Cho phép nhập ngày
                    $dateInputs.prop('disabled', false);
                    $dateInputs.removeClass('bg-light'); // Bỏ màu xám (nếu có)
                } else {
                    // Vacant -> Khóa và Xóa ngày
                    $dateInputs.prop('disabled', true);
                    $dateInputs.val(''); // Reset về rỗng
                    $dateInputs.addClass('bg-light'); // Thêm màu xám cho rõ
                }
            }

            // Gọi hàm ngay khi trang vừa load (để xử lý trạng thái ban đầu)
            toggleLeaseInputs();

            // Gọi hàm mỗi khi người dùng thay đổi dropdown Tenant
            $('#TenantPositionAssignedTenantId').on('change', function() {
                toggleLeaseInputs();
            });

        });
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}