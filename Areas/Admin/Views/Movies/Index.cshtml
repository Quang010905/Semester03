@model IEnumerable<Semester03.Models.Entities.TblMovie>

@{
    ViewData["Title"] = "Movie Management";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";

    int expiredCount = (int?)ViewData["ExpiredCount"] ?? 0;
    var today = DateTime.Now;
}

<h1 class="h3 mb-2 text-gray-800">Movie Management</h1>

@if (expiredCount > 0)
{
    <div class="alert alert-warning border-left-warning" role="alert">
        <i class="fas fa-exclamation-triangle mr-2"></i>
        <strong>Attention:</strong> There are <strong>@expiredCount</strong> movies that have passed their End Date but are still set to 'Available'. Please review and deactivate them.
    </div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Movie List</h6>
        <a asp-action="Create" class="btn btn-primary btn-sm">
            <i class="fas fa-plus fa-sm text-white-50"></i> Add New Movie
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th style="width: 80px;">Poster</th>
                        <th>Title / Genre</th>
                        <th>Duration</th>
                        <th>Release Period</th>
                        <th>Status (Click to Toggle)</th>
                        <th style="width: 100px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        // Check expiry logic for highlighting
                        bool isExpired = item.MovieEndDate < today;
                        string rowClass = (isExpired && item.MovieStatus == 1) ? "table-warning" : "";

                        <tr class="@rowClass">
                            <td class="text-center">
                                <img src="@Url.Content(string.IsNullOrEmpty(item.MovieImg) ? "~/Content/Uploads/noimage.png" : "~/Content/Uploads/Movies/" + item.MovieImg)"
                                     alt="@item.MovieTitle"
                                     style="width: 60px; height: 90px; object-fit: cover; border-radius: 4px;"
                                     onerror="this.onerror=null; this.src='/Content/Uploads/noimage.png';" />
                            </td>
                            <td>
                                <div class="font-weight-bold text-primary">@item.MovieTitle</div>
                                <div class="small text-muted">@item.MovieGenre</div>

                                @if (isExpired)
                                {
                                    <span class="badge badge-danger mt-1">Ended</span>
                                }
                            </td>
                            <td>@item.MovieDurationMin min</td>
                            <td>
                                <div style="font-size: 0.8rem;">
                                    Start: @item.MovieStartDate.ToString("dd/MM/yyyy") <br />
                                    End: <strong>@item.MovieEndDate.ToString("dd/MM/yyyy")</strong>
                                </div>
                            </td>
                            <td class="text-center align-middle" style="width: 120px;">
                                <form asp-action="ToggleStatus" asp-route-id="@item.MovieId" method="post">
                                    <input type="hidden" name="currentStatus" value="@item.MovieStatus" />

                                    @if (item.MovieStatus == 1)
                                    {
                                        <button type="submit" class="btn btn-success btn-sm" style="width: 90px;" title="Click to Deactivate">
                                            <i class="fas fa-check-circle"></i> Active
                                        </button>
                                    }
                                    else
                                    {
                                        <button type="submit" class="btn btn-secondary btn-sm" style="width: 90px;" title="Click to Activate">
                                            <i class="fas fa-times-circle"></i> Inactive
                                        </button>
                                    }
                                </form>
                            </td>
                            <td class="align-middle">
                                <a asp-action="Edit" asp-route-id="@item.MovieId" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i></a>
                                <a asp-action="Details" asp-route-id="@item.MovieId" class="btn btn-info btn-sm"><i class="fas fa-info-circle"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.MovieId" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
          $('#dataTable').DataTable({
              "order": [[ 3, "desc" ]] // Sort by Release Period
          });
        });
    </script>
}