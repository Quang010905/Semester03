@model Semester03.Models.Entities.TblScreen

@{
    ViewData["Title"] = "Screen Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="h3 mb-2 text-gray-800">Screen Details</h1>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">@Model.ScreenName</h6>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                Screen Name
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ScreenName)
            </dd>
            <dt class="col-sm-2">
                Total Seats
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ScreenSeats)
            </dd>
        </dl>
    </div>
    <div classs="card-footer" style="padding: 1.25rem;">
        <a asp-action="Edit" asp-route-id="@Model.ScreenId" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>