@model IEnumerable<Semester03.Models.Entities.TblScreen>

@{
    ViewData["Title"] = "Screen Management";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="h3 mb-2 text-gray-800">Screen Management</h1>
<p class="mb-4">Manage all cinema rooms for the mall multiplex.</p>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Screen</a>
</p>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Screen List</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Screen Name
                        </th>
                        <th>
                            Total Seats
                        </th>
                        <th>
                            Parent Cinema
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ScreenName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ScreenSeats)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ScreenCinema.CinemaName)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.ScreenId" class="btn btn-warning btn-sm">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.ScreenId" class="btn btn-info btn-sm">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.ScreenId" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Call the dataTables jQuery plugin
        $(document).ready(function() {
          $('#dataTable').DataTable();
        });
    </script>
}