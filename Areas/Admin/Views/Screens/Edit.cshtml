@model Semester03.Models.Entities.TblScreen

@{
    ViewData["Title"] = "Edit Screen";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="h3 mb-2 text-gray-800">Edit Screen</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">@Model.ScreenName</h6>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="ScreenId" />

                    <div class="form-group">
                        <label asp-for="ScreenName" class="control-label">Screen Name (e.g., "Room 1")</label>
                        <input asp-for="ScreenName" class="form-control" />
                        <span asp-validation-for="ScreenName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ScreenSeats" class="control-label">Total Seats</label>
                        <input asp-for="ScreenSeats" class="form-control" type="number" />
                        <span asp-validation-for="ScreenSeats" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>