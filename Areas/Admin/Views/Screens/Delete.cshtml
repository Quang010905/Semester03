@model Semester03.Models.Entities.TblScreen

@{
    ViewData["Title"] = "Delete Screen";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="h3 mb-2 text-gray-800">Delete Screen</h1>
<h3 class="text-danger">Are you sure you want to delete this?</h3>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">@Model.ScreenName</h6>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                Screen Name
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ScreenName)
            </dd>
            <dt class="col-sm-2">
                Total Seats
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ScreenSeats)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="ScreenId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>