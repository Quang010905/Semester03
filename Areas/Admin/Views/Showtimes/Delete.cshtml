@model Semester03.Models.Entities.TblShowtime

@{
    ViewData["Title"] = "Delete Showtime";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    bool hasDependencies = (ViewData["HasDependencies"] as bool?) ?? false;
}

<h1 class="h3 mb-2 text-gray-800">Delete Showtime</h1>

@if (hasDependencies)
{
    <div class="alert alert-danger">
        <h4 class="alert-heading">Cannot Delete Showtime!</h4>
        <p>@ViewData["ErrorMessage"]</p>
    </div>
}
else
{
    <h3 class="text-danger">Are you sure you want to delete this showtime?</h3>
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">@Model.ShowtimeMovie.MovieTitle</h6>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                Movie
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ShowtimeMovie.MovieTitle)
            </dd>
            <dt class="col-sm-2">
                Screen
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ShowtimeScreen.ScreenName)
            </dd>
            <dt class="col-sm-2">
                Start Time
            </dt>
            <dd class="col-sm-10">
                @Model.ShowtimeStart.ToString("F")
            </dd>
        </dl>

        @if (!hasDependencies)
        {
            <form asp-action="Delete">
                <input type="hidden" asp-for="ShowtimeId" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        }
        else
        {
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        }
    </div>
</div>