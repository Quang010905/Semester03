@model IEnumerable<Semester03.Models.Entities.TblShowtime>

@{
    ViewData["Title"] = "Showtime Management";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="h3 mb-2 text-gray-800">Showtime Management</h1>
<p class="mb-4">Schedule movies to play in specific screens.</p>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Showtime</a>
</p>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Showtime List</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Movie</th>
                        <th>Screen</th>
                        <th>Start Time</th>
                        <th>Price</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ShowtimeMovie.MovieTitle)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ShowtimeScreen.ScreenName)
                            </td>
                            <td>
                                @item.ShowtimeStart.ToString("g")
                            </td>
                            <td>
                                @item.ShowtimePrice.ToString("N0")
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.ShowtimeId" class="btn btn-warning btn-sm">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.ShowtimeId" class="btn btn-info btn-sm">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.ShowtimeId" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Call the dataTables jQuery plugin
        $(document).ready(function() {
          $('#dataTable').DataTable({
              "order": [[ 2, "desc" ]] // Order by Start Time descending
          });
        });
    </script>
}