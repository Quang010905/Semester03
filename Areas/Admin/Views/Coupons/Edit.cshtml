@model Semester03.Models.Entities.TblCoupon

@{
    ViewData["Title"] = "Edit Coupon";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="h3 mb-2 text-gray-800">Edit Coupon</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">@Model.CouponName</h6>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input type="hidden" asp-for="CouponId" />

                    <div class="form-group">
                        <label asp-for="CouponName" class="control-label">Coupon Name / Code</label>
                        <input asp-for="CouponName" class="form-control" />
                        <span asp-validation-for="CouponName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="CouponDiscountPercent" class="control-label">Discount (%)</label>
                        <input asp-for="CouponDiscountPercent" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="CouponDiscountPercent" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="CouponValidFrom" class="control-label">Valid From</label>
                                <input asp-for="CouponValidFrom" class="form-control" type="datetime-local" />
                                <span asp-validation-for="CouponValidFrom" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="CouponValidTo" class="control-label">Valid To</label>
                                <input asp-for="CouponValidTo" class="form-control" type="datetime-local" />
                                <span asp-validation-for="CouponValidTo" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="CouponDescription" class="control-label">Description</label>
                        <textarea asp-for="CouponDescription" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="CouponDescription" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="CouponMinimumPointsRequired" class="control-label">Minimum Points Required</label>
                        <input asp-for="CouponMinimumPointsRequired" class="form-control" type="number" min="0" />
                        <span asp-validation-for="CouponMinimumPointsRequired" class="text-danger"></span>
                        <small class="form-text text-muted">Leave empty if this coupon is free for everyone.</small>
                    </div>

                    <div class="form-group">
                        <label asp-for="CouponIsActive" class="control-label">Status</label>
                        <div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" asp-for="CouponIsActive" id="statusActive" value="true">
                                <label class="form-check-label" for="statusActive">Active</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" asp-for="CouponIsActive" id="statusInactive" value="false">
                                <label class="form-check-label" for="statusInactive">Inactive</label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>