@model Semester03.Models.Entities.TblCoupon

@{
    ViewData["Title"] = "Delete Coupon";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    bool hasDependencies = (ViewData["HasDependencies"] as bool?) ?? false;
}

<h1 class="h3 mb-2 text-gray-800">Delete Coupon</h1>

@if (hasDependencies)
{
    <div class="alert alert-danger">
        <h4 class="alert-heading">Cannot Delete Coupon!</h4>
        <p>@ViewData["ErrorMessage"]</p>
    </div>
}
else
{
    <h3 class="text-danger">Are you sure you want to delete this coupon?</h3>
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">@Model.CouponName</h6>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Coupon Name / Code</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CouponName)</dd>

            <dt class="col-sm-3">Discount</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CouponDiscountPercent)%</dd>
        </dl>

        @if (!hasDependencies)
        {
            <form asp-action="Delete">
                <input type="hidden" asp-for="CouponId" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        }
        else
        {
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        }
    </div>
</div>