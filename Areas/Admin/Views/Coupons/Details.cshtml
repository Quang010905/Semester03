@model Semester03.Models.Entities.TblCoupon

@{
    ViewData["Title"] = "Coupon Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="h3 mb-2 text-gray-800">Coupon Details</h1>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">@Model.CouponName</h6>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Coupon Name / Code</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CouponName)</dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CouponDescription)</dd>

            <dt class="col-sm-3">Discount</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CouponDiscountPercent)%</dd>

            <dt class="col-sm-3">Points Required</dt>
            <dd class="col-sm-9">
                @(Model.CouponMinimumPointsRequired.HasValue? Model.CouponMinimumPointsRequired.ToString() : "None (Free for all)")
            </dd>

            <dt class="col-sm-3">Valid From</dt>
            <dd class="col-sm-9">@Model.CouponValidFrom.ToString("g")</dd>

            <dt class="col-sm-3">Valid To</dt>
            <dd class="col-sm-9">@Model.CouponValidTo.ToString("g")</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">
                @if (Model.CouponIsActive == true)
                {
                    <span class="badge badge-success">Active</span>
                }
                else
                {

                    <span class="badge badge-secondary">Inactive</span>
                }
            </dd>
        </dl>
    </div>
    <div classs="card-footer" style="padding: 1.25rem;">
        <a asp-action="Edit" asp-route-id="@Model.CouponId" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>