@model IEnumerable<Semester03.Models.Entities.TblCoupon>

@{
    ViewData["Title"] = "Coupon Management";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var now = DateTime.Now;
}

<h1 class="h3 mb-2 text-gray-800">Coupon Management</h1>
<p class="mb-4">Manage discount codes and loyalty rewards.</p>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Create New Coupon</a>
</p>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Coupon List</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Code</th>
                        <th>Discount</th>
                        <th>Validity Period</th>
                        <th>Min Points</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        // Smart Status Logic
                        bool isActive = item.CouponIsActive ?? false;
                        bool isExpired = item.CouponValidTo < now;
                        bool isFuture = item.CouponValidFrom > now;

                        string statusLabel;
                        string statusClass;

                        if (!isActive) { statusLabel = "Inactive"; statusClass = "badge-secondary"; }
                        else if (isExpired) { statusLabel = "Expired"; statusClass = "badge-danger"; }
                        else if (isFuture) { statusLabel = "Scheduled"; statusClass = "badge-info"; }
                        else { statusLabel = "Active"; statusClass = "badge-success"; }

                        <tr>
                            <td class="font-weight-bold text-primary">
                                @item.CouponName
                                <button class="btn btn-link btn-sm p-0 ml-2" onclick="copyToClipboard('@item.CouponName')" title="Copy Code">
                                    <i class="far fa-copy"></i>
                                </button>
                            </td>
                            <td>@item.CouponDiscountPercent%</td>
                            <td style="font-size:0.85rem;">
                                @item.CouponValidFrom.ToString("dd/MM/yyyy") <br />
                                <i class="fas fa-arrow-down text-gray-400"></i> <br />
                                @item.CouponValidTo.ToString("dd/MM/yyyy")
                            </td>
                            <td>
                                @(item.CouponMinimumPointsRequired.HasValue? item.CouponMinimumPointsRequired + " pts" : "Free")
                            </td>
                            <td>
                                <span class="badge @statusClass p-2">@statusLabel</span>
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.CouponId" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i></a>
                                <a asp-action="Details" asp-route-id="@item.CouponId" class="btn btn-info btn-sm"><i class="fas fa-eye"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.CouponId" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
          $('#dataTable').DataTable({ "order": [[ 5, "asc" ]] }); // Sort by Status or Date
        });

        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(function() {
                alert('Copied: ' + text);
            }, function(err) {
                console.error('Async: Could not copy text: ', err);
            });
        }
    </script>
}