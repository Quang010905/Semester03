        width: 100%;
        padding: 10px 40px 10px 15px;
        border-radius: 25px;
        border: 1px solid #ccc;
        transition: 0.3s;
    }


    /* =========================================end search box's css======================================== */


</style>



<script>
document.addEventListener("DOMContentLoaded", () => {

    const tabs = document.querySelectorAll(".browser-tab");
    const partnerTab = tabs[0];
    const customerTab = tabs[1];
    const createTab = tabs[2] ; 
    const inactiveTab = document.querySelector(".undo-tab");

    const partnerContent = document.getElementById("partner-tab-content");
    const customerContent = document.getElementById("customer-tab-content");
    const createAccount = document.getElementById("create-account-tab-content")

    const inactiveContent = document.getElementById("inactive-tab-content"); // nếu có




        const password = document.getElementById("password");
    const confirmPassword = document.getElementById("confirmPassword");
    const errorText = document.getElementById("confirmPasswordError");










    // An toàn: nếu phần tử không tồn tại thì không làm gì
    function safeHide(el) { if (el) el.style.display = "none"; }
    function safeShow(el) { if (el) el.style.display = "block"; }

    function hideAllContent() {
        safeHide(partnerContent);
        safeHide(customerContent);
            safeHide(createAccount)
        safeHide(inactiveContent);
    }

    function deactivateAllTabs() {
        tabs.forEach(t => t.classList.remove("active"));
        if (inactiveTab) inactiveTab.classList.remove("active");
    }

    // Nếu tab tồn tại thì đăng ký sự kiện
    if (partnerTab) {
        partnerTab.addEventListener("click", (e) => {
            e.preventDefault();
            deactivateAllTabs();
            hideAllContent();

            partnerTab.classList.add("active");   // -> làm tab sáng lên (theo CSS .browser-tab.active)
            safeShow(partnerContent);
        });
    }

    if (customerTab) {
        customerTab.addEventListener("click", (e) => {
            e.preventDefault();
            deactivateAllTabs();
            hideAllContent();

           customerTab.classList.add("active");  // -> light up tab
            safeShow(customerContent);
        });
    }


        if (createTab) {
                    createTab.addEventListener("click", (e) => {
                e.preventDefault();
                deactivateAllTabs();
                hideAllContent();

                    createTab.classList.add("active");  // ->light up tab
                safeShow(createAccount);
            });
        }


    if (inactiveTab) {
        inactiveTab.addEventListener("click", (e) => {
            e.preventDefault();
            deactivateAllTabs();
            hideAllContent();

                inactiveTab.classList.add("active");   // ->light up tab
        });
    }

    deactivateAllTabs();
    hideAllContent();
    if (partnerTab) partnerTab.classList.add("active");
    safeShow(partnerContent);
});
</script>
