@{
    Layout = "/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="browser-tab-bar">
    <a href="#" class="browser-tab active">
        <span class="tab-icon">
            <i class="fa-solid fa-users"></i>
        </span>
        <span class="tab-title">Partner account</span>
    </a>

    <a href="#" class="browser-tab">
        <span class="tab-icon">
            <i class="fas fa-shopping-cart"></i>
        </span>
        <span class="tab-title">Customer account</span>
    </a>


    <a href="#" class="browser-tab">
        <span class="tab-icon"> 
            <i class="fas fa-user-plus"></i>
        </span>
        <span class="tab-title">Create Account</span>
    </a>


    <a href="#" class="undo-tab">
        <span class="tab-icon">
            <i class="fas fa-shopping-cart"></i>
        </span>
        <span class="tab-title">Inactive</span>
    </a>
</div>

<!-- TAB: CUSTOMER ACCOUNT -->
<div id="customer-tab-content" style="padding: 20px; display: none;">
    <h3>Customer Accounts</h3>
    <div class="search-container">
        <input type="text" placeholder="Search..." class="search-customer-input">
        <i class="fa fa-search search-icon"></i>
    </div>

    <table class="table table-bordered table-hover mt-3">
        <thead>
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Fullname</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Points</th>
                <th>Created</th>
                <th class="text-center" >Action</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var c in ViewBag.Customers)
            {
                <tr>
                    <td>@c.Id</td>
                    <td>@c.Username</td>
                    <td>@c.FullName</td>
                    <td>@c.Email</td>
                    <td>@c.Phone</td>
                    <td>@c.Point</td>
                    <td>@c.CreatedAt.ToString("dd/MM/yyyy")</td>
                    <td class="text-center">
                        <span class="status-dot @(c.Status == 1 ? "active-dot" : "inactive-dot")"></span>

                        <div class="btn-group">
                            <a href="@Url.Action("Edit","Users",new{area="Admin"})"
                               class="btn btn-primary btn-sm">
                                Edit
                            </a>
                            <a href="@Url.Action("ResetPassword","User",new{id=c.Id, area="Admin"})"
                               class="btn btn-warning btn-sm">
                                Reset
                            </a>
                        </div>
                    </td>


                </tr>
            }
        </tbody>
    </table>
</div>










