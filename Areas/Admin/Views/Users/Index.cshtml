@{
    Layout = "/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="browser-tab-bar">
    <a href="#" class="browser-tab active">
        <span class="tab-icon">
            <i class="fa-solid fa-users"></i>
        </span>
        <span class="tab-title">Partner account</span>
    </a>

    <a href="#" class="browser-tab">
        <span class="tab-icon">
            <i class="fas fa-shopping-cart"></i>
        </span>
        <span class="tab-title">Customer account</span>
    </a>
    <a href="#" class="undo-tab">
        <span class="tab-icon">
            <i class="fas fa-shopping-cart"></i>
        </span>
        <span class="tab-title">Inactive</span>
    </a>
</div>

<!-- TAB: CUSTOMER ACCOUNT -->
<div id="customer-tab-content" style="padding: 20px; display: none;">
    <h3>Customer Accounts</h3>
    <div class="search-container">
        <input type="text" placeholder="Search..." class="search-customer-input">
        <i class="fa fa-search search-icon"></i>
    </div>

    <table class="table table-bordered table-hover mt-3">
        <thead>
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Fullname</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Points</th>
                <th>Created</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var c in ViewBag.Customers)
            {
                <tr>
                    <td>@c.Id</td>
                    <td>@c.Username</td>
                    <td>@c.FullName</td>
                    <td>@c.Email</td>
                    <td>@c.Phone</td>
                    <td>@c.Point</td>
                    <td>@c.CreatedAt.ToString("dd/MM/yyyy")</td>
                </tr>
            }
        </tbody>
    </table>
</div>










<!-- TAB: PARTNER ACCOUNT -->
<div id="partner-tab-content" style="padding: 20px; display: none;">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 15px;">
        <h3>Partner Accounts</h3>

        <button class="btn btn-primary">
            Tenant
        </button>
    </div>
    <div class="search-container">
        <input type="text" placeholder="Search..." class="search-partner-input">
        <i class="fa fa-search search-icon"></i>
    </div>

    <table class="table table-bordered table-hover mt-3">
        <thead>
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Fullname</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Points</th>
                <th>Created</th>
                <th>Action</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var c in ViewBag.Partner)
            {
                <tr>
                    <td>@c.Id</td>
                    <td>@c.Username</td>
                    <td>@c.FullName</td>
                    <td>@c.Email</td>
                    <td>@c.Phone</td>
                    <td>@c.Point</td>
                    <td>@c.CreatedAt.ToString("dd/MM/yyyy")</td>
                </tr>
            }
        </tbody>
    </table>
</div>


















<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        background-color: #f1f3f4; 
    }

    



    /* =========================================tab's css========================================= */
    .browser-tab-bar {
        display: flex;
        align-items: flex-end; /* Quan trọng để các tab "dính" vào đường phân cách dưới */
        height: 40px; /* Chiều cao tổng thể của thanh tab */
        padding-left: 5px;
        background-color: #e8eaed; /* Màu nền của thanh công cụ bên dưới tab */
        border-bottom: 1px solid #c2c3c5;
    }

    .undo-tab {
        display: flex;
        align-items: center;
        text-decoration: none;
        color: #3c4043;
        font-size: 13px;
        height: 34px; /* Chiều cao tab */
        padding: 0 10px 0 8px; /* Padding để căn chỉnh nội dung */
        margin-left: auto;
        margin-right: 0;
        background-color: #e8eaed; /* Màu nền tab không hoạt động */
        /* Tạo hình dạng giống tab Chrome (dạng hình thang/bo góc) */
        border-radius: 8px 8px 0 0; /* Bo góc trên */
        border: 1px solid transparent;
        border-bottom: none;
    }

    .undo-tab.active {
        background-color: #ff6262 ; 
            /* Màu trắng cho tab đang hoạt động */
        color: #202124;
        z-index: 2; /* Đặt tab hoạt động lên trên cùng */
        height: 35px; /* Cao hơn 1px để che đi đường border dưới */
        border: 1px solid #c2c3c5;
        border-bottom: 1px solid #fff; /* Màu trắng để che đường border dưới của thanh tab */
    }




    /* Kiểu dáng chung cho một tab */
    .browser-tab {
        display: flex;
        align-items: center;
        text-decoration: none;
        color: #3c4043;
        font-size: 13px;
        height: 34px; /* Chiều cao tab */
        padding: 0 10px 0 8px; /* Padding để căn chỉnh nội dung */
        margin-right: -5px; /* Quan trọng: làm cho các tab chồng lên nhau một chút */
        position: relative;
        z-index: 1; /* Các tab sẽ chồng lên nhau theo Z-index */
        background-color: #e8eaed; /* Màu nền tab không hoạt động */
        /* Tạo hình dạng giống tab Chrome (dạng hình thang/bo góc) */
        border-radius: 8px 8px 0 0; /* Bo góc trên */
        border: 1px solid transparent;
        border-bottom: none;
        /* Thiết lập hình dáng hình thang/bo góc phức tạp hơn */
        /* Có thể dùng clip-path: polygon(0 0, 100% 0, 100% 100%, 0 100%); để cắt góc nếu cần */
    }

        .browser-tab.active {
            background-color: #fff; /* Màu trắng cho tab đang hoạt động */
            color: #202124;
            z-index: 2; /* Đặt tab hoạt động lên trên cùng */
            height: 35px; /* Cao hơn 1px để che đi đường border dưới */
            border: 1px solid #c2c3c5;
            border-bottom: 1px solid #fff; /* Màu trắng để che đường border dưới của thanh tab */
        }

    /* Icon (Ví dụ: favicon) */
    .tab-icon {
        width: 16px;
        height: 16px;
        margin-right: 8px;
        border-radius: 2px;
    }

    /* Tiêu đề tab */
    .tab-title {
        max-width: 150px; /* Giới hạn chiều rộng để tiêu đề không quá dài */
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis; /* Hiển thị dấu ... khi tiêu đề quá dài */
    }

    /* =========================================end tab's css========================================= */



    /* =========================================search box's css======================================== */


    .search-container {
        position: relative;
        width: 280px;
    }

    .search-partner-input {
        width: 100%;
        padding: 10px 40px 10px 15px;
        border-radius: 25px;
        border: 1px solid #ccc;
        transition: 0.3s;
    }

        .search-input:focus {
            border-color: #4e73df;
            box-shadow: 0 0 5px rgba(78,115,223,0.5);
        }

    .search-icon {
        position: absolute;
        right: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: #888;
    }

    .search-customer-input {
        width: 100%;
        padding: 10px 40px 10px 15px;
        border-radius: 25px;
        border: 1px solid #ccc;
        transition: 0.3s;
    }


    /* =========================================end search box's css======================================== */



   </style>
<script>
document.addEventListener("DOMContentLoaded", () => {

    const tabs = document.querySelectorAll(".browser-tab");
    const partnerTab = tabs[0];
    const customerTab = tabs[1];
    const inactiveTab = document.querySelector(".undo-tab");

    const partnerContent = document.getElementById("partner-tab-content");
    const customerContent = document.getElementById("customer-tab-content");
    // const inactiveContent = document.getElementById("inactive-tab-content"); // nếu có

    // An toàn: nếu phần tử không tồn tại thì không làm gì
    function safeHide(el) { if (el) el.style.display = "none"; }
    function safeShow(el) { if (el) el.style.display = "block"; }

    function hideAllContent() {
        safeHide(partnerContent);
        safeHide(customerContent);
        // safeHide(inactiveContent);
    }

    function deactivateAllTabs() {
        tabs.forEach(t => t.classList.remove("active"));
        if (inactiveTab) inactiveTab.classList.remove("active");
    }

    // Nếu tab tồn tại thì đăng ký sự kiện
    if (partnerTab) {
        partnerTab.addEventListener("click", (e) => {
            e.preventDefault();
            deactivateAllTabs();
            hideAllContent();

            partnerTab.classList.add("active");   // -> làm tab sáng lên (theo CSS .browser-tab.active)
            safeShow(partnerContent);
        });
    }

    if (customerTab) {
        customerTab.addEventListener("click", (e) => {
            e.preventDefault();
            deactivateAllTabs();
            hideAllContent();

            customerTab.classList.add("active");  // -> làm tab sáng lên
            safeShow(customerContent);
        });
    }

    if (inactiveTab) {
        inactiveTab.addEventListener("click", (e) => {
            e.preventDefault();
            deactivateAllTabs();
            hideAllContent();

            inactiveTab.classList.add("active");  // -> .undo-tab.active sẽ hiển thị màu đỏ theo CSS
            // safeShow(inactiveContent); // bỏ ra nếu bạn có nội dung inactive
        });
    }

    // Mặc định khi load: hiển thị Partner và đánh active
    deactivateAllTabs();
    hideAllContent();
    if (partnerTab) partnerTab.classList.add("active");
    safeShow(partnerContent);
});
</script>
