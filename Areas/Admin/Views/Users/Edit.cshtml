@model Semester03.Models.Entities.TblUser
@{
    Layout = "/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div style="padding:20px;">
    <h3>Edit User Information</h3>

    @* Hiển thị validation summary nếu có lỗi *@
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        </div>
    }

    @* Hiển thị thông báo thành công nếu có *@
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <form asp-area="Admin" asp-controller="Users" asp-action="Edit" method="post" class="mt-3">
        @Html.AntiForgeryToken()

        @* Hidden field để giữ UsersId *@
        <input type="hidden" asp-for="UsersId" />
        <input type="hidden" asp-for="UsersCreatedAt" />
        <input type="hidden" asp-for="UsersPassword" />
        <input type="hidden" name="UsersRole" value="" />

        <div class="row g-3">

            <!-- LEFT COLUMN -->
            <div class="col-md-8">

                <div class="mb-3">
                    <label asp-for="UsersUsername" class="form-label">Username</label>
                    <input asp-for="UsersUsername" type="text" class="form-control" placeholder="Enter username">
                    <span asp-validation-for="UsersUsername" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="UsersFullName" class="form-label">Full Name</label>
                    <input asp-for="UsersFullName" type="text" class="form-control" placeholder="Enter full name">
                    <span asp-validation-for="UsersFullName" class="text-danger"></span>
                </div>

                <div class="row g-2">
                    <div class="col-md-6 mb-3">
                        <label asp-for="UsersEmail" class="form-label">Email</label>
                        <input asp-for="UsersEmail" type="email" class="form-control" placeholder="Enter email">
                        <span asp-validation-for="UsersEmail" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="UsersPhone" class="form-label">Phone</label>
                        <input asp-for="UsersPhone" type="text" class="form-control" placeholder="Enter phone number">
                        <span asp-validation-for="UsersPhone" class="text-danger"></span>
                    </div>
                </div>

                <div class="row g-2">
                    <div class="col-md-6 mb-3">
                        <label asp-for="UsersPoints" class="form-label">Points</label>
                        <input asp-for="UsersPoints" type="number" class="form-control" min="0" placeholder="0">
                        <span asp-validation-for="UsersPoints" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label d-block">Status</label>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" asp-for="UsersStatus" id="statusActive" value="1">
                            <label class="form-check-label" for="statusActive">Active</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" asp-for="UsersStatus" id="statusInactive" value="0">
                            <label class="form-check-label" for="statusInactive">Inactive</label>
                        </div>
                    </div>
                </div>

                <div class="row g-2">
                    <div class="col-md-6 mb-3">
                        <label asp-for="UsersRoleId" class="form-label">Role</label>
                        <select asp-for="UsersRoleId" class="form-select" asp-items="@ViewBag.Roles">
                            <option value="">-- Select Role --</option>
                        </select>
                        <span asp-validation-for="UsersRoleId" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="UsersRoleChangeReason" class="form-label">Change Role Reason</label>
                        <input asp-for="UsersRoleChangeReason" type="text" class="form-control" placeholder="Enter reason (optional)">
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Created At</label>
                    <input type="text" class="form-control" value="@Model.UsersCreatedAt?.ToString("dd/MM/yyyy HH:mm")" readonly>
                </div>

                @if (Model.UsersUpdatedAt.HasValue)
                {
                    <div class="mb-3">
                        <label class="form-label">Last Updated At</label>
                        <input type="text" class="form-control" value="@Model.UsersUpdatedAt?.ToString("dd/MM/yyyy HH:mm")" readonly>
                    </div>
                }

            </div>

            <!-- RIGHT COLUMN -->
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center">

                        <h6 class="text-muted">Actions</h6>
                        <p class="small text-muted">
                            Review changes carefully before saving.
                        </p>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i> Save Changes
                            </button>
                            <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-1"></i> Cancel
                            </a>
                        </div>

                    </div>
                </div>

                <!-- User Info Card -->
                <div class="card shadow-sm mt-3">
                    <div class="card-body">
                        <h6 class="text-muted mb-3">User Information</h6>
                        <div class="mb-2">
                            <small class="text-muted">User ID:</small>
                            <strong class="d-block">#@Model.UsersId</strong>
                        </div>
                        <div class="mb-2">
                            <small class="text-muted">Current Role:</small>
                            <strong class="d-block">@ViewBag.Roles?.SelectedValue</strong>
                        </div>
                        <div>
                            <small class="text-muted">Account Status:</small>
                            <span class="badge @(Model.UsersStatus == 1 ? "bg-success" : "bg-danger")">
                                @(Model.UsersStatus == 1 ? "Active" : "Inactive")
                            </span>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Auto-dismiss success message after 3 seconds
        setTimeout(function() {
            $('.alert-success').fadeOut('slow');
        }, 3000);
    </script>
}

<style>
    .form-label {
        font-weight: 500;
        margin-bottom: 0.5rem;
    }

    .card {
        border: none;
        border-radius: 8px;
    }

    .card-body {
        padding: 1.25rem;
    }

    .btn {
        border-radius: 6px;
        padding: 0.5rem 1rem;
        font-weight: 500;
    }

    .form-control:focus,
    .form-select:focus {
        border-color: #4e73df;
        box-shadow: 0 0 0 0.2rem rgba(78, 115, 223, 0.25);
    }

    .alert {
        border-radius: 8px;
        border: none;
    }
</style>