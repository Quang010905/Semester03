@{
    Layout = "/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section headerContent
{
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/2018.3.1017/styles/kendo.common-material.min.css" />
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/2018.3.1017/styles/kendo.material.min.css" />
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/2018.3.1017/styles/kendo.material.mobile.min.css" />
}

<div style="margin-left:20px; margin-right: 50px">
    <h2>Edit Tenant</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    @if (ViewBag.itemTenant != null)
    {
        Semester03.Areas.Admin.Models.Tenant tenant =
        (Semester03.Areas.Admin.Models.Tenant)ViewBag.itemTenant;

        <form action="@Url.Action("UpdateTenant", "Tenant")" method="post" enctype="multipart/form-data">
            <div class="form-group mb-3">
                <label>Tenant Name</label>
                <input type="text" class="form-control" name="TenantName" value="@tenant.Name" style="width: 300px;" required />
            </div>
            <input type="hidden" value="@tenant.UserId" name="UserId"/>
            <input type="hidden" value="@tenant.Id" name="TenantId" />
            <div class="form-group mb-3">
                <label for="upFile">Image</label>
                <img src="@Url.Content("~/Content/Uploads/Tenant/" + tenant.Image)" style="max-width: 200px; max-height: 200px; display: block; margin-bottom: 10px;" />
                <input type="file" class="form-control-file" id="upFile" name="upFile" />
                <input type="hidden" name="OldImage" value="@tenant.Image" />
            </div>

            <div>
                <label>Description</label>
                <textarea id="Description" name="Description"> @Html.Raw(tenant.Description)</textarea>
            </div>

            @{
                var currentTenantTypeId = tenant.TypeId;
            }

            <!-- Combobox Tenant Type -->
            <div class="form-group mb-3">
                <label>Tenant Type</label>
                <select class="form-control" name="TenantTypeId" id="TenantTypeId" style="width: 300px;">
                    <option value="0">-- Select TenantType --</option>
                    @if (ViewBag.listTenantType != null)
                    {
                        var ls = (List<Semester03.Areas.Admin.Models.TenantType>)ViewBag.listTenantType;
                        foreach (var item in ls)
                        {
                            if (item.Id == currentTenantTypeId)
                            {
                                <option value="@item.Id" selected="selected">@item.Name</option>
                            }
                            else
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        }
                    }
                </select>
            </div>

            <div class="form-group mb-3">
                <label>Status</label><br />
                <input type="checkbox" name="TenantStatus" value="1" @(tenant.Status == 1 ? "checked" : "") />
                <label class="form-check-label" for="Active">Enable</label>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save</button>
                <a href="@Url.Action("CreateTenant", "Tenant", new{id = tenant.UserId})" class="btn btn-secondary">Back</a>
            </div>
        </form>
    }
</div>
    

@section scripts
{
    <script src="https://kendo.cdn.telerik.com/2018.3.1017/js/jquery.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2018.3.1017/js/kendo.all.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var editor = $("#Description").kendoEditor({
                tools: [
                    "bold","italic","underline","strikethrough",
                    "justifyLeft","justifyCenter","justifyRight","justifyFull",
                    "insertUnorderedList","insertOrderedList","indent","outdent",
                    "createLink","unlink","insertImage","insertFile",
                    "subscript","superscript","tableWizard","addRowAbove",
                    "addRowBelow","addColumnLeft","addColumnRight","deleteRow",
                    "deleteColumn","viewHtml","formatting","cleanFormatting",
                    "fontName","fontSize","foreColor","backColor","print"
                ]
            }).data("kendoEditor");
        });
    </script>
}
