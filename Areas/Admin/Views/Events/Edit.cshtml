@model Semester03.Models.Entities.TblEvent

@{
    ViewData["Title"] = "Edit Event";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="h3 mb-2 text-gray-800">Edit Event</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">@Model.EventName</h6>
            </div>
            <div class="card-body">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input type="hidden" asp-for="EventId" />
                    <input type="hidden" asp-for="EventImg" /> <div class="form-group">
                        <label asp-for="EventName" class="control-label">Event Name</label>
                        <input asp-for="EventName" class="form-control" />
                        <span asp-validation-for="EventName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="control-label">New Event Image (Optional)</label>
                        <br />
                        <img id="imagePreview"
                             src="@(string.IsNullOrEmpty(Model.EventImg) ? "~/Content/Uploads/noimage.png" : "/Content/Uploads/Events/" + Model.EventImg)"
                             alt="Current Image"
                             style="max-width: 200px; border-radius: 5px; margin-bottom: 10px;" onerror="this.onerror=null; this.src='/Content/Uploads/noimage.png';" />

                        <input type="file" name="imageFile" id="imageFile" class="form-control" accept="image/*" />
                        <span asp-validation-for="EventImg" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="EventTenantPositionId" class="control-label">Location</label>
                        <select asp-for="EventTenantPositionId" class="form-control" asp-items="@ViewBag.PositionList"></select>
                        <span asp-validation-for="EventTenantPositionId" class="text-danger"></span>
                    </div>

                    <div class.row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="EventStart" class="control-label">Start Time</label>
                                <input asp-for="EventStart" class="form-control" type="datetime-local" />
                                <span asp-validation-for="EventStart" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="EventEnd" class="control-label">End Time</label>
                                <input asp-for="EventEnd" class="form-control" type="datetime-local" />
                                <span asp-validation-for="EventEnd" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="EventMaxSlot" class="control-label">Max Slots (Capacity)</label>
                        <input asp-for="EventMaxSlot" class="form-control" type="number" />
                        <span asp-validation-for="EventMaxSlot" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="EventDescription" class="control-label">Description</label>
                        <textarea asp-for="EventDescription" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="EventDescription" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="EventStatus" class="control-label">Status</label>
                        <div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" asp-for="EventStatus" id="statusActive" value="1">
                                <label class="form-check-label" for="statusActive">Active</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" asp-for="EventStatus" id="statusInactive" value="0">
                                <label class="form-check-label" for="statusInactive">Inactive</label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Image preview script
        document.getElementById('imageFile').addEventListener('change', function(event) {
            var preview = document.getElementById('imagePreview');
            // ... (rest of image preview JS)
            if (event.target.files && event.target.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    preview.src = e.target.result;
                    preview.style.display = 'block';
                };
                reader.readAsDataURL(event.target.files[0]);
            }
        });
    </script>
}