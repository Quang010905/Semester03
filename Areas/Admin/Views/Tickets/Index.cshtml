@model IEnumerable<Semester03.Models.Entities.TblTicket>

@{
    ViewData["Title"] = "Sold Ticket Management";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="h3 mb-2 text-gray-800">Sold Ticket Management</h1>
<p class="mb-4">Lookup and manage all tickets sold through the system.</p>
@if (ViewData["ShowtimeFilter"] != null)
{
    <p>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to All Tickets
        </a>
    </p>
}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Sold Ticket List</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Ticket ID</th>
                        <th>Movie</th>
                        <th>Screen</th>
                        <th>Seat</th>
                        <th>Buyer</th>
                        <th>Price</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.TicketId</td>
                            <td>
                                @item.TicketShowtimeSeat?.ShowtimeSeatShowtime?.ShowtimeMovie?.MovieTitle
                            </td>
                            <td>
                                @item.TicketShowtimeSeat?.ShowtimeSeatShowtime?.ShowtimeScreen?.ScreenName
                            </td>
                            <td>
                                @item.TicketShowtimeSeat?.ShowtimeSeatSeat?.SeatLabel
                            </td>
                            <td>
                                @item.TicketBuyerUser?.UsersFullName
                            </td>
                            <td>
                                @item.TicketPrice.ToString("N0")
                            </td>
                            <td>
                                @if (item.TicketStatus.ToLower() == "sold")
                                {
                                    <span class="badge badge-success">@item.TicketStatus</span>
                                }
                                else
                                {
                                    <span class="badge badge-secondary">@item.TicketStatus</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.TicketId" class="btn btn-info btn-sm">Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Call the dataTables jQuery plugin
        $(document).ready(function() {
          $('#dataTable').DataTable({
              "order": [[ 0, "desc" ]] // Order by Ticket ID descending
          });
        });
    </script>
}