@model Semester03.Models.Entities.TblTicket

@{
    ViewData["Title"] = "Ticket Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="h3 mb-2 text-gray-800">Ticket Details: #@Model.TicketId</h1>

<div class="row">
    <div class="col-lg-7">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Ticket Information</h6>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Ticket ID</dt>
                    <dd class="col-sm-9">@Model.TicketId</dd>

                    <dt class="col-sm-3">Status</dt>
                    <dd class="col-sm-9">
                        @if (Model.TicketStatus.ToLower() == "sold")
                        {
                            <span class="badge badge-success">@Model.TicketStatus</span>
                        }
                        else
                        {
                            <span class="badge badge-secondary">@Model.TicketStatus</span>
                        }
                    </dd>

                    <dt class="col-sm-3">Price</dt>
                    <dd class="col-sm-9">@Model.TicketPrice.ToString("N0") VND</dd>

                    <dt class="col-sm-3">Purchased At</dt>
                    <dd class="col-sm-9">@Model.TicketCreatedAt</dd>
                </dl>
            </div>
        </div>
    </div>
    <div class="col-lg-5">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Buyer Details</h6>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Full Name</dt>
                    <dd class="col-sm-8">@Model.TicketBuyerUser?.UsersFullName</dd>

                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8">@Model.TicketBuyerUser?.UsersEmail</dd>

                    <dt class="col-sm-4">Phone</dt>
                    <dd class="col-sm-8">@Model.TicketBuyerUser?.UsersPhone</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Showtime & Seat Details</h6>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">Movie</dt>
            <dd class="col-sm-10">@Model.TicketShowtimeSeat?.ShowtimeSeatShowtime?.ShowtimeMovie?.MovieTitle</dd>

            <dt class="col-sm-2">Showtime</dt>
            <dd class="col-sm-10">@Model.TicketShowtimeSeat?.ShowtimeSeatShowtime?.ShowtimeStart.ToString("F")</dd>

            <dt class="col-sm-2">Screen</dt>
            <dd class="col-sm-10">@Model.TicketShowtimeSeat?.ShowtimeSeatShowtime?.ShowtimeScreen?.ScreenName</dd>

            <dt class="col-sm-2">Seat</dt>
            <dd class="col-sm-10">@Model.TicketShowtimeSeat?.ShowtimeSeatSeat?.SeatLabel</dd>
        </dl>
    </div>
    <div classs="card-footer" style="padding: 1.25rem;">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        @if (Model.TicketStatus.ToLower() == "sold")
        {
            <form asp-action="Cancel" asp-route-id="@Model.TicketId" method="post">
                <button type.Submit() class="btn btn-danger"
                        onclick="return confirm('Are you sure you want to cancel this ticket and refund the customer? This action cannot be undone.')">
                    <i class="fas fa-times"></i> Cancel Ticket
                </button>
            </form>
        }
    </div>
</div>