@model IEnumerable<Semester03.Models.Entities.TblEventBooking>

@{
    ViewData["Title"] = "Event Booking Management";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="h3 mb-2 text-gray-800">Event Booking Management</h1>
<p class="mb-4">View all event bookings made by customers.</p>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Booking List</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Event</th>
                        <th>Customer</th>
                        <th>Date</th>
                        <th>Qty</th>
                        <th>Total</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.EventBookingId</td>
                            <td>@item.EventBookingEvent?.EventName</td>
                            <td>@item.EventBookingUser?.UsersFullName</td>

                            <td>
                                @item.EventBookingDate?.ToString("dd/MM")
                            </td>
                            <td>
                                @item.EventBookingQuantity
                            </td>
                            <td>
                                @item.EventBookingTotalCost?.ToString("N0")
                            </td>
                            <td>
                                @if (item.EventBookingPaymentStatus == 1)
                                {
                                    <span class="badge badge-success">Paid</span>
                                }
                                else if (item.EventBookingPaymentStatus == 2)
                                {
                                    <span class="badge badge-info">Free</span>
                                }
                                else
                                {
                                    <span class="badge badge-warning">Unpaid</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.EventBookingId" class="btn btn-info btn-sm">Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
          $('#dataTable').DataTable({"order": [[ 0, "desc" ]]});
        });
    </script>
}