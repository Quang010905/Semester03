@model IEnumerable<Semester03.Models.Entities.TblEventBooking>

@{
    ViewData["Title"] = ViewData["Title"];
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";

    bool isFiltered = ViewData["EventFilter"] != null;
}

<h1 class="h3 mb-4 text-gray-800">@ViewData["Title"]</h1>

<div class="card mb-4 border-bottom-primary">
    <div class="card-body">
        <form method="get" class="form-inline">
            <label class="mr-2 font-weight-bold text-gray-700">Select Event to Manage:</label>
            <select name="eventId" class="form-control mr-2" onchange="this.form.submit()" asp-items="ViewBag.EventList">
                <option value="">-- View All Bookings --</option>
            </select>
            <noscript><button type="submit" class="btn btn-primary">Filter</button></noscript>
        </form>
    </div>
</div>

@if (isFiltered)
{
    <div class="row mb-4">
        <div class="col-xl-6 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Occupancy (Tickets Sold)</div>
                            <div class="row no-gutters align-items-center">
                                <div class="col-auto">
                                    <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">
                                        @ViewData["SoldSlots"] / @ViewData["MaxSlots"]
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="progress progress-sm mr-2">
                                        <div class="progress-bar bg-info" role="progressbar"
                                             style="width: @ViewData["Occupancy"]%"
                                             aria-valuenow="@ViewData["Occupancy"]" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="mt-2 small text-gray-600">Fill Rate: <strong>@ViewData["Occupancy"]%</strong></div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-6 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Total Revenue</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @(((decimal)ViewData["Revenue"]).ToString("N0")) VND
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Guest List</h6>
        @if (isFiltered)
        {
            <span class="badge badge-secondary">Filtered View</span>
        }
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead class="thead-light">
                    <tr>
                        <th>ID</th>
                        @if (!isFiltered)
                        {
                            <th>Event Name</th>
                        }
                        <th>Customer Info</th>
                        <th>Date</th>
                        <th>Qty</th>
                        <th>Total</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.EventBookingId</td>

                            @if (!isFiltered)
                            {
                                <td><span class="font-weight-bold text-primary">@item.EventBookingEvent?.EventName</span></td>
                            }

                            <td>
                                <strong>@item.EventBookingUser?.UsersFullName</strong><br />
                                <small class="text-muted">@item.EventBookingUser?.UsersPhone</small><br />
                                <small class="text-muted">@item.EventBookingUser?.UsersEmail</small>
                            </td>

                            <td>@item.EventBookingDate?.ToString("dd/MM")</td>

                            <td class="text-center">
                                <span class="badge badge-light border">@item.EventBookingQuantity</span>
                            </td>

                            <td>@item.EventBookingTotalCost?.ToString("N0")</td>

                            <td>
                                @if (item.EventBookingPaymentStatus == 1)
                                {
                                    <span class="badge badge-success"><i class="fas fa-check-circle"></i> Paid</span>
                                }
                                else if (item.EventBookingPaymentStatus == 2)
                                {
                                    <span class="badge badge-info">Free</span>
                                }
                                else if (item.EventBookingPaymentStatus == 3)
                                {
                                    <span class="badge badge-danger">Cancelled</span>
                                }
                                else
                                {
                                    <span class="badge badge-warning">Unpaid</span>
                                }
                            </td>

                            <td>
                                <a asp-action="Details" asp-route-id="@item.EventBookingId" class="btn btn-info btn-sm shadow-sm">
                                    <i class="fas fa-eye"></i> View
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
          $('#dataTable').DataTable({
              "order": [[ 0, "desc" ]]
          });
        });
    </script>
}